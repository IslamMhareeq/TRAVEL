@{
    ViewData["Title"] = "My Bookings";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Bookings - TRAVEL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-success-muted: rgba(63, 185, 80, 0.15);
            --color-warning: #d29922;
            --color-warning-muted: rgba(210, 153, 34, 0.15);
            --color-error: #f85149;
            --color-error-muted: rgba(248, 81, 73, 0.15);
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
            min-height: 100vh;
        }

        .header {
            padding: var(--space-4) var(--space-6);
            background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .back-link {
            color: var(--color-silver);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .back-link:hover {
                color: var(--color-gold);
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--space-6);
        }

        .page-title {
            font-family: var(--font-display);
            font-size: 2rem;
            margin-bottom: var(--space-5);
        }

        .bookings-grid {
            display: grid;
            gap: var(--space-4);
        }

        .booking-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
            display: grid;
            grid-template-columns: 200px 1fr auto;
        }

        .booking-image {
            width: 200px;
            height: 160px;
            object-fit: cover;
        }

        .booking-info {
            padding: var(--space-5);
        }

        .booking-destination {
            font-family: var(--font-display);
            font-size: 1.375rem;
            margin-bottom: 8px;
        }

        .booking-meta {
            display: flex;
            gap: var(--space-5);
            color: var(--color-silver);
            font-size: 0.875rem;
            margin-bottom: 12px;
        }

            .booking-meta span {
                display: flex;
                align-items: center;
                gap: 6px;
            }

        .status-badge {
            display: inline-flex;
            padding: 4px 12px;
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 500;
        }

            .status-badge.confirmed {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .status-badge.pending {
                background: var(--color-warning-muted);
                color: var(--color-warning);
            }

            .status-badge.cancelled {
                background: var(--color-error-muted);
                color: var(--color-error);
            }

        .booking-actions {
            padding: var(--space-5);
            display: flex;
            flex-direction: column;
            gap: 8px;
            justify-content: center;
            border-left: 1px solid var(--color-slate);
        }

        .btn {
            padding: 10px 20px;
            border-radius: var(--radius-md);
            font-family: var(--font-body);
            font-size: 0.875rem;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            border: none;
            transition: all var(--transition-fast);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-mist);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .empty-state {
            text-align: center;
            padding: 60px;
            color: var(--color-silver);
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: 20px;
                opacity: 0.5;
            }

        .loading {
            display: flex;
            justify-content: center;
            padding: 60px;
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 768px) {
            .booking-card {
                grid-template-columns: 1fr;
            }

            .booking-image {
                width: 100%;
                height: 200px;
            }

            .booking-actions {
                border-left: none;
                border-top: 1px solid var(--color-slate);
                flex-direction: row;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <a href="/" class="logo"><div class="logo-icon"><i class="fas fa-paper-plane"></i></div><span class="logo-text">TRAVEL</span></a>
        <a href="/account/dashboard" class="back-link"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    </header>
    <div class="container">
        <h1 class="page-title">My Bookings</h1>
        <div class="bookings-grid" id="bookingsGrid"><div class="loading"><div class="spinner"></div></div></div>
    </div>
    <script>
        async function loadBookings() {
            var token = localStorage.getItem('token');
            if (!token) { window.location.href = '/account/login'; return; }
            try {
                var response = await fetch('/api/bookings/my', { headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) {
                    var result = await response.json();
                    renderBookings(result.data || result || []);
                }
            } catch (error) { console.error('Error:', error); }
        }
        function renderBookings(bookings) {
            var grid = document.getElementById('bookingsGrid');
            if (!bookings || bookings.length === 0) {
                grid.innerHTML = '<div class="empty-state"><i class="fas fa-suitcase-rolling"></i><h3>No bookings yet</h3><p>Start exploring amazing destinations!</p><a href="/packages" class="btn btn-primary" style="margin-top: 20px; display: inline-block;">Browse Packages</a></div>';
                return;
            }
            var html = bookings.map(function(b) {
                var image = b.package?.imageUrl || 'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=400&q=80';
                var statusClass = b.status === 'Confirmed' || b.status === 1 ? 'confirmed' : (b.status === 'Cancelled' || b.status === 2 ? 'cancelled' : 'pending');
                var statusText = b.status === 'Confirmed' || b.status === 1 ? 'Confirmed' : (b.status === 'Cancelled' || b.status === 2 ? 'Cancelled' : 'Pending');
                return '<div class="booking-card"><img src="' + image + '" alt="' + (b.package?.destination || 'Destination') + '" class="booking-image" onerror="this.src=\'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=400&q=80\'"><div class="booking-info"><h3 class="booking-destination">' + (b.package?.destination || 'Trip') + '</h3><div class="booking-meta"><span><i class="fas fa-hashtag"></i> ' + (b.bookingReference || 'N/A') + '</span><span><i class="far fa-calendar"></i> ' + new Date(b.bookingDate).toLocaleDateString() + '</span><span><i class="fas fa-dollar-sign"></i> ' + (b.totalPrice || 0).toLocaleString() + '</span></div><span class="status-badge ' + statusClass + '">' + statusText + '</span></div><div class="booking-actions"><a href="/booking/details/' + b.bookingId + '" class="btn btn-outline">View Details</a></div></div>';
            }).join('');
            grid.innerHTML = html;
        }
        document.addEventListener('DOMContentLoaded', loadBookings);
    </script>
</body>
</html>
