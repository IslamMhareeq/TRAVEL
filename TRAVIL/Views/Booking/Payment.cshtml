@{
    ViewData["Title"] = "Secure Payment";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Payment - TRAVIL</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&amp;family=Playfair+Display:wght@500;600;700&amp;display=swap" rel="stylesheet">
    <style>
        :root {
            --color-bg: #0d1117;
            --color-card: #161b22;
            --color-border: #30363d;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-white: #f0f6fc;
            --color-silver: #8b949e;
            --color-success: #3fb950;
            --color-error: #f85149;
            --color-paypal: #003087;
            --color-paypal-light: #009cde;
            --font-display: 'Playfair Display', serif;
            --font-body: 'Plus Jakarta Sans', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-bg);
            color: var(--color-white);
            min-height: 100vh;
        }

        .ssl-banner {
            background: linear-gradient(90deg, var(--color-success) 0%, #2ea043 100%);
            color: white;
            padding: 12px 20px;
            text-align: center;
            font-size: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

            .ssl-banner .lock-icon {
                background: rgba(255,255,255,0.2);
                padding: 6px 10px;
                border-radius: 6px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .payment-container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 40px 24px;
        }

        .payment-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 40px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .logo-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-bg);
            font-size: 22px;
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 28px;
            font-weight: 600;
            color: var(--color-white);
        }

        .page-title {
            text-align: center;
            margin-bottom: 40px;
        }

            .page-title h1 {
                font-family: var(--font-display);
                font-size: 36px;
                color: var(--color-white);
                margin-bottom: 8px;
            }

            .page-title p {
                color: var(--color-silver);
            }

        .alert {
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .alert-danger {
            background: rgba(248, 81, 73, 0.15);
            color: var(--color-error);
            border: 1px solid rgba(248, 81, 73, 0.3);
        }

        .alert-success {
            background: rgba(63, 185, 80, 0.15);
            color: var(--color-success);
            border: 1px solid rgba(63, 185, 80, 0.3);
        }

        .d-none {
            display: none !important;
        }

        .payment-grid {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: 32px;
        }

        .card {
            background: var(--color-card);
            border: 1px solid var(--color-border);
            border-radius: 16px;
            padding: 32px;
        }

        .card-title {
            font-family: var(--font-display);
            font-size: 22px;
            font-weight: 600;
            color: var(--color-white);
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .card-title i {
                color: var(--color-gold);
            }

        .payment-methods {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
            margin-bottom: 32px;
        }

        .payment-method {
            padding: 20px 16px;
            background: var(--color-bg);
            border: 2px solid var(--color-border);
            border-radius: 12px;
            cursor: pointer;
            text-align: center;
            transition: all 0.3s ease;
        }

            .payment-method:hover {
                border-color: var(--color-silver);
            }

            .payment-method.active {
                border-color: var(--color-gold);
                background: rgba(212, 168, 83, 0.1);
            }

            .payment-method i {
                font-size: 28px;
                margin-bottom: 8px;
                color: var(--color-silver);
            }

            .payment-method.active i {
                color: var(--color-gold);
            }

            .payment-method span {
                display: block;
                font-size: 14px;
                color: var(--color-silver);
            }

            .payment-method.active span {
                color: var(--color-white);
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 13px;
            font-weight: 500;
            color: var(--color-silver);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            background: var(--color-bg);
            border: 1px solid var(--color-border);
            border-radius: 10px;
            font-size: 16px;
            color: var(--color-white);
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: var(--color-gold);
                box-shadow: 0 0 0 3px rgba(212, 168, 83, 0.2);
            }

            .form-control::placeholder {
                color: var(--color-silver);
            }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }

        .input-icon-wrapper {
            position: relative;
        }

            .input-icon-wrapper .form-control {
                padding-right: 50px;
            }

        .card-icon {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 24px;
            color: var(--color-silver);
        }

        .btn-pay {
            width: 100%;
            padding: 18px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
        }

        .btn-pay-card {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-bg);
        }

            .btn-pay-card:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(212, 168, 83, 0.3);
            }

        .btn-pay-paypal {
            background: linear-gradient(135deg, var(--color-paypal-light), var(--color-paypal));
            color: white;
        }

            .btn-pay-paypal:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0, 156, 222, 0.3);
            }

        .btn-pay:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .btn-cancel {
            width: 100%;
            padding: 14px;
            background: transparent;
            border: 1px solid var(--color-border);
            border-radius: 10px;
            color: var(--color-silver);
            font-size: 14px;
            cursor: pointer;
            margin-top: 16px;
            transition: all 0.3s ease;
        }

            .btn-cancel:hover {
                border-color: var(--color-error);
                color: var(--color-error);
            }

        .order-summary {
            position: sticky;
            top: 24px;
        }

        .package-preview {
            display: flex;
            gap: 16px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--color-border);
            margin-bottom: 20px;
        }

        .package-image {
            width: 100px;
            height: 80px;
            border-radius: 10px;
            object-fit: cover;
            background: var(--color-bg);
        }

        .package-info h3 {
            font-size: 16px;
            font-weight: 600;
            color: var(--color-white);
            margin-bottom: 4px;
        }

        .package-info p {
            font-size: 13px;
            color: var(--color-silver);
            display: flex;
            align-items: center;
            gap: 6px;
            margin-top: 4px;
        }

            .package-info p i {
                color: var(--color-gold);
            }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            font-size: 14px;
        }

            .summary-row span:first-child {
                color: var(--color-silver);
            }

            .summary-row span:last-child {
                color: var(--color-white);
            }

            .summary-row.total {
                border-top: 1px solid var(--color-border);
                margin-top: 12px;
                padding-top: 16px;
                font-size: 18px;
                font-weight: 600;
            }

                .summary-row.total span:last-child {
                    color: var(--color-gold);
                }

        .booking-ref {
            margin-top: 20px;
            padding: 16px;
            background: var(--color-bg);
            border-radius: 10px;
            text-align: center;
        }

            .booking-ref span {
                display: block;
                font-size: 12px;
                color: var(--color-silver);
                margin-bottom: 4px;
            }

            .booking-ref strong {
                font-size: 18px;
                color: var(--color-gold);
                font-family: monospace;
            }

        .paypal-section {
            text-align: center;
            padding: 32px 0;
        }

        .paypal-logo {
            font-size: 48px;
            color: var(--color-paypal-light);
            margin-bottom: 16px;
        }

        .paypal-section p {
            color: var(--color-silver);
            margin-bottom: 24px;
        }

        .loader {
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top-color: currentColor;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 900px) {
            .payment-grid {
                grid-template-columns: 1fr;
            }

            .order-summary {
                position: static;
            }
        }

        @@media (max-width: 600px) {
            .payment-methods {
                grid-template-columns: 1fr;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="ssl-banner">
        <div class="lock-icon">
            <i class="fas fa-lock"></i>
            <span>SSL Secured</span>
        </div>
        <span>Your payment information is encrypted and secure</span>
    </div>

    <div class="payment-container">
        <div class="payment-header">
            <a href="/" class="logo">
                <div class="logo-icon"><i class="fas fa-compass"></i></div>
                <span class="logo-text">TRAVIL</span>
            </a>
        </div>

        <div class="page-title">
            <h1>Complete Your Payment</h1>
            <p>Your booking is almost confirmed. Complete the payment to secure your trip.</p>
        </div>

        <div class="alert alert-danger d-none" id="errorAlert">
            <i class="fas fa-exclamation-circle"></i>
            <span id="errorMessage">An error occurred</span>
        </div>
        <div class="alert alert-success d-none" id="successAlert">
            <i class="fas fa-check-circle"></i>
            <span id="successMessage">Success!</span>
        </div>

        <div class="payment-grid">
            <div class="card">
                <h2 class="card-title"><i class="fas fa-credit-card"></i> Payment Method</h2>

                <div class="payment-methods">
                    <div class="payment-method active" onclick="selectPaymentMethod('card')">
                        <i class="fas fa-credit-card"></i>
                        <span>Credit / Debit Card</span>
                    </div>
                    <div class="payment-method" onclick="selectPaymentMethod('paypal')">
                        <i class="fab fa-paypal"></i>
                        <span>PayPal</span>
                    </div>
                </div>

                <form id="paymentForm">
                    <div id="cardPaymentSection">
                        <div class="form-group">
                            <label class="form-label">Card Number</label>
                            <div class="input-icon-wrapper">
                                <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19">
                                <i class="far fa-credit-card card-icon" id="cardBrand"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Cardholder Name</label>
                            <input type="text" class="form-control" id="cardName" placeholder="John Doe">
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Expiry Date</label>
                                <input type="text" class="form-control" id="expiry" placeholder="MM/YY" maxlength="5">
                            </div>
                            <div class="form-group">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" id="cvv" placeholder="123" maxlength="4">
                            </div>
                        </div>

                        <button type="submit" class="btn-pay btn-pay-card" id="payCardBtn">
                            <span id="payCardText"><i class="fas fa-lock"></i> Pay Now</span>
                            <div class="loader d-none" id="payCardLoader"></div>
                        </button>
                    </div>
                </form>

                <div id="paypalPaymentSection" class="d-none">
                    <div class="paypal-section">
                        <div class="paypal-logo"><i class="fab fa-paypal"></i></div>
                        <p>You will be redirected to PayPal to complete your payment securely.</p>
                        <button type="button" class="btn-pay btn-pay-paypal" id="paypalBtn" onclick="processPayPal()">
                            <span id="paypalText"><i class="fab fa-paypal"></i> Pay with PayPal</span>
                            <div class="loader d-none" id="paypalLoader"></div>
                        </button>
                    </div>
                </div>

                <button type="button" class="btn-cancel" onclick="cancelPayment()">
                    <i class="fas fa-times"></i> Cancel Payment
                </button>
            </div>

            <div class="card order-summary">
                <h2 class="card-title"><i class="fas fa-receipt"></i> Order Summary</h2>

                <div class="package-preview">
                    <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=400" alt="Package" class="package-image" id="packageImage">
                    <div class="package-info">
                        <h3 id="packageName">Travel Package</h3>
                        <p><i class="fas fa-map-marker-alt"></i> <span id="packageLocation">-</span></p>
                        <p><i class="far fa-calendar"></i> <span id="packageDates">-</span></p>
                        <p><i class="fas fa-users"></i> <span id="guestCount">2 guests</span></p>
                    </div>
                </div>

                <div class="summary-row">
                    <span>Package Price</span>
                    <span id="packagePrice">$0</span>
                </div>
                <div class="summary-row">
                    <span>Rooms</span>
                    <span id="roomCount">×1</span>
                </div>
                <div class="summary-row">
                    <span>Service Fee (5%)</span>
                    <span id="serviceFee">$0</span>
                </div>
                <div class="summary-row total">
                    <span>Total</span>
                    <span id="totalAmount">$0</span>
                </div>

                <div class="booking-ref">
                    <span>Booking Reference</span>
                    <strong id="bookingRef">BK8</strong>
                </div>
            </div>
        </div>
    </div>

    <script>
        let bookingId = null;

        // Get booking ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        bookingId = urlParams.get('bookingId') || urlParams.get('id');

        if (!bookingId) {
            const pathMatch = window.location.pathname.match(/\/payment\/(\d+)/);
            if (pathMatch) bookingId = pathMatch[1];
        }

        document.addEventListener('DOMContentLoaded', async function() {
            const token = localStorage.getItem('token');
            if (!token) {
                window.location.href = '/account/login?returnUrl=' + encodeURIComponent(window.location.pathname + window.location.search);
                return;
            }

            if (!bookingId) {
                showError('No booking ID provided');
                return;
            }

            try {
                const response = await fetch('/api/booking/' + bookingId, {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.ok) {
                    const result = await response.json();
                    displayBookingDetails(result.data || result);
                } else {
                    showError('Failed to load booking details');
                }
            } catch (error) {
                console.error('Error:', error);
                showError('Error loading booking details');
            }
        });

        function displayBookingDetails(booking) {
            const pkg = booking.travelPackage || booking.package || {};

            document.getElementById('packageName').textContent = pkg.destination || 'Travel Package';
            document.getElementById('packageLocation').textContent = pkg.country || '-';
            document.getElementById('guestCount').textContent = (booking.numberOfGuests || 2) + ' guests';
            document.getElementById('roomCount').textContent = '×' + (booking.numberOfRooms || 1);

            if (pkg.startDate && pkg.endDate) {
                const start = new Date(pkg.startDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                const end = new Date(pkg.endDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                document.getElementById('packageDates').textContent = start + ' - ' + end;
            }

            const price = booking.totalPrice || pkg.discountedPrice || pkg.price || 0;
            const serviceFee = Math.round(price * 0.05);
            const total = price + serviceFee;

            document.getElementById('packagePrice').textContent = '$' + price.toLocaleString();
            document.getElementById('serviceFee').textContent = '$' + serviceFee.toLocaleString();
            document.getElementById('totalAmount').textContent = '$' + total.toLocaleString();

            if (booking.bookingReference) {
                document.getElementById('bookingRef').textContent = booking.bookingReference;
            }

            if (pkg.imageUrl) {
                document.getElementById('packageImage').src = pkg.imageUrl;
            }
        }

        function selectPaymentMethod(method) {
            document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('active'));

            if (method === 'card') {
                document.querySelectorAll('.payment-method')[0].classList.add('active');
                document.getElementById('cardPaymentSection').classList.remove('d-none');
                document.getElementById('paypalPaymentSection').classList.add('d-none');
            } else {
                document.querySelectorAll('.payment-method')[1].classList.add('active');
                document.getElementById('cardPaymentSection').classList.add('d-none');
                document.getElementById('paypalPaymentSection').classList.remove('d-none');
            }
        }

        // Card formatting
        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            e.target.value = value.match(/.{1,4}/g)?.join(' ') || value;

            const cardBrand = document.getElementById('cardBrand');
            if (value.startsWith('4')) {
                cardBrand.className = 'fab fa-cc-visa card-icon';
            } else if (value.startsWith('5') || value.startsWith('2')) {
                cardBrand.className = 'fab fa-cc-mastercard card-icon';
            } else if (value.startsWith('3')) {
                cardBrand.className = 'fab fa-cc-amex card-icon';
            } else {
                cardBrand.className = 'far fa-credit-card card-icon';
            }
        });

        document.getElementById('expiry').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });

        document.getElementById('cvv').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '').substring(0, 4);
        });

        // Credit Card Payment
        document.getElementById('paymentForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const cardNumber = document.getElementById('cardNumber').value.replace(/\s/g, '');
            const cardName = document.getElementById('cardName').value.trim();
            const expiry = document.getElementById('expiry').value;
            const cvv = document.getElementById('cvv').value;

            if (cardNumber.length < 13) { showError('Please enter a valid card number'); return; }
            if (!cardName) { showError('Please enter the cardholder name'); return; }

            const expiryParts = expiry.split('/');
            if (expiryParts.length !== 2 || expiryParts[0].length !== 2 || expiryParts[1].length !== 2) {
                showError('Please enter a valid expiry date (MM/YY)'); return;
            }
            if (cvv.length < 3) { showError('Please enter a valid CVV'); return; }

            setButtonLoading('card', true);

            try {
                const token = localStorage.getItem('token');
                const response = await fetch('/api/payment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        bookingId: parseInt(bookingId),
                        cardNumber: cardNumber,
                        cardHolderName: cardName,
                        expiryMonth: parseInt(expiryParts[0]),
                        expiryYear: parseInt('20' + expiryParts[1]),
                        cvv: cvv,
                        paymentMethod: 0
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showSuccess('Payment successful! Redirecting...');
                    setTimeout(function() {
                        window.location.href = '/?payment=success&ref=' + encodeURIComponent(document.getElementById('bookingRef').textContent);
                    }, 2000);
                } else {
                    showError(result.message || 'Payment failed');
                    setButtonLoading('card', false);
                }
            } catch (error) {
                showError('Payment processing error');
                setButtonLoading('card', false);
            }
        });

        // PayPal Payment - FIXED!
        async function processPayPal() {
            setButtonLoading('paypal', true);
            showSuccess('Processing PayPal payment...');

            try {
                const token = localStorage.getItem('token');

                // Step 1: Initiate PayPal
                const initiateResponse = await fetch('/api/payment/paypal/initiate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({ bookingId: parseInt(bookingId) })
                });

                if (!initiateResponse.ok) {
                    const errorData = await initiateResponse.json();
                    throw new Error(errorData.message || 'Failed to initiate PayPal');
                }

                const initiateResult = await initiateResponse.json();

                if (!initiateResult.success) {
                    throw new Error(initiateResult.message || 'PayPal initiation failed');
                }

                const orderId = initiateResult.data.orderId;

                // Step 2: Capture PayPal payment
                showSuccess('Completing PayPal payment...');

                const captureResponse = await fetch('/api/payment/paypal/capture', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        bookingId: parseInt(bookingId),
                        orderId: orderId
                    })
                });

                if (!captureResponse.ok) {
                    const errorData = await captureResponse.json();
                    throw new Error(errorData.message || 'Failed to capture PayPal payment');
                }

                const captureResult = await captureResponse.json();

                if (captureResult.success) {
                    showSuccess('PayPal payment successful! Redirecting...');
                    setTimeout(function() {
                        window.location.href = '/?payment=success&ref=' + encodeURIComponent(document.getElementById('bookingRef').textContent);
                    }, 2000);
                } else {
                    throw new Error(captureResult.message || 'PayPal capture failed');
                }

            } catch (error) {
                console.error('PayPal error:', error);
                showError(error.message || 'PayPal payment failed');
                setButtonLoading('paypal', false);
            }
        }

        function setButtonLoading(type, loading) {
            const textEl = document.getElementById(type === 'card' ? 'payCardText' : 'paypalText');
            const loaderEl = document.getElementById(type === 'card' ? 'payCardLoader' : 'paypalLoader');
            const btn = document.getElementById(type === 'card' ? 'payCardBtn' : 'paypalBtn');

            if (loading) {
                textEl.classList.add('d-none');
                loaderEl.classList.remove('d-none');
                btn.disabled = true;
            } else {
                textEl.classList.remove('d-none');
                loaderEl.classList.add('d-none');
                btn.disabled = false;
            }
        }

        function showError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorAlert').classList.remove('d-none');
            document.getElementById('successAlert').classList.add('d-none');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showSuccess(message) {
            document.getElementById('successMessage').textContent = message;
            document.getElementById('successAlert').classList.remove('d-none');
            document.getElementById('errorAlert').classList.add('d-none');
        }

        function cancelPayment() {
            if (confirm('Are you sure you want to cancel?')) {
                window.location.href = '/my-trips';
            }
        }
    </script>
</body>
