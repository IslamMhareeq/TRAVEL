@{
    ViewData["Title"] = "Manage Packages";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Packages - TRAVIL Admin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="/css/admin.css" rel="stylesheet" />

    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-warning: #d29922;
            --color-error: #f85149;
            --sidebar-width: 280px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
        }

        /* Page Transition */
        .page-transition {
            position: fixed;
            inset: 0;
            background: #0d1117;
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.4s ease, visibility 0.4s ease;
        }

            .page-transition.active {
                opacity: 1;
                visibility: visible;
            }

            .page-transition .loader {
                width: 48px;
                height: 48px;
                border: 3px solid #21262d;
                border-top-color: #d4a853;
                border-radius: 50%;
                animation: spin 0.8s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--color-navy) 0%, var(--color-midnight) 100%);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            border-right: 1px solid var(--color-slate);
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-slate);
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

            .sidebar-header .logo {
                width: 48px;
                height: 48px;
                background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .sidebar-header h1 {
                font-family: var(--font-display);
                font-size: 1.5rem;
                font-weight: 500;
                color: var(--color-white);
                letter-spacing: 0.1em;
                margin-bottom: 0;
            }

            .sidebar-header span {
                font-size: 0.6875rem;
                color: var(--color-gold);
                text-transform: uppercase;
                letter-spacing: 0.15em;
            }

        .nav-section {
            padding: var(--space-4) var(--space-3);
        }

        .nav-section-title {
            padding: 0 var(--space-3);
            font-size: 0.6875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--color-steel);
            margin-bottom: var(--space-3);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-silver);
            text-decoration: none;
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: var(--space-5);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-6);
            flex-wrap: wrap;
            gap: var(--space-4);
        }

            .header h2 {
                font-family: var(--font-display);
                font-size: 2rem;
                font-weight: 500;
                margin-bottom: var(--space-1);
            }

            .header .subtitle {
                color: var(--color-silver);
                font-size: 0.9375rem;
            }

        .header-actions {
            display: flex;
            gap: var(--space-3);
            align-items: center;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all var(--transition-fast);
            text-decoration: none;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 168, 83, 0.4);
            }

        .btn-secondary {
            background: var(--color-slate);
            color: var(--color-white);
        }

            .btn-secondary:hover {
                background: var(--color-charcoal);
            }

        .btn-sm {
            padding: var(--space-2) var(--space-3);
            font-size: 0.8125rem;
        }

        .btn-icon {
            padding: var(--space-2);
            width: 36px;
            height: 36px;
            justify-content: center;
        }

        /* Search & Filters */
        .filters-bar {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
            align-items: center;
        }

        .search-box {
            flex: 1;
            min-width: 250px;
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-navy);
                border: 1px solid var(--color-slate);
                border-radius: var(--radius-md);
                color: var(--color-white);
                font-family: var(--font-body);
                font-size: 0.875rem;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--color-gold);
                }

                .search-box input::placeholder {
                    color: var(--color-steel);
                }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-steel);
            }

        .filter-select {
            padding: var(--space-3) var(--space-4);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-family: var(--font-body);
            font-size: 0.875rem;
            cursor: pointer;
            min-width: 150px;
        }

            .filter-select:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        /* Table */
        .table-container {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table th, .data-table td {
                padding: var(--space-4);
                text-align: left;
                border-bottom: 1px solid var(--color-slate);
            }

            .data-table th {
                background: var(--color-midnight);
                font-size: 0.75rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 0.1em;
                color: var(--color-steel);
            }

            .data-table tbody tr {
                transition: background var(--transition-fast);
            }

                .data-table tbody tr:hover {
                    background: rgba(212, 168, 83, 0.05);
                }

                .data-table tbody tr:last-child td {
                    border-bottom: none;
                }

        .package-info {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .package-image {
            width: 60px;
            height: 45px;
            border-radius: var(--radius-sm);
            overflow: hidden;
            background: var(--color-slate);
        }

            .package-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .package-name {
            font-weight: 500;
            color: var(--color-white);
            margin-bottom: 2px;
        }

        .package-country {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

            .status-badge.active {
                background: rgba(63, 185, 80, 0.15);
                color: var(--color-success);
            }

            .status-badge.inactive {
                background: rgba(248, 81, 73, 0.15);
                color: var(--color-error);
            }

            .status-badge.sale {
                background: rgba(212, 168, 83, 0.15);
                color: var(--color-gold);
            }

        .actions-cell {
            display: flex;
            gap: var(--space-2);
        }

        .action-btn {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--color-slate);
            border: none;
            border-radius: var(--radius-sm);
            color: var(--color-silver);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

            .action-btn:hover {
                background: var(--color-charcoal);
                color: var(--color-white);
            }

            .action-btn.delete:hover {
                background: rgba(248, 81, 73, 0.2);
                color: var(--color-error);
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 64px 24px;
            color: var(--color-silver);
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: var(--space-4);
                opacity: 0.5;
            }

            .empty-state p {
                font-size: 1rem;
                margin-bottom: var(--space-4);
            }

        /* Loading */
        .loading-state {
            text-align: center;
            padding: 48px;
        }

        .spinner {
            width: 32px;
            height: 32px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin: 0 auto;
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: #30363d;
            border: 1px solid #21262d;
            border-radius: 16px;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #ffffff;
            font-size: 0.9375rem;
            z-index: 10000;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }

            .toast.success i {
                color: #3fb950;
            }

            .toast.error i {
                color: #f85149;
            }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

        .pagination-info {
            color: var(--color-silver);
            font-size: 0.875rem;
        }

        .pagination-controls {
            display: flex;
            gap: var(--space-2);
        }

        /* Sidebar Overlay */
        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

            .sidebar-overlay.active {
                display: block;
            }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--color-white);
            font-size: 1.25rem;
            cursor: pointer;
            padding: var(--space-2);
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: block;
            }
        }

        @@media (max-width: 768px) {
            .data-table {
                font-size: 0.8125rem;
            }

                .data-table th, .data-table td {
                    padding: var(--space-3);
                }

            .hide-mobile {
                display: none;
            }

            .filters-bar {
                flex-direction: column;
            }

            .search-box {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="page-transition" id="pageTransition"><div class="loader"></div></div>

    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo"><i class="fas fa-compass"></i></div>
                <div>
                    <h1>TRAVIL</h1>
                    <span>Admin Panel</span>
                </div>
            </div>

            <nav class="nav-section">
                <div class="nav-section-title">Main</div>
                <a href="/admin/dashboard" class="nav-item" onclick="navigateTo('/admin/dashboard', event)">
                    <i class="fas fa-th-large"></i><span>Dashboard</span>
                </a>
                <a href="/admin/packages" class="nav-item active" onclick="navigateTo('/admin/packages', event)">
                    <i class="fas fa-suitcase"></i><span>Packages</span>
                </a>
                <a href="/admin/bookings" class="nav-item" onclick="navigateTo('/admin/bookings', event)">
                    <i class="fas fa-calendar-check"></i><span>Bookings</span>
                </a>
            </nav>

            <nav class="nav-section">
                <div class="nav-section-title">Management</div>
                <a href="/admin/users" class="nav-item" onclick="navigateTo('/admin/users', event)">
                    <i class="fas fa-users"></i><span>Users</span>
                </a>
                <a href="/admin/reviews" class="nav-item" onclick="navigateTo('/admin/reviews', event)">
                    <i class="fas fa-star"></i><span>Reviews</span>
                </a>
                <a href="/admin/prices" class="nav-item" onclick="navigateTo('/admin/prices', event)">
                    <i class="fas fa-tags"></i><span>Discounts</span>
                </a>
            </nav>

            <nav class="nav-section">
                <div class="nav-section-title">Settings</div>
                <a href="/admin/profile" class="nav-item" onclick="navigateTo('/admin/profile', event)">
                    <i class="fas fa-user-cog"></i><span>Profile</span>
                </a>
                <a href="/" class="nav-item" onclick="navigateTo('/', event)">
                    <i class="fas fa-globe"></i><span>View Site</span>
                </a>
                <a href="#" class="nav-item" onclick="logout(event)">
                    <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                </a>
            </nav>
        </aside>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h2>Packages</h2>
                    <p class="subtitle">Manage your travel packages</p>
                </div>
                <div class="header-actions">
                    <a href="/admin/packages/edit" class="btn btn-primary" onclick="navigateTo('/admin/packages/edit', event)">
                        <i class="fas fa-plus"></i> Add Package
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="filters-bar">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search packages..." onkeyup="filterPackages()">
                </div>
                <select class="filter-select" id="statusFilter" onchange="filterPackages()">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                    <option value="sale">On Sale</option>
                </select>
                <select class="filter-select" id="typeFilter" onchange="filterPackages()">
                    <option value="">All Types</option>
                    <option value="Adventure">Adventure</option>
                    <option value="Beach">Beach</option>
                    <option value="Cultural">Cultural</option>
                    <option value="Family">Family</option>
                    <option value="Luxury">Luxury</option>
                    <option value="Romantic">Romantic</option>
                </select>
            </div>

            <!-- Table -->
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Package</th>
                            <th class="hide-mobile">Type</th>
                            <th>Price</th>
                            <th class="hide-mobile">Rooms</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="packagesTableBody">
                        <tr>
                            <td colspan="6">
                                <div class="loading-state">
                                    <div class="spinner"></div>
                                    <p style="margin-top: 16px; color: var(--color-silver);">Loading packages...</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="pagination" id="pagination" style="display: none;">
                    <span class="pagination-info" id="paginationInfo">Showing 0 packages</span>
                    <div class="pagination-controls">
                        <button class="btn btn-secondary btn-sm" id="prevBtn" onclick="prevPage()">
                            <i class="fas fa-chevron-left"></i> Prev
                        </button>
                        <button class="btn btn-secondary btn-sm" id="nextBtn" onclick="nextPage()">
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Toast -->
    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Success!</span>
    </div>

    <script>
        let allPackages = [];
        let filteredPackages = [];
        let currentPage = 1;
        const itemsPerPage = 10;

        // Navigation
        function navigateTo(url, event) {
            if (event) event.preventDefault();
            const transition = document.getElementById('pageTransition');
            transition.classList.add('active');
            setTimeout(() => { window.location.href = url; }, 300);
        }

        // Logout
        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            navigateTo('/account/login');
        }

        // Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            toastMessage.textContent = message;
            toast.className = `toast ${type}`;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // Mobile menu
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('sidebarOverlay').classList.toggle('active');
        });

        document.getElementById('sidebarOverlay').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('open');
            this.classList.remove('active');
        });

        // Load packages
        async function loadPackages() {
            const token = localStorage.getItem('token');

            try {
                const response = await fetch('/api/travelpackage/all', {
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    allPackages = result.data || [];
                    filteredPackages = [...allPackages];
                    renderPackages();
                } else {
                    showEmptyState('Failed to load packages');
                }
            } catch (error) {
                console.error('Error loading packages:', error);
                showEmptyState('Error loading packages');
            }
        }

        // Render packages
        function renderPackages() {
            const tbody = document.getElementById('packagesTableBody');

            if (filteredPackages.length === 0) {
                showEmptyState('No packages found');
                return;
            }

            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const pagePackages = filteredPackages.slice(startIndex, endIndex);

            tbody.innerHTML = pagePackages.map(pkg => {
                const isOnSale = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                const statusClass = !pkg.isActive ? 'inactive' : isOnSale ? 'sale' : 'active';
                const statusText = !pkg.isActive ? 'Inactive' : isOnSale ? 'On Sale' : 'Active';
                const displayPrice = isOnSale ?
                    `<span style="text-decoration: line-through; color: var(--color-steel);">$${pkg.price}</span> $${pkg.discountedPrice}` :
                    `$${pkg.price}`;

                return `
                    <tr>
                        <td>
                            <div class="package-info">
                                <div class="package-image">
                                    <img src="${pkg.imageUrl || '/images/placeholder.jpg'}" alt="${pkg.destination}" onerror="this.src='/images/placeholder.jpg'">
                                </div>
                                <div>
                                    <div class="package-name">${pkg.destination}</div>
                                    <div class="package-country">${pkg.country || ''}</div>
                                </div>
                            </div>
                        </td>
                        <td class="hide-mobile">${pkg.packageType || '-'}</td>
                        <td>${displayPrice}</td>
                        <td class="hide-mobile">${pkg.availableRooms || 0}</td>
                        <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                        <td>
                            <div class="actions-cell">
                                <button class="action-btn" onclick="editPackage(${pkg.packageId})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn" onclick="viewPackage(${pkg.packageId})" title="View">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="action-btn delete" onclick="deletePackage(${pkg.packageId})" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');

            // Update pagination
            const totalPages = Math.ceil(filteredPackages.length / itemsPerPage);
            document.getElementById('pagination').style.display = 'flex';
            document.getElementById('paginationInfo').textContent =
                `Showing ${startIndex + 1}-${Math.min(endIndex, filteredPackages.length)} of ${filteredPackages.length} packages`;
            document.getElementById('prevBtn').disabled = currentPage === 1;
            document.getElementById('nextBtn').disabled = currentPage >= totalPages;
        }

        // Show empty state
        function showEmptyState(message) {
            const tbody = document.getElementById('packagesTableBody');
            tbody.innerHTML = `
                <tr>
                    <td colspan="6">
                        <div class="empty-state">
                            <i class="fas fa-suitcase"></i>
                            <p>${message}</p>
                            <a href="/admin/packages/edit" class="btn btn-primary" onclick="navigateTo('/admin/packages/edit', event)">
                                <i class="fas fa-plus"></i> Add Package
                            </a>
                        </div>
                    </td>
                </tr>
            `;
            document.getElementById('pagination').style.display = 'none';
        }

        // Filter packages
        function filterPackages() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const typeFilter = document.getElementById('typeFilter').value;

            filteredPackages = allPackages.filter(pkg => {
                const matchesSearch = !searchTerm ||
                    pkg.destination?.toLowerCase().includes(searchTerm) ||
                    pkg.country?.toLowerCase().includes(searchTerm);

                const isOnSale = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                const matchesStatus = !statusFilter ||
                    (statusFilter === 'active' && pkg.isActive && !isOnSale) ||
                    (statusFilter === 'inactive' && !pkg.isActive) ||
                    (statusFilter === 'sale' && isOnSale);

                const matchesType = !typeFilter || pkg.packageType === typeFilter;

                return matchesSearch && matchesStatus && matchesType;
            });

            currentPage = 1;
            renderPackages();
        }

        // Pagination
        function prevPage() {
            if (currentPage > 1) {
                currentPage--;
                renderPackages();
            }
        }

        function nextPage() {
            const totalPages = Math.ceil(filteredPackages.length / itemsPerPage);
            if (currentPage < totalPages) {
                currentPage++;
                renderPackages();
            }
        }

        // Package actions
        function editPackage(id) {
            navigateTo(`/admin/packages/edit/${id}`);
        }

        function viewPackage(id) {
            window.open(`/packages/${id}`, '_blank');
        }

        async function deletePackage(id) {
            if (!confirm('Are you sure you want to delete this package?')) return;

            const token = localStorage.getItem('token');
            try {
                const response = await fetch(`/api/packages/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    showToast('Package deleted successfully');
                    loadPackages();
                } else {
                    showToast('Failed to delete package', 'error');
                }
            } catch (error) {
                console.error('Error deleting package:', error);
                showToast('Error deleting package', 'error');
            }
        }

        // Auth check
        document.addEventListener('DOMContentLoaded', async function() {
            const token = localStorage.getItem('token');
            const user = JSON.parse(localStorage.getItem('user') || '{}');

            if (!token) {
                navigateTo('/account/login');
                return;
            }

            if (user.role !== 'Admin' && user.role !== 0) {
                showToast('Admin privileges required.', 'error');
                setTimeout(() => navigateTo('/'), 2000);
                return;
            }

            await loadPackages();
        });

        // Page transition on load
        window.addEventListener('pageshow', function() {
            document.getElementById('pageTransition').classList.remove('active');
        });
    </script>
</body>
</html>
