@{
    ViewData["Title"] = "Shopping Cart";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart - TRAVIL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-error: #f85149;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
            min-height: 100vh;
        }

        .header {
            padding: var(--space-4) var(--space-6);
            background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .back-link {
            color: var(--color-silver);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .back-link:hover {
                color: var(--color-gold);
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--space-6);
        }

        .page-title {
            font-family: var(--font-display);
            font-size: 2rem;
            margin-bottom: var(--space-5);
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-title i {
                color: var(--color-gold);
            }

        .cart-layout {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: var(--space-6);
        }

        .cart-items {
            display: flex;
            flex-direction: column;
            gap: var(--space-4);
        }

        .cart-item {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            display: grid;
            grid-template-columns: 120px 1fr auto;
            gap: var(--space-5);
        }

        .item-image {
            width: 120px;
            height: 100px;
            object-fit: cover;
            border-radius: var(--radius-md);
        }

        .item-info h3 {
            font-family: var(--font-display);
            font-size: 1.25rem;
            margin-bottom: 8px;
        }

        .item-meta {
            display: flex;
            gap: var(--space-4);
            color: var(--color-silver);
            font-size: 0.875rem;
            margin-bottom: 12px;
        }

        .item-price {
            font-family: var(--font-display);
            font-size: 1.25rem;
            color: var(--color-gold);
        }

        .item-actions {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: flex-end;
        }

        .remove-btn {
            background: var(--color-slate);
            border: none;
            color: var(--color-error);
            padding: 8px 16px;
            border-radius: var(--radius-md);
            cursor: pointer;
            font-size: 0.875rem;
        }

            .remove-btn:hover {
                background: var(--color-error);
                color: var(--color-white);
            }

        .cart-summary {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            height: fit-content;
            position: sticky;
            top: var(--space-5);
        }

        .summary-title {
            font-family: var(--font-display);
            font-size: 1.25rem;
            margin-bottom: var(--space-5);
            padding-bottom: var(--space-4);
            border-bottom: 1px solid var(--color-slate);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            color: var(--color-silver);
        }

            .summary-row.total {
                font-size: 1.25rem;
                font-weight: 600;
                color: var(--color-white);
                padding-top: var(--space-4);
                border-top: 1px solid var(--color-slate);
                margin-top: var(--space-4);
            }

                .summary-row.total span:last-child {
                    color: var(--color-gold);
                    font-family: var(--font-display);
                    font-size: 1.5rem;
                }

        .btn {
            display: block;
            width: 100%;
            padding: 14px;
            border-radius: var(--radius-md);
            font-family: var(--font-body);
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            border: none;
            margin-top: var(--space-4);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-mist);
            margin-top: 12px;
        }

        .empty-state {
            text-align: center;
            padding: 60px;
            color: var(--color-silver);
            grid-column: 1 / -1;
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: 20px;
                color: var(--color-gold);
                opacity: 0.5;
            }

        .loading {
            display: flex;
            justify-content: center;
            padding: 60px;
            grid-column: 1 / -1;
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 1024px) {
            .cart-layout {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .cart-item {
                grid-template-columns: 1fr;
            }

            .item-image {
                width: 100%;
                height: 160px;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <a href="/" class="logo"><div class="logo-icon"><i class="fas fa-paper-plane"></i></div><span class="logo-text">TRAVIL</span></a>
        <a href="/packages" class="back-link"><i class="fas fa-arrow-left"></i> Continue Shopping</a>
    </header>
    <div class="container">
        <h1 class="page-title"><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>
        <div class="cart-layout" id="cartLayout"><div class="loading"><div class="spinner"></div></div></div>
    </div>
    <script>
        var cartItems = [];
        async function loadCart() {
            var token = localStorage.getItem('token');
            if (!token) { window.location.href = '/account/login'; return; }
            try {
                var response = await fetch('/api/cart', { headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) {
                    var result = await response.json();
                    cartItems = result.data || result || [];
                    renderCart();
                }
            } catch (error) { console.error('Error:', error); renderCart(); }
        }
        function renderCart() {
            var layout = document.getElementById('cartLayout');
            if (!cartItems || cartItems.length === 0) {
                layout.innerHTML = '<div class="empty-state"><i class="fas fa-shopping-cart"></i><h3>Your cart is empty</h3><p>Add some amazing travel packages to get started!</p><a href="/packages" class="btn btn-primary" style="margin-top: 20px; display: inline-block; width: auto; padding: 14px 28px;">Browse Packages</a></div>';
                return;
            }
            var itemsHtml = cartItems.map(function(item) {
                var pkg = item.travelPackage || item.package || {};
                var image = pkg.imageUrl || 'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=300&q=80';
                var price = (pkg.discountedPrice || pkg.price || 0) * (item.numberOfRooms || 1);
                return '<div class="cart-item" data-id="' + item.cartItemId + '"><img src="' + image + '" alt="' + (pkg.destination || 'Package') + '" class="item-image" onerror="this.src=\'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=300&q=80\'"><div class="item-info"><h3>' + (pkg.destination || 'Travel Package') + '</h3><div class="item-meta"><span><i class="fas fa-users"></i> ' + (item.numberOfGuests || 1) + ' guests</span><span><i class="fas fa-door-open"></i> ' + (item.numberOfRooms || 1) + ' rooms</span></div><div class="item-price">$' + price.toLocaleString() + '</div></div><div class="item-actions"><button class="remove-btn" onclick="removeItem(' + item.cartItemId + ')"><i class="fas fa-trash"></i> Remove</button></div></div>';
            }).join('');
            var total = cartItems.reduce(function(sum, item) {
                var pkg = item.travelPackage || item.package || {};
                return sum + ((pkg.discountedPrice || pkg.price || 0) * (item.numberOfRooms || 1));
            }, 0);
            var summaryHtml = '<div class="cart-summary"><h3 class="summary-title">Order Summary</h3><div class="summary-row"><span>Items (' + cartItems.length + ')</span><span>$' + total.toLocaleString() + '</span></div><div class="summary-row"><span>Taxes & Fees</span><span>Included</span></div><div class="summary-row total"><span>Total</span><span>$' + total.toLocaleString() + '</span></div><a href="/cart/checkout" class="btn btn-primary"><i class="fas fa-lock"></i> Proceed to Checkout</a><a href="/packages" class="btn btn-outline">Continue Shopping</a></div>';
            layout.innerHTML = '<div class="cart-items">' + itemsHtml + '</div>' + summaryHtml;
        }
        async function removeItem(cartItemId) {
            var token = localStorage.getItem('token');
            try {
                var response = await fetch('/api/cart/' + cartItemId, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) { loadCart(); }
            } catch (error) { console.error('Error:', error); }
        }
        document.addEventListener('DOMContentLoaded', loadCart);
    </script>
</body>
</html>
