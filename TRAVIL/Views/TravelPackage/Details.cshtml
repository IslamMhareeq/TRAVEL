@{
    ViewData["Title"] = "Package Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Package Details - TRAVIL</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="/css/home.css" rel="stylesheet" />
    
    <style>
        .page-transition {
            position: fixed;
            inset: 0;
            background: #0d1117;
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.4s ease, visibility 0.4s ease;
        }

        .page-transition.active {
            opacity: 1;
            visibility: visible;
        }

        .page-transition .loader {
            width: 48px;
            height: 48px;
            border: 3px solid #21262d;
            border-top-color: #d4a853;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Package Hero */
        .package-hero {
            position: relative;
            height: 60vh;
            min-height: 500px;
            overflow: hidden;
        }

        .package-hero-bg {
            position: absolute;
            inset: 0;
            background-size: cover;
            background-position: center;
            transform: scale(1.05);
        }

        .package-hero::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, rgba(13, 17, 23, 0.3) 0%, rgba(13, 17, 23, 0.8) 80%, #0d1117 100%);
            z-index: 1;
        }

        .package-hero-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 48px;
            z-index: 2;
            max-width: 1400px;
            margin: 0 auto;
        }

        .package-badges {
            display: flex;
            gap: 12px;
            margin-bottom: 16px;
        }

        .package-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 16px;
            background: rgba(212, 168, 83, 0.2);
            border: 1px solid rgba(212, 168, 83, 0.4);
            border-radius: 9999px;
            color: #d4a853;
            font-size: 0.8125rem;
            font-weight: 600;
        }

        .package-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 500;
            color: #ffffff;
            margin-bottom: 12px;
            letter-spacing: -0.02em;
        }

        .package-location {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #c9d1d9;
            font-size: 1.125rem;
        }

        .package-location i {
            color: #d4a853;
        }

        /* Package Content */
        .package-content-section {
            background: #0d1117;
            padding: 48px 24px;
        }

        .package-grid {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: 48px;
        }

        @@media (max-width: 1024px) {
            .package-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Package Info */
        .package-info {
            display: flex;
            flex-direction: column;
            gap: 32px;
        }

        .info-section {
            background: #161b22;
            border: 1px solid #21262d;
            border-radius: 16px;
            padding: 32px;
        }

        .info-section h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.5rem;
            font-weight: 500;
            color: #ffffff;
            margin-bottom: 20px;
            padding-bottom: 16px;
            border-bottom: 1px solid #21262d;
        }

        .info-section p {
            color: #c9d1d9;
            line-height: 1.8;
            margin-bottom: 16px;
        }

        .info-section p:last-child {
            margin-bottom: 0;
        }

        /* Package Stats */
        .package-stats {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
        }

        @@media (max-width: 600px) {
            .package-stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .stat-box {
            text-align: center;
            padding: 20px;
            background: #21262d;
            border-radius: 12px;
        }

        .stat-box i {
            font-size: 1.5rem;
            color: #d4a853;
            margin-bottom: 8px;
        }

        .stat-box .stat-value {
            display: block;
            font-size: 1.25rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 4px;
        }

        .stat-box .stat-label {
            font-size: 0.8125rem;
            color: #8b949e;
        }

        /* Highlights */
        .highlights-list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }

        @@media (max-width: 600px) {
            .highlights-list {
                grid-template-columns: 1fr;
            }
        }

        .highlight-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 16px;
            background: #21262d;
            border-radius: 10px;
        }

        .highlight-item i {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(212, 168, 83, 0.15);
            border-radius: 50%;
            color: #d4a853;
            font-size: 0.875rem;
        }

        .highlight-item span {
            font-size: 0.9375rem;
            color: #c9d1d9;
        }

        /* Itinerary */
        .itinerary-list {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .itinerary-day {
            display: flex;
            gap: 20px;
            padding: 20px;
            background: #21262d;
            border-radius: 12px;
            transition: all 0.3s;
        }

        .itinerary-day:hover {
            background: #30363d;
        }

        .day-number {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #d4a853 0%, #b8923f 100%);
            border-radius: 12px;
            font-weight: 700;
            color: #0d1117;
            flex-shrink: 0;
        }

        .day-content h4 {
            font-size: 1rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 8px;
        }

        .day-content p {
            font-size: 0.875rem;
            color: #8b949e;
            margin: 0;
        }

        /* Booking Card */
        .booking-card {
            position: sticky;
            top: 100px;
            background: #161b22;
            border: 1px solid #21262d;
            border-radius: 16px;
            overflow: hidden;
        }

        .booking-header {
            padding: 24px;
            border-bottom: 1px solid #21262d;
        }

        .booking-price {
            display: flex;
            align-items: baseline;
            gap: 8px;
        }

        .booking-price .amount {
            font-size: 2.5rem;
            font-weight: 700;
            color: #d4a853;
        }

        .booking-price .per {
            font-size: 0.9375rem;
            color: #8b949e;
        }

        .original-price {
            text-decoration: line-through;
            color: #484f58;
            font-size: 1.125rem;
            margin-top: 4px;
        }

        .booking-body {
            padding: 24px;
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: block;
            font-size: 0.8125rem;
            font-weight: 500;
            color: #c9d1d9;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            background: #21262d;
            border: 1px solid #30363d;
            border-radius: 10px;
            font-family: 'Outfit', sans-serif;
            font-size: 0.9375rem;
            color: #ffffff;
            transition: all 0.2s;
        }

        .form-control:focus {
            outline: none;
            border-color: #d4a853;
        }

        .guests-input {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .guest-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #21262d;
            border: 1px solid #30363d;
            border-radius: 50%;
            color: #c9d1d9;
            cursor: pointer;
            transition: all 0.2s;
        }

        .guest-btn:hover {
            background: #d4a853;
            color: #0d1117;
            border-color: #d4a853;
        }

        .guest-count {
            flex: 1;
            text-align: center;
            font-size: 1.25rem;
            font-weight: 600;
            color: #ffffff;
        }

        .price-breakdown {
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #21262d;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            font-size: 0.9375rem;
        }

        .price-row .label {
            color: #8b949e;
        }

        .price-row .value {
            color: #c9d1d9;
        }

        .price-row.total {
            padding-top: 12px;
            border-top: 1px solid #21262d;
            font-weight: 600;
        }

        .price-row.total .value {
            color: #d4a853;
            font-size: 1.25rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 16px 32px;
            border: none;
            border-radius: 10px;
            font-family: 'Outfit', sans-serif;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            width: 100%;
        }

        .btn-primary {
            background: linear-gradient(135deg, #d4a853 0%, #b8923f 100%);
            color: #0d1117;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 32px rgba(212, 168, 83, 0.25);
        }

        .btn-outline {
            background: transparent;
            border: 1px solid #30363d;
            color: #c9d1d9;
            margin-top: 12px;
        }

        .btn-outline:hover {
            border-color: #d4a853;
            color: #d4a853;
        }

        /* Reviews */
        .reviews-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .review-card {
            padding: 24px;
            background: #21262d;
            border-radius: 12px;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .review-author {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .review-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            background: linear-gradient(135deg, #d4a853 0%, #b8923f 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #0d1117;
        }

        .review-author-info h4 {
            font-size: 0.9375rem;
            font-weight: 600;
            color: #ffffff;
        }

        .review-author-info span {
            font-size: 0.8125rem;
            color: #8b949e;
        }

        .review-rating {
            display: flex;
            gap: 4px;
        }

        .review-rating i {
            color: #d4a853;
            font-size: 0.875rem;
        }

        .review-content p {
            color: #c9d1d9;
            line-height: 1.7;
            margin: 0;
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: #30363d;
            border: 1px solid #21262d;
            border-radius: 16px;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #ffffff;
            font-size: 0.9375rem;
            z-index: 10000;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }

        .toast.success i { color: #3fb950; }
        .toast.error i { color: #f85149; }
    </style>
</head>
