@{
    ViewData["Title"] = "Package Details";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Package Details - TRAVEL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-bg: #0d1117;
            --color-surface: #161b22;
            --color-surface-2: #21262d;
            --color-border: #30363d;
            --color-text: #c9d1d9;
            --color-text-muted: #8b949e;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-success: #3fb950;
            --color-danger: #f85149;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-md: 12px;
            --radius-lg: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-bg);
            color: var(--color-text);
            line-height: 1.6;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            padding: var(--space-4) var(--space-6);
            background: rgba(13, 17, 23, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
            color: var(--color-text);
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 600;
        }

            .logo i {
                color: var(--color-gold);
            }

        .nav-links {
            display: flex;
            gap: var(--space-5);
        }

            .nav-links a {
                color: var(--color-text-muted);
                text-decoration: none;
                transition: color 0.2s;
            }

                .nav-links a:hover {
                    color: var(--color-gold);
                }

        .header-actions {
            display: flex;
            gap: var(--space-3);
        }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-5);
            border-radius: var(--radius-md);
            font-family: var(--font-body);
            font-size: 0.9375rem;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-bg);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 168, 83, 0.3);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-border);
            color: var(--color-text);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .btn-success {
            background: var(--color-success);
            color: white;
        }

        .btn-block {
            width: 100%;
            justify-content: center;
        }

        /* Main Content */
        .main-content {
            margin-top: 72px;
        }

        /* Hero Gallery */
        .gallery-section {
            background: var(--color-surface);
            padding: var(--space-6) 0;
        }

        .gallery-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: var(--space-4);
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--space-5);
        }

        .main-image {
            position: relative;
            border-radius: var(--radius-lg);
            overflow: hidden;
            height: 450px;
        }

            .main-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .image-badges {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            display: flex;
            flex-direction: column;
            gap: var(--space-3);
        }

        .badge {
            padding: var(--space-3) var(--space-4);
            border-radius: 20px;
            font-size: 0.8125rem;
            font-weight: 600;
        }

        .badge-sale {
            background: var(--color-success);
            color: white;
        }

        .badge-category {
            background: var(--color-gold);
            color: var(--color-bg);
        }

        .wishlist-btn {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.6);
            border: none;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 1.25rem;
        }

            .wishlist-btn:hover {
                background: var(--color-danger);
                transform: scale(1.1);
            }

            .wishlist-btn.active {
                background: var(--color-danger);
            }

        .thumbnail-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-3);
        }

        .thumbnail {
            border-radius: var(--radius-md);
            overflow: hidden;
            height: 110px;
            cursor: pointer;
            opacity: 0.7;
            transition: all 0.2s;
            border: 2px solid transparent;
        }

            .thumbnail:hover, .thumbnail.active {
                opacity: 1;
                border-color: var(--color-gold);
            }

            .thumbnail img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Details Section */
        .details-section {
            padding: var(--space-6) 0;
        }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 var(--space-5);
        }

        .details-grid {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: var(--space-6);
        }

        .info-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            margin-bottom: var(--space-5);
        }

            .info-card h2 {
                font-family: var(--font-display);
                font-size: 1.5rem;
                margin-bottom: var(--space-4);
                display: flex;
                align-items: center;
                gap: var(--space-3);
            }

                .info-card h2 i {
                    color: var(--color-gold);
                }

        .package-title {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            margin-bottom: var(--space-3);
        }

        .package-location {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            color: var(--color-text-muted);
            margin-bottom: var(--space-5);
        }

            .package-location i {
                color: var(--color-gold);
            }

        .package-description {
            color: var(--color-text-muted);
            line-height: 1.8;
            white-space: pre-line;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-4);
            margin-top: var(--space-5);
        }

        .stat-box {
            background: var(--color-surface-2);
            border-radius: var(--radius-md);
            padding: var(--space-4);
            text-align: center;
        }

            .stat-box i {
                color: var(--color-gold);
                font-size: 1.25rem;
                margin-bottom: var(--space-3);
                display: block;
            }

        .stat-value {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .stat-label {
            font-size: 0.75rem;
            color: var(--color-text-muted);
        }

        .highlights-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-4);
        }

        .highlight-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

            .highlight-item i {
                color: var(--color-gold);
                width: 20px;
            }

        /* Booking Card */
        .booking-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            position: sticky;
            top: 100px;
        }

        .price-section {
            text-align: center;
            margin-bottom: var(--space-5);
        }

        .price-original {
            font-size: 1.125rem;
            color: var(--color-text-muted);
            text-decoration: line-through;
        }

        .price-current {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 600;
            color: var(--color-gold);
        }

        .price-unit {
            font-size: 1rem;
            color: var(--color-text-muted);
        }

        .availability {
            text-align: center;
            padding: var(--space-3);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-4);
            font-weight: 500;
        }

            .availability.available {
                background: rgba(63, 185, 80, 0.1);
                color: var(--color-success);
            }

            .availability.limited {
                background: rgba(212, 168, 83, 0.1);
                color: var(--color-gold);
            }

            .availability.sold-out {
                background: rgba(248, 81, 73, 0.1);
                color: var(--color-danger);
            }

        .booking-details {
            margin-bottom: var(--space-5);
        }

        .booking-row {
            display: flex;
            justify-content: space-between;
            padding: var(--space-3) 0;
            border-bottom: 1px solid var(--color-border);
        }

            .booking-row:last-child {
                border-bottom: none;
            }

            .booking-row .label {
                color: var(--color-text-muted);
            }

            .booking-row .value {
                font-weight: 500;
            }

        .booking-actions {
            display: flex;
            flex-direction: column;
            gap: var(--space-3);
        }

        /* Reviews */
        .reviews-section {
            margin-top: var(--space-4);
        }

        .reviews-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-5);
        }

        .rating-large {
            font-family: var(--font-display);
            font-size: 3rem;
            font-weight: 600;
            color: var(--color-gold);
        }

        .rating-stars {
            color: var(--color-gold);
        }

        .rating-count {
            color: var(--color-text-muted);
            font-size: 0.875rem;
        }

        .review-card {
            background: var(--color-surface-2);
            border-radius: var(--radius-md);
            padding: var(--space-4);
            margin-bottom: var(--space-4);
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: var(--space-3);
        }

        .reviewer-name {
            font-weight: 500;
        }

        .review-date {
            color: var(--color-text-muted);
            font-size: 0.875rem;
        }

        .review-rating {
            color: var(--color-gold);
            margin-bottom: var(--space-3);
        }

        .review-comment {
            color: var(--color-text-muted);
            line-height: 1.6;
        }

        /* Write Review */
        .write-review {
            background: var(--color-surface-2);
            border-radius: var(--radius-md);
            padding: var(--space-5);
            margin-top: var(--space-5);
        }

            .write-review h4 {
                margin-bottom: var(--space-4);
            }

        .star-rating {
            display: flex;
            gap: var(--space-3);
            margin-bottom: var(--space-4);
        }

            .star-rating i {
                font-size: 1.5rem;
                color: var(--color-border);
                cursor: pointer;
                transition: color 0.2s;
            }

                .star-rating i:hover, .star-rating i.active {
                    color: var(--color-gold);
                }

        .review-textarea {
            width: 100%;
            min-height: 100px;
            padding: var(--space-4);
            background: var(--color-bg);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-text);
            font-family: var(--font-body);
            resize: vertical;
            margin-bottom: var(--space-4);
        }

            .review-textarea:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        /* Toast */
        .toast {
            position: fixed;
            bottom: var(--space-5);
            right: var(--space-5);
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            padding: var(--space-3) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s;
            z-index: 2000;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-danger);
            }

        /* Loading */
        .loading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 50vh;
            gap: var(--space-4);
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-border);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .gallery-container {
                grid-template-columns: 1fr;
            }

            .main-image {
                height: 350px;
            }

            .thumbnail-grid {
                grid-template-columns: repeat(4, 1fr);
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .booking-card {
                position: static;
            }
        }

        @@media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .highlights-grid {
                grid-template-columns: 1fr;
            }

            .thumbnail-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .package-title {
                font-size: 1.75rem;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <a href="/" class="logo"><i class="fas fa-compass"></i> TRAVEL</a>
        <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/packages">Packages</a>
            <a href="/#about">About</a>
            <a href="/#contact">Contact</a>
        </nav>
        <div class="header-actions" id="navAuth">
            <a href="/account/login" class="btn btn-outline">Sign In</a>
            <a href="/account/register" class="btn btn-primary">Get Started</a>
        </div>
    </header>

    <main class="main-content" id="mainContent">
        <div class="loading">
            <div class="spinner"></div>
            <p>Loading package...</p>
        </div>
    </main>

    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage"></span>
    </div>

    <script>
        var packageData = null;
        var reviews = [];
        var avgRating = 0;
        var selectedRating = 0;
        var categoryNames = ['Family', 'Honeymoon', 'Adventure', 'Cruise', 'Luxury', 'Budget', 'Cultural', 'Beach'];

        // Default fallback images
        var defaultImages = [
            'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=800',
            'https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?w=800',
            'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800',
            'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800'
        ];

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function updateNav() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            var nav = document.getElementById('navAuth');

            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    var dashUrl = isAdmin ? '/admin/dashboard' : '/account/dashboard';
                    nav.innerHTML = '<a href="' + dashUrl + '" class="btn btn-outline"><i class="fas fa-user"></i> Dashboard</a>';
                } catch (e) { }
            }
        }

        function getPackageId() {
            var path = window.location.pathname;
            var match = path.match(/\/packages\/(\d+)/i) || path.match(/\/travelpackage\/details\/(\d+)/i);
            if (match) return parseInt(match[1]);
            var params = new URLSearchParams(window.location.search);
            return parseInt(params.get('id')) || 0;
        }

        function formatDate(dateStr) {
            if (!dateStr) return 'N/A';
            var date = new Date(dateStr);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        }

        function calcDuration(start, end) {
            if (!start || !end) return 1;
            var s = new Date(start);
            var e = new Date(end);
            var days = Math.ceil((e - s) / (1000 * 60 * 60 * 24)) + 1;
            return days > 0 ? days : 1;
        }

        function renderStars(rating, interactive) {
            var html = '';
            for (var i = 1; i <= 5; i++) {
                if (interactive) {
                    html += '<i class="' + (i <= rating ? 'fas' : 'far') + ' fa-star ' + (i <= rating ? 'active' : '') + '" data-rating="' + i + '" onclick="setRating(' + i + ')"></i>';
                } else {
                    html += '<i class="' + (i <= rating ? 'fas' : 'far') + ' fa-star"></i>';
                }
            }
            return html;
        }

        function setRating(rating) {
            selectedRating = rating;
            var stars = document.querySelectorAll('.star-rating i');
            stars.forEach(function(star, index) {
                if (index < rating) {
                    star.classList.remove('far');
                    star.classList.add('fas', 'active');
                } else {
                    star.classList.remove('fas', 'active');
                    star.classList.add('far');
                }
            });
        }

        // FIX: Properly extract images from database response
        function getPackageImages(pkg) {
            var images = [];

            // Check for images array (from API - array of image objects with imageUrl property)
            if (pkg.images && pkg.images.length > 0) {
                for (var i = 0; i < pkg.images.length; i++) {
                    var img = pkg.images[i];
                    // Handle both object with imageUrl property and direct string
                    var url = (typeof img === 'string') ? img : (img.imageUrl || img.url || img);
                    if (url) images.push(url);
                }
            }

            // Check for imageUrls array (direct URLs)
            if (images.length === 0 && pkg.imageUrls && pkg.imageUrls.length > 0) {
                for (var j = 0; j < pkg.imageUrls.length; j++) {
                    if (pkg.imageUrls[j]) images.push(pkg.imageUrls[j]);
                }
            }

            // Fallback to single imageUrl
            if (images.length === 0 && pkg.imageUrl) {
                images.push(pkg.imageUrl);
            }

            // Use defaults if still no images
            if (images.length === 0) {
                images = defaultImages.slice(0, 4);
            }

            // Ensure we have at least 4 images for the gallery
            while (images.length < 4) {
                images.push(defaultImages[images.length % defaultImages.length]);
            }

            return images;
        }

        async function loadPackage() {
            var packageId = getPackageId();
            if (!packageId) {
                showError('Invalid package ID');
                return;
            }

            try {
                // Load package
                var response = await fetch('/api/packages/' + packageId);
                if (!response.ok) throw new Error('Package not found');

                var result = await response.json();
                packageData = result.data || result;

                // Load reviews - CORRECT ENDPOINT: /api/review/package/{id} (singular)
                try {
                    var reviewResponse = await fetch('/api/review/package/' + packageId);
                    if (reviewResponse.ok) {
                        var reviewResult = await reviewResponse.json();
                        reviews = reviewResult.data || [];
                        avgRating = reviewResult.averageRating || 0;
                    }
                } catch (e) {
                    console.log('Could not load reviews:', e);
                }

                renderPackage();

            } catch (error) {
                console.error('Error:', error);
                showError('Package not found');
            }
        }

        function showError(message) {
            document.getElementById('mainContent').innerHTML =
                '<div class="container" style="padding: 100px 0; text-align: center;">' +
                '<i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: var(--color-text-muted); margin-bottom: 16px;"></i>' +
                '<h2>' + message + '</h2>' +
                '<p style="color: var(--color-text-muted);">The package you\'re looking for doesn\'t exist or has been removed.</p>' +
                '<a href="/packages" class="btn btn-primary" style="margin-top: 24px;">Browse Packages</a></div>';
        }

        function renderPackage() {
            var pkg = packageData;

            // FIX: Get images properly from database
            var images = getPackageImages(pkg);

            var duration = calcDuration(pkg.startDate, pkg.endDate);
            var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
            var displayPrice = hasDiscount ? pkg.discountedPrice : pkg.price;
            var discountPercent = hasDiscount ? Math.round((1 - pkg.discountedPrice / pkg.price) * 100) : 0;
            var categoryName = categoryNames[pkg.packageType] || 'Travel';
            var token = localStorage.getItem('token');

            var availabilityClass = 'available';
            var availabilityText = pkg.availableRooms + ' rooms available';
            var availabilityIcon = 'check-circle';
            if (pkg.availableRooms <= 0) {
                availabilityClass = 'sold-out';
                availabilityText = 'Sold Out';
                availabilityIcon = 'times-circle';
            } else if (pkg.availableRooms <= 3) {
                availabilityClass = 'limited';
                availabilityText = 'Only ' + pkg.availableRooms + ' rooms left!';
                availabilityIcon = 'exclamation-circle';
            }

            var html = '';

            // Gallery Section
            html += '<section class="gallery-section">';
            html += '<div class="gallery-container">';
            html += '<div class="main-image">';
            html += '<img id="mainImg" src="' + images[0] + '" alt="' + pkg.destination + '" onerror="this.src=\'' + defaultImages[0] + '\'">';
            html += '<div class="image-badges">';
            if (hasDiscount) {
                html += '<span class="badge badge-sale">' + discountPercent + '% OFF</span>';
            }
            html += '<span class="badge badge-category">' + categoryName + '</span>';
            html += '</div>';
            html += '<button class="wishlist-btn" id="wishlistBtn" onclick="toggleWishlist()"><i class="far fa-heart"></i></button>';
            html += '</div>';
            html += '<div class="thumbnail-grid">';
            for (var i = 0; i < 4; i++) {
                html += '<div class="thumbnail ' + (i === 0 ? 'active' : '') + '" onclick="changeImage(' + i + ', \'' + images[i] + '\')">';
                html += '<img src="' + images[i] + '" alt="Image ' + (i + 1) + '" onerror="this.src=\'' + defaultImages[i] + '\'">';
                html += '</div>';
            }
            html += '</div></div></section>';

            // Details Section
            html += '<section class="details-section"><div class="container"><div class="details-grid">';

            // Left Column
            html += '<div>';

            // Title Card
            html += '<div class="info-card">';
            html += '<h1 class="package-title">' + (pkg.destination || 'Travel Package') + '</h1>';
            html += '<div class="package-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Unknown') + '</div>';
            html += '<p class="package-description">' + (pkg.description || 'Experience an unforgettable journey to ' + pkg.destination + '. This carefully curated package includes premium accommodation, guided tours, and authentic local experiences.') + '</p>';

            // Stats
            html += '<div class="stats-grid">';
            html += '<div class="stat-box"><i class="far fa-clock"></i><span class="stat-value">' + duration + ' Days</span><span class="stat-label">Duration</span></div>';
            html += '<div class="stat-box"><i class="fas fa-bed"></i><span class="stat-value">' + (pkg.availableRooms || 0) + '</span><span class="stat-label">Rooms</span></div>';
            html += '<div class="stat-box"><i class="fas fa-star"></i><span class="stat-value">' + (avgRating > 0 ? avgRating.toFixed(1) : 'New') + '</span><span class="stat-label">Rating</span></div>';
            html += '<div class="stat-box"><i class="fas fa-users"></i><span class="stat-value">' + reviews.length + '</span><span class="stat-label">Reviews</span></div>';
            html += '</div></div>';

            // Highlights
            html += '<div class="info-card"><h2><i class="fas fa-check-circle"></i> Package Highlights</h2>';
            html += '<div class="highlights-grid">';
            html += '<div class="highlight-item"><i class="fas fa-calendar"></i><span>' + formatDate(pkg.startDate) + ' - ' + formatDate(pkg.endDate) + '</span></div>';
            html += '<div class="highlight-item"><i class="fas fa-tag"></i><span>' + categoryName + ' Package</span></div>';
            if (pkg.minimumAge || pkg.maximumAge) {
                html += '<div class="highlight-item"><i class="fas fa-user-friends"></i><span>Ages ' + (pkg.minimumAge || 0) + ' - ' + (pkg.maximumAge || 99) + '</span></div>';
            }
            html += '<div class="highlight-item"><i class="fas fa-concierge-bell"></i><span>Premium Services</span></div>';
            html += '</div></div>';

            // Itinerary
            if (pkg.itinerary) {
                html += '<div class="info-card"><h2><i class="fas fa-route"></i> Itinerary</h2>';
                html += '<p class="package-description">' + pkg.itinerary + '</p></div>';
            }

            // Reviews Section
            html += '<div class="info-card reviews-section">';
            html += '<div class="reviews-header">';
            html += '<h2><i class="fas fa-star"></i> Reviews</h2>';
            html += '<div><span class="rating-large">' + (avgRating > 0 ? avgRating.toFixed(1) : '—') + '</span>';
            html += '<div class="rating-stars">' + renderStars(Math.round(avgRating), false) + '</div>';
            html += '<span class="rating-count">' + reviews.length + ' reviews</span></div>';
            html += '</div>';

            if (reviews.length > 0) {
                reviews.forEach(function(review) {
                    html += '<div class="review-card">';
                    html += '<div class="review-header"><span class="reviewer-name">' + (review.userName || 'Anonymous') + '</span>';
                    html += '<span class="review-date">' + formatDate(review.createdAt) + '</span></div>';
                    html += '<div class="review-rating">' + renderStars(review.rating, false) + '</div>';
                    html += '<p class="review-comment">' + review.comment + '</p></div>';
                });
            } else {
                html += '<p style="text-align: center; color: var(--color-text-muted); padding: 20px;">No reviews yet. Be the first to review!</p>';
            }

            // Write Review
            if (token) {
                html += '<div class="write-review">';
                html += '<h4>Write a Review</h4>';
                html += '<div class="star-rating">' + renderStars(0, true) + '</div>';
                html += '<textarea id="reviewComment" class="review-textarea" placeholder="Share your experience..."></textarea>';
                html += '<button class="btn btn-primary" onclick="submitReview()"><i class="fas fa-paper-plane"></i> Submit Review</button>';
                html += '</div>';
            }

            html += '</div>'; // End reviews

            html += '</div>'; // End left column

            // Right Column - Booking Card
            html += '<div>';
            html += '<div class="booking-card">';
            html += '<div class="price-section">';
            if (hasDiscount) {
                html += '<span class="price-original">$' + pkg.price.toLocaleString() + '</span> ';
            }
            html += '<span class="price-current">$' + displayPrice.toLocaleString() + '</span>';
            html += '<span class="price-unit"> / person</span>';
            html += '</div>';

            html += '<div class="availability ' + availabilityClass + '"><i class="fas fa-' + availabilityIcon + '"></i> ' + availabilityText + '</div>';

            html += '<div class="booking-details">';
            html += '<div class="booking-row"><span class="label">Dates</span><span class="value">' + formatDate(pkg.startDate) + ' - ' + formatDate(pkg.endDate) + '</span></div>';
            html += '<div class="booking-row"><span class="label">Duration</span><span class="value">' + duration + ' Days</span></div>';
            html += '<div class="booking-row"><span class="label">Category</span><span class="value">' + categoryName + '</span></div>';
            html += '</div>';

            html += '<div class="booking-actions">';
            if (pkg.availableRooms > 0) {
                html += '<a href="/booking/create/' + pkg.packageId + '" class="btn btn-primary btn-block"><i class="fas fa-calendar-plus"></i> Book Now</a>';
                html += '<button class="btn btn-success btn-block" onclick="addToCart(' + pkg.packageId + ')"><i class="fas fa-shopping-cart"></i> Add to Cart</button>';
            } else {
                html += '<button class="btn btn-outline btn-block" onclick="joinWaitlist(' + pkg.packageId + ')"><i class="fas fa-bell"></i> Join Waiting List</button>';
            }
            html += '<button class="btn btn-outline btn-block" onclick="toggleWishlist()"><i class="far fa-heart"></i> Add to Wishlist</button>';
            html += '</div>';

            html += '</div></div>'; // End booking card and right column

            html += '</div></div></section>'; // End details grid and section

            document.getElementById('mainContent').innerHTML = html;

            // Check wishlist status
            checkWishlistStatus();
        }

        function changeImage(index, src) {
            document.getElementById('mainImg').src = src;
            var thumbnails = document.querySelectorAll('.thumbnail');
            thumbnails.forEach(function(thumb, i) {
                thumb.classList.toggle('active', i === index);
            });
        }

        async function checkWishlistStatus() {
            var token = localStorage.getItem('token');
            if (!token || !packageData) return;

            try {
                var response = await fetch('/api/wishlist/check/' + packageData.packageId, {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                if (response.ok) {
                    var result = await response.json();
                    if (result.inWishlist) {
                        var btn = document.getElementById('wishlistBtn');
                        var icon = btn.querySelector('i');
                        btn.classList.add('active');
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                    }
                }
            } catch (e) { }
        }

        async function toggleWishlist() {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to add to wishlist', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            var btn = document.getElementById('wishlistBtn');
            var icon = btn.querySelector('i');
            var isInWishlist = btn.classList.contains('active');

            try {
                var response = await fetch('/api/wishlist/' + packageData.packageId, {
                    method: isInWishlist ? 'DELETE' : 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    if (isInWishlist) {
                        btn.classList.remove('active');
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        showToast('Removed from wishlist');
                    } else {
                        btn.classList.add('active');
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        showToast('Added to wishlist!');
                    }
                } else {
                    var error = await response.json();
                    if (error.message && error.message.toLowerCase().indexOf('already') >= 0) {
                        // Try DELETE
                        var delResponse = await fetch('/api/wishlist/' + packageData.packageId, {
                            method: 'DELETE',
                            headers: { 'Authorization': 'Bearer ' + token }
                        });
                        if (delResponse.ok) {
                            btn.classList.remove('active');
                            icon.classList.remove('fas');
                            icon.classList.add('far');
                            showToast('Removed from wishlist');
                        }
                    } else {
                        showToast(error.message || 'Failed to update wishlist', 'error');
                    }
                }
            } catch (error) {
                console.error('Wishlist error:', error);
                showToast('Error updating wishlist', 'error');
            }
        }

        // CORRECT ENDPOINT: /api/cart/add (not /api/cart)
        async function addToCart(packageId) {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to add to cart', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            try {
                var response = await fetch('/api/cart/add', {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        packageId: packageId,
                        quantity: 1,
                        numberOfGuests: 1
                    })
                });

                if (response.ok) {
                    showToast('Added to cart!');
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to add to cart', 'error');
                }
            } catch (error) {
                console.error('Cart error:', error);
                showToast('Error adding to cart', 'error');
            }
        }

        async function joinWaitlist(packageId) {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to join waitlist', 'error');
                setTimeout(function() { window.location.href = '/account/login'; }, 1500);
                return;
            }

            try {
                var response = await fetch('/api/waitlist/' + packageId, {
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.ok) {
                    showToast('Added to waiting list! We\'ll notify you when available.');
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to join waitlist', 'error');
                }
            } catch (error) {
                showToast('Error joining waitlist', 'error');
            }
        }

        // CORRECT ENDPOINT: /api/review/package (singular)
        async function submitReview() {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login to submit a review', 'error');
                return;
            }

            if (selectedRating === 0) {
                showToast('Please select a rating', 'error');
                return;
            }

            var comment = document.getElementById('reviewComment').value.trim();
            if (!comment) {
                showToast('Please write a comment', 'error');
                return;
            }

            try {
                var response = await fetch('/api/review/package', {
                    method: 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        packageId: packageData.packageId,
                        rating: selectedRating,
                        comment: comment
                    })
                });

                if (response.ok) {
                    showToast('Review submitted successfully!');
                    document.getElementById('reviewComment').value = '';
                    selectedRating = 0;
                    setTimeout(function() { location.reload(); }, 1500);
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to submit review', 'error');
                }
            } catch (error) {
                console.error('Review error:', error);
                showToast('Error submitting review', 'error');
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateNav();
            loadPackage();
        });
    </script>
