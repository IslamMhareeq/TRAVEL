@{
    ViewData["Title"] = "Destinations";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destinations - TRAVEL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-charcoal: #21262d;
            --color-slate: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-white: #f0f6fc;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.3);
            --color-success: #3fb950;
            --font-display: 'Playfair Display', serif;
            --font-body: 'Inter', sans-serif;
            --radius-sm: 4px;
            --radius-md: 8px;
            --radius-lg: 12px;
            --radius-xl: 20px;
            --radius-full: 9999px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
            --space-8: 64px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: var(--space-4) var(--space-6);
            background: rgba(13, 17, 23, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-slate);
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .nav {
            display: flex;
            align-items: center;
            gap: var(--space-6);
        }

            .nav a {
                color: var(--color-silver);
                text-decoration: none;
                font-size: 0.9375rem;
                font-weight: 500;
                transition: color 0.2s;
            }

                .nav a:hover, .nav a.active {
                    color: var(--color-gold);
                }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            font-family: var(--font-body);
            font-size: 0.9375rem;
            font-weight: 500;
            text-decoration: none;
            border-radius: var(--radius-md);
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-ghost {
            background: transparent;
            color: var(--color-silver);
        }

            .btn-ghost:hover {
                color: var(--color-gold);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 20px rgba(212, 168, 83, 0.3);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-white);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        /* Page Hero */
        .page-hero {
            padding: 140px var(--space-6) var(--space-8);
            background: linear-gradient(rgba(13,17,23,0.8), rgba(13,17,23,0.95)), url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=1920&q=80') center/cover;
            text-align: center;
        }

            .page-hero h1 {
                font-family: var(--font-display);
                font-size: 3.5rem;
                font-weight: 500;
                margin-bottom: var(--space-4);
            }

            .page-hero p {
                font-size: 1.25rem;
                color: var(--color-silver);
                max-width: 600px;
                margin: 0 auto var(--space-6);
            }

        .stats-bar {
            display: flex;
            justify-content: center;
            gap: var(--space-8);
            padding-top: var(--space-6);
            border-top: 1px solid var(--color-slate);
            max-width: 600px;
            margin: 0 auto;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            color: var(--color-gold);
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--color-silver);
        }

        /* Main Content */
        .main-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: var(--space-8) var(--space-6);
        }

        /* Search & Filter */
        .filter-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-6);
            gap: var(--space-4);
            flex-wrap: wrap;
        }

        .search-box {
            position: relative;
            flex: 1;
            max-width: 400px;
        }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-silver);
            }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-navy);
                border: 1px solid var(--color-slate);
                border-radius: var(--radius-md);
                color: var(--color-white);
                font-size: 0.9375rem;
                transition: all 0.2s;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--color-gold);
                }

                .search-box input::placeholder {
                    color: var(--color-steel);
                }

        .filter-tags {
            display: flex;
            gap: var(--space-2);
            flex-wrap: wrap;
        }

        .filter-tag {
            padding: var(--space-2) var(--space-4);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-full);
            color: var(--color-silver);
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s;
        }

            .filter-tag:hover, .filter-tag.active {
                background: var(--color-gold-muted);
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        /* Destinations Grid */
        .destinations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: var(--space-5);
        }

        .destination-card {
            position: relative;
            height: 400px;
            border-radius: var(--radius-xl);
            overflow: hidden;
            cursor: pointer;
            transition: all 0.4s;
        }

            .destination-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            }

            .destination-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.6s;
            }

            .destination-card:hover img {
                transform: scale(1.1);
            }

            .destination-card::before {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, transparent 100%);
                z-index: 1;
            }

        .destination-badge {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            display: flex;
            gap: var(--space-2);
            z-index: 2;
        }

        .badge {
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge-packages {
            background: var(--color-gold);
            color: var(--color-midnight);
        }

        .badge-popular {
            background: var(--color-success);
            color: white;
        }

        .destination-price {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            padding: var(--space-2) var(--space-4);
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: var(--radius-md);
            z-index: 2;
        }

            .destination-price .label {
                font-size: 0.6875rem;
                color: var(--color-silver);
                text-transform: uppercase;
                letter-spacing: 0.05em;
            }

            .destination-price .amount {
                font-family: var(--font-display);
                font-size: 1.25rem;
                font-weight: 600;
                color: var(--color-gold);
            }

        .destination-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: var(--space-6);
            z-index: 2;
        }

        .destination-country {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-1) var(--space-3);
            background: rgba(255,255,255,0.1);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            color: var(--color-gold);
            margin-bottom: var(--space-3);
            backdrop-filter: blur(10px);
        }

        .destination-name {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 500;
            margin-bottom: var(--space-2);
        }

        .destination-description {
            font-size: 0.875rem;
            color: var(--color-silver);
            margin-bottom: var(--space-4);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .destination-meta {
            display: flex;
            gap: var(--space-4);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

            .meta-item i {
                color: var(--color-gold);
            }

        .destination-action {
            position: absolute;
            bottom: var(--space-6);
            right: var(--space-6);
            z-index: 2;
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.3s;
        }

        .destination-card:hover .destination-action {
            opacity: 1;
            transform: translateY(0);
        }

        /* Loading */
        .loading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: var(--space-8);
            grid-column: 1 / -1;
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: var(--space-4);
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .empty-state {
            text-align: center;
            padding: var(--space-8);
            grid-column: 1 / -1;
        }

            .empty-state i {
                font-size: 4rem;
                color: var(--color-steel);
                margin-bottom: var(--space-4);
            }

            .empty-state h3 {
                font-size: 1.5rem;
                margin-bottom: var(--space-2);
            }

            .empty-state p {
                color: var(--color-silver);
            }

        /* Footer */
        .footer {
            background: var(--color-navy);
            border-top: 1px solid var(--color-slate);
            padding: var(--space-6);
            text-align: center;
            color: var(--color-steel);
            font-size: 0.875rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .nav {
                display: none;
            }

            .page-hero h1 {
                font-size: 2.5rem;
            }

            .stats-bar {
                flex-direction: column;
                gap: var(--space-4);
            }

            .filter-section {
                flex-direction: column;
                align-items: stretch;
            }

            .search-box {
                max-width: none;
            }

            .destinations-grid {
                grid-template-columns: 1fr;
            }

            .destination-card {
                height: 350px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">
                <div class="logo-icon"><i class="fas fa-compass"></i></div>
                <span class="logo-text">TRAVEL</span>
            </a>
            <nav class="nav">
                <a href="/">Home</a>
                <a href="/packages">Packages</a>
                <a href="/destinations" class="active">Destinations</a>
                <a href="/#about">About</a>
                <a href="/#contact">Contact</a>
            </nav>
            <div class="nav-actions" id="navAuth">
                <a href="/account/login" class="btn btn-ghost">Sign In</a>
                <a href="/account/register" class="btn btn-primary">Get Started</a>
            </div>
        </div>
    </header>

    <!-- Page Hero -->
    <section class="page-hero">
        <h1>Explore <span style="color: var(--color-gold);">Destinations</span></h1>
        <p>Discover breathtaking locations around the world. Each destination offers unique experiences waiting to be explored.</p>
        <div class="stats-bar">
            <div class="stat-item">
                <div class="stat-value" id="totalDestinations">--</div>
                <div class="stat-label">Destinations</div>
            </div>
            <div class="stat-item">
                <div class="stat-value" id="totalPackages">--</div>
                <div class="stat-label">Packages</div>
            </div>
            <div class="stat-item">
                <div class="stat-value" id="totalCountries">--</div>
                <div class="stat-label">Countries</div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Filter Section -->
        <div class="filter-section">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" placeholder="Search destinations...">
            </div>
            <div class="filter-tags">
                <span class="filter-tag active" data-filter="all">All</span>
                <span class="filter-tag" data-filter="popular">Popular</span>
                <span class="filter-tag" data-filter="asia">Asia</span>
                <span class="filter-tag" data-filter="europe">Europe</span>
                <span class="filter-tag" data-filter="americas">Americas</span>
                <span class="filter-tag" data-filter="africa">Africa</span>
                <span class="filter-tag" data-filter="oceania">Oceania</span>
            </div>
        </div>

        <!-- Destinations Grid -->
        <div class="destinations-grid" id="destinationsGrid">
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading destinations...</p>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 TRAVEL. All rights reserved.</p>
    </footer>

    <script>
        var allDestinations = [];
        var currentFilter = 'all';

        // Region mapping
        var regionMap = {
            'Indonesia': 'asia',
            'Maldives': 'asia',
            'Thailand': 'asia',
            'Japan': 'asia',
            'Vietnam': 'asia',
            'UAE': 'asia',
            'Greece': 'europe',
            'Switzerland': 'europe',
            'France': 'europe',
            'Italy': 'europe',
            'Spain': 'europe',
            'Iceland': 'europe',
            'Norway': 'europe',
            'Czech Republic': 'europe',
            'USA': 'americas',
            'Peru': 'americas',
            'Costa Rica': 'americas',
            'Brazil': 'americas',
            'Caribbean': 'americas',
            'Kenya': 'africa',
            'Morocco': 'africa',
            'Egypt': 'africa',
            'Australia': 'oceania',
            'New Zealand': 'oceania',
            'Fiji': 'oceania'
        };

        // Check auth
        function updateNav() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            var navAuth = document.getElementById('navAuth');

            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    navAuth.innerHTML = '<a href="' + (isAdmin ? '/admin/dashboard' : '/account/dashboard') + '" class="btn btn-ghost"><i class="fas fa-user"></i> Dashboard</a>';
                } catch(e) {}
            }
        }

        function getDefaultImage(index) {
            var images = [
                'https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=800&q=80',
                'https://images.unsplash.com/photo-1499856871958-5b9627545d1a?w=800&q=80',
                'https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=800&q=80',
                'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80',
                'https://images.unsplash.com/photo-1516483638261-f4dbaf036963?w=800&q=80',
                'https://images.unsplash.com/photo-1530789253388-582c481c54b0?w=800&q=80'
            ];
            return images[index % images.length];
        }

        function getDestinationDescription(country) {
            var descriptions = {
                'Indonesia': 'Tropical paradise with ancient temples, lush rice terraces, and pristine beaches.',
                'Maldives': 'Crystal-clear waters and overwater villas in the Indian Ocean paradise.',
                'Thailand': 'Golden temples, vibrant street food, and stunning tropical islands.',
                'Japan': 'Ancient traditions meet futuristic cities in this fascinating island nation.',
                'Vietnam': 'Rich history, incredible cuisine, and breathtaking natural landscapes.',
                'UAE': 'Luxurious modernity rising from the Arabian desert.',
                'Greece': 'Ancient ruins, whitewashed villages, and stunning Mediterranean coastlines.',
                'Switzerland': 'Majestic Alps, pristine lakes, and charming mountain villages.',
                'France': 'World-class cuisine, iconic landmarks, and timeless elegance.',
                'Italy': 'Art, history, and culinary excellence in every corner.',
                'Spain': 'Passionate culture, stunning architecture, and beautiful beaches.',
                'Iceland': 'Land of fire and ice with otherworldly landscapes.',
                'Norway': 'Dramatic fjords and the magical Northern Lights.',
                'Czech Republic': 'Fairytale castles and historic Old Town charm.',
                'USA': 'Diverse landscapes from coast to coast.',
                'Peru': 'Ancient Incan mysteries and breathtaking Andean peaks.',
                'Costa Rica': 'Incredible biodiversity and eco-adventure paradise.',
                'Brazil': 'Vibrant culture, Amazon rainforest, and endless beaches.',
                'Caribbean': 'Turquoise waters and island-hopping adventures.',
                'Kenya': 'Epic wildlife safaris and the Great Migration.',
                'Morocco': 'Exotic medinas and golden Sahara dunes.',
                'Egypt': 'Ancient pyramids and timeless Nile cruises.',
                'Australia': 'Unique wildlife, Great Barrier Reef, and endless outback.',
                'New Zealand': 'Stunning landscapes from Middle-earth.',
                'Fiji': 'Remote island paradise with legendary hospitality.'
            };
            return descriptions[country] || 'Discover amazing experiences in this beautiful destination.';
        }

        async function loadDestinations() {
            var grid = document.getElementById('destinationsGrid');

            try {
                var response = await fetch('/api/travelpackage');

                if (response.ok) {
                    var result = await response.json();
                    var packages = result.data || result || [];

                    // Group by country
                    var countries = {};
                    for (var i = 0; i < packages.length; i++) {
                        var p = packages[i];
                        if (p.country) {
                            if (!countries[p.country]) {
                                countries[p.country] = {
                                    country: p.country,
                                    destinations: [p.destination],
                                    imageUrl: p.imageUrl || getDefaultImage(Object.keys(countries).length),
                                    minPrice: p.discountedPrice || p.price,
                                    maxPrice: p.discountedPrice || p.price,
                                    count: 1,
                                    totalRooms: p.availableRooms || 0,
                                    region: regionMap[p.country] || 'other'
                                };
                            } else {
                                countries[p.country].count++;
                                countries[p.country].totalRooms += (p.availableRooms || 0);
                                if (!countries[p.country].destinations.includes(p.destination)) {
                                    countries[p.country].destinations.push(p.destination);
                                }
                                var currentPrice = p.discountedPrice || p.price;
                                if (currentPrice < countries[p.country].minPrice) {
                                    countries[p.country].minPrice = currentPrice;
                                }
                                if (currentPrice > countries[p.country].maxPrice) {
                                    countries[p.country].maxPrice = currentPrice;
                                }
                            }
                        }
                    }

                    allDestinations = Object.values(countries);

                    // Sort by package count (most popular first)
                    allDestinations.sort(function(a, b) {
                        return b.count - a.count;
                    });

                    // Update stats
                    document.getElementById('totalDestinations').textContent = allDestinations.reduce(function(sum, d) { return sum + d.destinations.length; }, 0);
                    document.getElementById('totalPackages').textContent = packages.length;
                    document.getElementById('totalCountries').textContent = allDestinations.length;

                    renderDestinations();
                } else {
                    showEmptyState();
                }
            } catch (error) {
                console.error('Error loading destinations:', error);
                showEmptyState();
            }
        }

        function renderDestinations() {
            var grid = document.getElementById('destinationsGrid');
            var searchTerm = document.getElementById('searchInput').value.toLowerCase();

            var filtered = allDestinations.filter(function(dest) {
                // Search filter
                var matchesSearch = dest.country.toLowerCase().includes(searchTerm) ||
                                   dest.destinations.some(function(d) { return d.toLowerCase().includes(searchTerm); });

                // Region filter
                var matchesRegion = currentFilter === 'all' ||
                                   (currentFilter === 'popular' && dest.count >= 2) ||
                                   dest.region === currentFilter;

                return matchesSearch && matchesRegion;
            });

            if (filtered.length === 0) {
                grid.innerHTML = '<div class="empty-state"><i class="fas fa-globe"></i><h3>No Destinations Found</h3><p>Try adjusting your search or filters</p></div>';
                return;
            }

            var html = '';
            for (var i = 0; i < filtered.length; i++) {
                var dest = filtered[i];
                var isPopular = dest.count >= 2;
                var description = getDestinationDescription(dest.country);

                html += '<div class="destination-card" onclick="window.location.href=\'/packages?country=' + encodeURIComponent(dest.country) + '\'">';
                html += '<img src="' + dest.imageUrl + '" alt="' + dest.country + '" onerror="this.src=\'' + getDefaultImage(i) + '\'">';

                html += '<div class="destination-badge">';
                html += '<span class="badge badge-packages">' + dest.count + ' Package' + (dest.count > 1 ? 's' : '') + '</span>';
                if (isPopular) {
                    html += '<span class="badge badge-popular"><i class="fas fa-fire"></i> Popular</span>';
                }
                html += '</div>';

                html += '<div class="destination-price">';
                html += '<div class="label">From</div>';
                html += '<div class="amount">$' + Math.round(dest.minPrice).toLocaleString() + '</div>';
                html += '</div>';

                html += '<div class="destination-content">';
                html += '<div class="destination-country"><i class="fas fa-map-marker-alt"></i> ' + dest.country + '</div>';
                html += '<h3 class="destination-name">' + dest.destinations[0] + '</h3>';
                html += '<p class="destination-description">' + description + '</p>';
                html += '<div class="destination-meta">';
                html += '<span class="meta-item"><i class="fas fa-suitcase"></i> ' + dest.count + ' Packages</span>';
                html += '<span class="meta-item"><i class="fas fa-bed"></i> ' + dest.totalRooms + ' Rooms</span>';
                html += '</div>';
                html += '</div>';

                html += '<div class="destination-action">';
                html += '<span class="btn btn-primary">Explore <i class="fas fa-arrow-right"></i></span>';
                html += '</div>';

                html += '</div>';
            }

            grid.innerHTML = html;
        }

        function showEmptyState() {
            var grid = document.getElementById('destinationsGrid');
            grid.innerHTML = '<div class="empty-state"><i class="fas fa-globe"></i><h3>No Destinations Available</h3><p>Check back soon for amazing destinations!</p></div>';

            document.getElementById('totalDestinations').textContent = '0';
            document.getElementById('totalPackages').textContent = '0';
            document.getElementById('totalCountries').textContent = '0';
        }

        // Event Listeners
        document.getElementById('searchInput').addEventListener('input', renderDestinations);

        document.querySelectorAll('.filter-tag').forEach(function(tag) {
            tag.addEventListener('click', function() {
                document.querySelectorAll('.filter-tag').forEach(function(t) { t.classList.remove('active'); });
                this.classList.add('active');
                currentFilter = this.dataset.filter;
                renderDestinations();
            });
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateNav();
            loadDestinations();
        });
    </script>
</body>
