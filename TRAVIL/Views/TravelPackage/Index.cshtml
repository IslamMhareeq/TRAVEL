@{
    ViewData["Title"] = "Travel Packages";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Packages - TRAVIL</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    
    <style>
        :root {
            --color-midnight: #0d1117; --color-navy: #161b22; --color-slate: #21262d;
            --color-charcoal: #30363d; --color-steel: #484f58;
            --color-gold: #d4a853; --color-gold-light: #e8c875; --color-gold-dark: #b8923f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-white: #ffffff; --color-silver: #8b949e; --color-mist: #c9d1d9;
            --color-success: #3fb950; --color-error: #f85149;
            --font-display: 'Cormorant Garamond', Georgia, serif;
            --font-body: 'Outfit', -apple-system, BlinkMacSystemFont, sans-serif;
            --radius-md: 10px; --radius-lg: 16px; --radius-full: 9999px;
            --shadow-gold: 0 8px 32px rgba(212, 168, 83, 0.25);
            --transition-fast: 150ms ease; --transition-normal: 300ms ease;
            --space-1: 4px; --space-2: 8px; --space-3: 12px; --space-4: 16px;
            --space-5: 24px; --space-6: 32px; --space-7: 48px; --space-8: 64px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: var(--font-body); background: var(--color-midnight); color: var(--color-mist); line-height: 1.6; }

        .page-transition {
            position: fixed; inset: 0; background: var(--color-midnight); z-index: 10000;
            display: flex; align-items: center; justify-content: center;
            opacity: 0; visibility: hidden; transition: opacity 0.4s ease, visibility 0.4s ease;
        }
        .page-transition.active { opacity: 1; visibility: visible; }
        .page-transition .loader {
            width: 48px; height: 48px; border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold); border-radius: 50%; animation: spin 0.8s linear infinite;
        }

        /* Navbar */
        .navbar {
            position: fixed; top: 0; left: 0; right: 0; z-index: 1000;
            padding: 16px 0; background: rgba(13, 17, 23, 0.95); backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--color-slate);
        }
        .navbar .container {
            max-width: 1400px; margin: 0 auto; padding: 0 24px;
            display: flex; align-items: center; justify-content: space-between;
        }
        .nav-brand { display: flex; align-items: center; gap: 12px; text-decoration: none; }
        .nav-brand .logo {
            width: 42px; height: 42px;
            background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
            border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;
            font-size: 1.125rem; color: var(--color-midnight);
        }
        .nav-brand span { font-family: var(--font-display); font-size: 1.5rem; font-weight: 500; color: var(--color-white); letter-spacing: 0.1em; }

        .nav-links { display: flex; gap: var(--space-5); }
        .nav-links a { color: var(--color-silver); text-decoration: none; font-weight: 500; transition: color var(--transition-fast); }
        .nav-links a:hover, .nav-links a.active { color: var(--color-gold); }

        .nav-auth { display: flex; gap: var(--space-3); }

        .btn {
            display: inline-flex; align-items: center; justify-content: center; gap: var(--space-2);
            padding: var(--space-3) var(--space-5); border: none; border-radius: var(--radius-md);
            font-family: var(--font-body); font-size: 0.875rem; font-weight: 600;
            cursor: pointer; transition: all var(--transition-normal); text-decoration: none;
        }
        .btn-primary { background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%); color: var(--color-midnight); }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: var(--shadow-gold); }
        .btn-ghost { background: transparent; color: var(--color-mist); border: 1px solid var(--color-charcoal); }
        .btn-ghost:hover { border-color: var(--color-gold); color: var(--color-gold); }
        .btn-sm { padding: var(--space-2) var(--space-4); font-size: 0.8125rem; }

        /* Page Header */
        .page-header {
            padding: 140px 24px 60px; background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
        }
        .page-header .container { max-width: 1400px; margin: 0 auto; }
        .page-header h1 {
            font-family: var(--font-display); font-size: 3rem; font-weight: 500;
            color: var(--color-white); margin-bottom: var(--space-3);
        }
        .page-header p { font-size: 1.125rem; color: var(--color-silver); max-width: 600px; }

        /* Filters */
        .filters-section {
            padding: var(--space-5) 24px; background: var(--color-midnight);
            border-bottom: 1px solid var(--color-slate); position: sticky; top: 74px; z-index: 100;
        }
        .filters-section .container { max-width: 1400px; margin: 0 auto; display: flex; gap: var(--space-4); flex-wrap: wrap; align-items: center; }

        .filter-group { display: flex; flex-direction: column; gap: var(--space-2); }
        .filter-group label { font-size: 0.75rem; font-weight: 600; color: var(--color-steel); text-transform: uppercase; }
        .filter-control {
            padding: var(--space-3) var(--space-4); background: var(--color-slate);
            border: 1px solid var(--color-charcoal); border-radius: var(--radius-md);
            font-family: var(--font-body); font-size: 0.875rem; color: var(--color-white);
            min-width: 180px;
        }
        .filter-control:focus { outline: none; border-color: var(--color-gold); }

        /* Packages Grid */
        .packages-section { padding: var(--space-7) 24px; }
        .packages-section .container { max-width: 1400px; margin: 0 auto; }

        .packages-grid {
            display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: var(--space-5);
        }

        .package-card {
            background: var(--color-navy); border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg); overflow: hidden;
            transition: all var(--transition-normal);
        }
        .package-card:hover { transform: translateY(-8px); border-color: var(--color-gold-muted); box-shadow: var(--shadow-gold); }

        .package-image { position: relative; height: 220px; overflow: hidden; }
        .package-image img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease; }
        .package-card:hover .package-image img { transform: scale(1.1); }

        .package-badge {
            position: absolute; top: 16px; left: 16px;
            padding: var(--space-2) var(--space-4); background: var(--color-gold);
            color: var(--color-midnight); font-size: 0.75rem; font-weight: 700;
            border-radius: var(--radius-full); text-transform: uppercase;
        }

        .package-wishlist {
            position: absolute; top: 16px; right: 16px;
            width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;
            background: rgba(0, 0, 0, 0.5); border: none; border-radius: 50%;
            color: var(--color-white); cursor: pointer; transition: all var(--transition-fast);
        }
        .package-wishlist:hover { background: var(--color-error); }
        .package-wishlist.active { background: var(--color-error); }

        .package-content { padding: var(--space-5); }

        .package-location {
            display: flex; align-items: center; gap: var(--space-2);
            font-size: 0.8125rem; color: var(--color-gold); margin-bottom: var(--space-2);
        }

        .package-title { font-size: 1.25rem; font-weight: 600; color: var(--color-white); margin-bottom: var(--space-3); }
        .package-title a { color: inherit; text-decoration: none; }
        .package-title a:hover { color: var(--color-gold); }

        .package-meta { display: flex; gap: var(--space-4); margin-bottom: var(--space-4); }
        .package-meta-item { display: flex; align-items: center; gap: var(--space-2); font-size: 0.875rem; color: var(--color-silver); }
        .package-meta-item i { color: var(--color-gold); }

        .package-description { font-size: 0.9375rem; color: var(--color-silver); margin-bottom: var(--space-4); line-height: 1.6; }

        .package-footer { display: flex; justify-content: space-between; align-items: center; padding-top: var(--space-4); border-top: 1px solid var(--color-slate); }
        .package-price-label { font-size: 0.75rem; color: var(--color-silver); }
        .package-price-value { font-size: 1.5rem; font-weight: 700; color: var(--color-gold); }
        .package-price-value span { font-size: 0.875rem; font-weight: 400; color: var(--color-silver); }

        /* Footer */
        .footer { padding: var(--space-7) 24px; background: var(--color-navy); border-top: 1px solid var(--color-slate); text-align: center; }
        .footer p { color: var(--color-silver); font-size: 0.875rem; }

        .toast {
            position: fixed; bottom: 24px; right: 24px; background: var(--color-charcoal);
            border: 1px solid var(--color-slate); border-radius: var(--radius-lg);
            padding: 16px 24px; display: flex; align-items: center; gap: 12px;
            color: var(--color-white); font-size: 0.9375rem; z-index: 10000;
            opacity: 0; transform: translateY(20px); transition: all 0.3s ease;
        }
        .toast.show { opacity: 1; transform: translateY(0); }
        .toast.success i { color: var(--color-success); }
        .toast.error i { color: var(--color-error); }

        @@media (max-width: 768px) {
            .nav-links, .nav-auth { display: none; }
            .packages-grid { grid-template-columns: 1fr; }
        }

        @@keyframes spin { to { transform: rotate(360deg); } }
    </style>
</head>
