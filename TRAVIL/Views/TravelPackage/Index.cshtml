@{
    ViewData["Title"] = "Travel Packages";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Packages - TRAVEL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: var(--space-4) var(--space-6);
            background: var(--color-navy);
            border-bottom: 1px solid var(--color-slate);
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .nav {
            display: flex;
            align-items: center;
            gap: var(--space-6);
        }

        .nav-link {
            color: var(--color-mist);
            text-decoration: none;
            font-size: 0.9375rem;
            transition: color var(--transition-fast);
        }

            .nav-link:hover, .nav-link.active {
                color: var(--color-gold);
            }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            font-family: var(--font-body);
            font-size: 0.9375rem;
            font-weight: 500;
            text-decoration: none;
            border-radius: var(--radius-md);
            border: none;
            cursor: pointer;
            transition: all var(--transition-fast);
        }

        .btn-ghost {
            background: transparent;
            color: var(--color-mist);
        }

            .btn-ghost:hover {
                color: var(--color-gold);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 20px rgba(212, 168, 83, 0.3);
            }

        .btn-success {
            background: #3fb950;
            color: var(--color-white);
        }

            .btn-success:hover {
                background: #2ea043;
                transform: translateY(-2px);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-mist);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .btn-sm {
            padding: var(--space-2) var(--space-3);
            font-size: 0.8125rem;
        }

        /* Page Content */
        .page-content {
            padding-top: 80px;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 var(--space-6);
        }

        /* Hero */
        .page-hero {
            padding: var(--space-7) 0;
            text-align: center;
            border-bottom: 1px solid var(--color-slate);
        }

            .page-hero h1 {
                font-family: var(--font-display);
                font-size: 3rem;
                font-weight: 500;
                margin-bottom: var(--space-3);
            }

            .page-hero p {
                color: var(--color-silver);
                max-width: 600px;
                margin: 0 auto;
            }

            .page-hero .packages-count {
                display: inline-flex;
                align-items: center;
                gap: var(--space-2);
                background: var(--color-gold-muted);
                color: var(--color-gold);
                padding: var(--space-2) var(--space-4);
                border-radius: var(--radius-full);
                font-size: 0.875rem;
                font-weight: 500;
                margin-top: var(--space-4);
            }

        /* Filters */
        .filters-section {
            padding: var(--space-5) 0;
            border-bottom: 1px solid var(--color-slate);
        }

        .filters-row {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-4);
            align-items: center;
            justify-content: space-between;
        }

        .search-box {
            flex: 1;
            min-width: 300px;
            max-width: 400px;
            position: relative;
        }

            .search-box input {
                width: 100%;
                padding: var(--space-3) var(--space-4) var(--space-3) 44px;
                background: var(--color-navy);
                border: 1px solid var(--color-slate);
                border-radius: var(--radius-md);
                color: var(--color-white);
                font-family: var(--font-body);
                font-size: 0.9375rem;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--color-gold);
                }

            .search-box i {
                position: absolute;
                left: var(--space-4);
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-steel);
            }

        .filter-group {
            display: flex;
            gap: var(--space-3);
            flex-wrap: wrap;
        }

        .filter-select {
            padding: var(--space-3) var(--space-4);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-mist);
            font-family: var(--font-body);
            font-size: 0.875rem;
            cursor: pointer;
        }

            .filter-select:focus {
                outline: none;
                border-color: var(--color-gold);
            }

        /* Packages Grid */
        .packages-section {
            padding: var(--space-6) 0;
        }

        .packages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: var(--space-5);
        }

        .package-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
            transition: all var(--transition-normal);
            cursor: pointer;
        }

            .package-card:hover {
                transform: translateY(-8px);
                border-color: var(--color-gold);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            }

        .package-image {
            position: relative;
            height: 220px;
            overflow: hidden;
        }

            .package-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform var(--transition-normal);
            }

        .package-card:hover .package-image img {
            transform: scale(1.05);
        }

        .package-badge {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            background: var(--color-gold);
            color: var(--color-midnight);
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .package-wishlist {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            width: 36px;
            height: 36px;
            background: rgba(0, 0, 0, 0.5);
            border: none;
            border-radius: var(--radius-full);
            color: var(--color-white);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

            .package-wishlist:hover {
                background: var(--color-gold);
                color: var(--color-midnight);
            }

            .package-wishlist.active {
                background: var(--color-error);
                color: var(--color-white);
            }

        .package-content {
            padding: var(--space-5);
        }

        .package-destination {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-gold);
            font-size: 0.8125rem;
            font-weight: 500;
            margin-bottom: var(--space-2);
        }

        .package-title {
            font-family: var(--font-display);
            font-size: 1.375rem;
            font-weight: 500;
            margin-bottom: var(--space-3);
        }

        .package-meta {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-4);
        }

            .package-meta span {
                display: flex;
                align-items: center;
                gap: var(--space-2);
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        .package-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

        .package-actions {
            display: flex;
            gap: var(--space-2);
            margin-top: var(--space-4);
            padding-top: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

            .package-actions .btn {
                flex: 1;
                justify-content: center;
            }

            .package-actions .sold-out {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .package-price {
            font-family: var(--font-display);
        }

            .package-price .original {
                text-decoration: line-through;
                color: var(--color-steel);
                font-size: 0.875rem;
            }

            .package-price .amount {
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--color-gold);
            }

            .package-price .period {
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        .package-rating {
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }

            .package-rating i {
                color: var(--color-gold);
                font-size: 0.875rem;
            }

            .package-rating span {
                font-size: 0.875rem;
                color: var(--color-mist);
            }

        /* Loading & Empty */
        .loading {
            display: flex;
            justify-content: center;
            padding: var(--space-8);
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .empty-state {
            text-align: center;
            padding: var(--space-8);
        }

            .empty-state i {
                font-size: 4rem;
                color: var(--color-steel);
                margin-bottom: var(--space-4);
            }

            .empty-state h3 {
                font-family: var(--font-display);
                font-size: 1.5rem;
                margin-bottom: var(--space-2);
            }

            .empty-state p {
                color: var(--color-silver);
            }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-6) 0;
        }

        .page-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-mist);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

            .page-btn:hover, .page-btn.active {
                background: var(--color-gold);
                border-color: var(--color-gold);
                color: var(--color-midnight);
            }

        /* Toast */
        .toast {
            position: fixed;
            bottom: var(--space-5);
            right: var(--space-5);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            padding: var(--space-4) var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateY(100px);
            opacity: 0;
            transition: all var(--transition-normal);
            z-index: 2000;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success i {
                color: #3fb950;
            }

            .toast.error i {
                color: #f85149;
            }

        @@media (max-width: 1024px) {
            .nav {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .page-hero h1 {
                font-size: 2rem;
            }

            .filters-row {
                flex-direction: column;
            }

            .search-box {
                max-width: 100%;
            }

            .packages-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">
                <div class="logo-icon"><i class="fas fa-paper-plane"></i></div>
                <span class="logo-text">TRAVEL</span>
            </a>
            <nav class="nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/packages" class="nav-link active">Packages</a>
                <a href="/home/privacy" class="nav-link">About</a>
            </nav>
            <div class="nav-actions">
                <a href="/account/login" class="btn btn-ghost" id="loginBtn">Sign In</a>
                <a href="/account/dashboard" class="btn btn-primary" id="dashboardBtn" style="display: none;"><i class="fas fa-user"></i> Dashboard</a>
                <a href="/cart" class="btn btn-ghost" id="cartBtn"><i class="fas fa-shopping-cart"></i></a>
            </div>
        </div>
    </header>

    <main class="page-content">
        <section class="page-hero">
            <div class="container">
                <h1>Explore Our Packages</h1>
                <p>Discover handpicked travel experiences tailored for every type of adventurer</p>
                <div class="packages-count"><i class="fas fa-suitcase"></i> <span id="packagesCount">0</span> packages available</div>
            </div>
        </section>

        <section class="filters-section">
            <div class="container">
                <div class="filters-row">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="searchInput" placeholder="Search destinations, packages...">
                    </div>
                    <div class="filter-group">
                        <select class="filter-select" id="categoryFilter">
                            <option value="">All Categories</option>
                            <option value="Adventure">Adventure</option>
                            <option value="Family">Family</option>
                            <option value="Honeymoon">Honeymoon</option>
                            <option value="Luxury">Luxury</option>
                            <option value="Cruise">Cruise</option>
                        </select>
                        <select class="filter-select" id="sortFilter">
                            <option value="">Sort By</option>
                            <option value="price-asc">Price: Low to High</option>
                            <option value="price-desc">Price: High to Low</option>
                            <option value="popular">Most Popular</option>
                            <option value="date">Travel Date</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>

        <section class="packages-section">
            <div class="container">
                <div class="packages-grid" id="packagesGrid">
                    <div class="loading"><div class="spinner"></div></div>
                </div>
                <div class="pagination" id="pagination"></div>
            </div>
        </section>
    </main>

    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>

    <script>
        var allPackages = [];
        var currentPage = 1;
        var itemsPerPage = 9;
        var wishlist = [];

        function checkAuth() {
            var token = localStorage.getItem('token');
            if (token) {
                document.getElementById('loginBtn').style.display = 'none';
                document.getElementById('dashboardBtn').style.display = 'inline-flex';
            }
        }

        function showToast(message, type) {
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.className = 'toast ' + type + ' show';
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        async function loadPackages() {
            try {
                var response = await fetch('/api/packages');
                if (response.ok) {
                    var result = await response.json();
                    allPackages = result.data || result || [];
                    document.getElementById('packagesCount').textContent = allPackages.length;
                    renderPackages();
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('packagesGrid').innerHTML = '<div class="empty-state"><i class="fas fa-exclamation-circle"></i><h3>Error Loading Packages</h3><p>Please try again later.</p></div>';
            }
        }

        async function loadWishlist() {
            var token = localStorage.getItem('token');
            if (!token) return;
            try {
                var response = await fetch('/api/wishlist', { headers: { 'Authorization': 'Bearer ' + token } });
                if (response.ok) {
                    var result = await response.json();
                    wishlist = (result.data || result || []).map(function(w) { return w.packageId; });
                }
            } catch (error) { console.error('Wishlist error:', error); }
        }

        function getFilteredPackages() {
            var search = document.getElementById('searchInput').value.toLowerCase();
            var category = document.getElementById('categoryFilter').value;
            var sort = document.getElementById('sortFilter').value;

            var filtered = allPackages.filter(function(p) {
                var matchesSearch = !search ||
                    (p.destination && p.destination.toLowerCase().includes(search)) ||
                    (p.country && p.country.toLowerCase().includes(search)) ||
                    (p.description && p.description.toLowerCase().includes(search));
                var matchesCategory = !category || p.packageType === category;
                return matchesSearch && matchesCategory;
            });

            if (sort === 'price-asc') filtered.sort(function(a, b) { return (a.discountedPrice || a.price) - (b.discountedPrice || b.price); });
            else if (sort === 'price-desc') filtered.sort(function(a, b) { return (b.discountedPrice || b.price) - (a.discountedPrice || a.price); });
            else if (sort === 'popular') filtered.sort(function(a, b) { return (b.bookingsCount || 0) - (a.bookingsCount || 0); });
            else if (sort === 'date') filtered.sort(function(a, b) { return new Date(a.startDate) - new Date(b.startDate); });

            return filtered;
        }

        function renderPackages() {
            var filtered = getFilteredPackages();
            var totalPages = Math.ceil(filtered.length / itemsPerPage);
            var start = (currentPage - 1) * itemsPerPage;
            var pagePackages = filtered.slice(start, start + itemsPerPage);
            var grid = document.getElementById('packagesGrid');

            if (filtered.length === 0) {
                grid.innerHTML = '<div class="empty-state"><i class="fas fa-search"></i><h3>No Packages Found</h3><p>Try adjusting your search or filters.</p></div>';
                document.getElementById('pagination').innerHTML = '';
                return;
            }

            var html = pagePackages.map(function(pkg) {
                var image = pkg.imageUrl || pkg.images?.[0]?.imageUrl || 'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80';
                var price = pkg.discountedPrice || pkg.price || 0;
                var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                var rating = pkg.averageRating || 4.5;
                var isWishlisted = wishlist.includes(pkg.packageId);
                var startDate = pkg.startDate ? new Date(pkg.startDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) : '';

                var actionsHtml = '<div class="package-actions">';
                if (pkg.availableRooms > 0) {
                    actionsHtml += '<a href="/booking/create/' + pkg.packageId + '" class="btn btn-primary btn-sm" onclick="event.stopPropagation()"><i class="fas fa-calendar-check"></i> Book</a>';
                    actionsHtml += '<a href="/booking/buynow/' + pkg.packageId + '" class="btn btn-success btn-sm" onclick="event.stopPropagation()"><i class="fas fa-bolt"></i> Buy Now</a>';
                } else {
                    actionsHtml += '<span class="btn btn-outline btn-sm sold-out">Sold Out</span>';
                }
                actionsHtml += '</div>';

                return '<div class="package-card" data-id="' + pkg.packageId + '">' +
                    '<div class="package-image">' +
                        '<img src="' + image + '" alt="' + (pkg.destination || 'Destination') + '" onerror="this.src=\'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80\'">' +
                        (hasDiscount ? '<span class="package-badge">Sale</span>' : '') +
                        '<button class="package-wishlist' + (isWishlisted ? ' active' : '') + '" onclick="toggleWishlist(event, ' + pkg.packageId + ')"><i class="' + (isWishlisted ? 'fas' : 'far') + ' fa-heart"></i></button>' +
                    '</div>' +
                    '<div class="package-content">' +
                        '<div class="package-destination"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Worldwide') + '</div>' +
                        '<h3 class="package-title">' + (pkg.destination || 'Amazing Destination') + '</h3>' +
                        '<div class="package-meta">' +
                            '<span><i class="far fa-calendar"></i> ' + (startDate || 'Flexible') + '</span>' +
                            '<span><i class="fas fa-bed"></i> ' + (pkg.availableRooms || 0) + ' rooms</span>' +
                        '</div>' +
                        '<div class="package-footer">' +
                            '<div class="package-price">' +
                                (hasDiscount ? '<span class="original">$' + pkg.price.toLocaleString() + '</span> ' : '') +
                                '<span class="amount">$' + price.toLocaleString() + '</span><span class="period">/person</span>' +
                            '</div>' +
                            '<div class="package-rating"><i class="fas fa-star"></i><span>' + rating.toFixed(1) + '</span></div>' +
                        '</div>' +
                        actionsHtml +
                    '</div>' +
                '</div>';
            }).join('');

            grid.innerHTML = html;

            // Card click handlers
            document.querySelectorAll('.package-card').forEach(function(card) {
                card.addEventListener('click', function(e) {
                    if (!e.target.closest('.package-wishlist')) {
                        window.location.href = '/packages/' + this.dataset.id;
                    }
                });
            });

            // Pagination
            var paginationHtml = '';
            if (totalPages > 1) {
                paginationHtml += '<button class="page-btn" onclick="changePage(' + (currentPage - 1) + ')" ' + (currentPage === 1 ? 'disabled' : '') + '><i class="fas fa-chevron-left"></i></button>';
                for (var i = 1; i <= totalPages; i++) {
                    paginationHtml += '<button class="page-btn' + (i === currentPage ? ' active' : '') + '" onclick="changePage(' + i + ')">' + i + '</button>';
                }
                paginationHtml += '<button class="page-btn" onclick="changePage(' + (currentPage + 1) + ')" ' + (currentPage === totalPages ? 'disabled' : '') + '><i class="fas fa-chevron-right"></i></button>';
            }
            document.getElementById('pagination').innerHTML = paginationHtml;
        }

        function changePage(page) {
            var filtered = getFilteredPackages();
            var totalPages = Math.ceil(filtered.length / itemsPerPage);
            if (page < 1 || page > totalPages) return;
            currentPage = page;
            renderPackages();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        async function toggleWishlist(event, packageId) {
            event.stopPropagation();
            var token = localStorage.getItem('token');
            if (!token) { window.location.href = '/account/login'; return; }

            var btn = event.target.closest('.package-wishlist');
            var isWishlisted = wishlist.includes(packageId);

            try {
                var response = await fetch('/api/wishlist/' + packageId, {
                    method: isWishlisted ? 'DELETE' : 'POST',
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (response.ok) {
                    if (isWishlisted) {
                        wishlist = wishlist.filter(function(id) { return id !== packageId; });
                        btn.classList.remove('active');
                        btn.innerHTML = '<i class="far fa-heart"></i>';
                        showToast('Removed from wishlist', 'success');
                    } else {
                        wishlist.push(packageId);
                        btn.classList.add('active');
                        btn.innerHTML = '<i class="fas fa-heart"></i>';
                        showToast('Added to wishlist', 'success');
                    }
                }
            } catch (error) {
                showToast('Error updating wishlist', 'error');
            }
        }

        // Filter events
        document.getElementById('searchInput').addEventListener('input', function() { currentPage = 1; renderPackages(); });
        document.getElementById('categoryFilter').addEventListener('change', function() { currentPage = 1; renderPackages(); });
        document.getElementById('sortFilter').addEventListener('change', function() { currentPage = 1; renderPackages(); });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            checkAuth();
            loadPackages();
            loadWishlist();
        });
    </script>
