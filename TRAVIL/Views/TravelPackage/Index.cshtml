@{
    ViewData["Title"] = "Travel Packages";
    ViewData["BodyClass"] = "packages-page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<!-- Navigation -->
<nav class="navbar scrolled" id="navbar">
    <div class="container">
        <a href="/" class="nav-brand">
            <div class="logo">
                <i class="fas fa-compass"></i>
            </div>
            <span>TRAVIL</span>
        </a>
        
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/TravelPackage" class="active">Packages</a>
            <a href="/#destinations">Destinations</a>
            <a href="/#about">About</a>
            <a href="/#contact">Contact</a>
        </div>
        
        <div class="nav-auth">
            <a href="/Account/Login" class="btn btn-ghost">Sign In</a>
            <a href="/Account/Register" class="btn btn-primary">Get Started</a>
        </div>
        
        <button class="mobile-menu-btn" id="mobileMenuBtn">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</nav>

<!-- Page Header -->
<section class="page-hero" style="padding-top: 120px; padding-bottom: 60px; background: var(--color-midnight);">
    <div class="container" style="max-width: var(--max-width); margin: 0 auto; padding: 0 var(--space-6);">
        <div class="section-header" style="text-align: left; margin: 0;">
            <div class="section-tagline">Explore Our Collection</div>
            <h1 class="section-title">Travel Packages</h1>
            <p class="section-description">
                Discover handcrafted journeys to the world's most incredible destinations. 
                From relaxing beach getaways to thrilling adventures.
            </p>
        </div>
    </div>
</section>

<!-- Filters -->
<section style="background: var(--color-charcoal); padding: var(--space-6) var(--space-6); border-bottom: 1px solid var(--color-slate);">
    <div class="container" style="max-width: var(--max-width); margin: 0 auto;">
        <form class="search-form" action="/TravelPackage" method="get" style="background: transparent; padding: 0; box-shadow: none; border: none;">
            <div class="search-field">
                <label>Destination</label>
                <input type="text" name="destination" placeholder="Where to?" value="@Context.Request.Query["destination"]">
            </div>
            <div class="search-field">
                <label>Duration</label>
                <select name="duration">
                    <option value="">Any Duration</option>
                    <option value="1-3">1-3 Days</option>
                    <option value="4-7">4-7 Days</option>
                    <option value="8-14">8-14 Days</option>
                    <option value="15+">15+ Days</option>
                </select>
            </div>
            <div class="search-field">
                <label>Price Range</label>
                <select name="price">
                    <option value="">Any Price</option>
                    <option value="0-1000">Under $1,000</option>
                    <option value="1000-2000">$1,000 - $2,000</option>
                    <option value="2000-3000">$2,000 - $3,000</option>
                    <option value="3000+">$3,000+</option>
                </select>
            </div>
            <div class="search-field">
                <label>Sort By</label>
                <select name="sort">
                    <option value="popular">Most Popular</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="rating">Highest Rated</option>
                    <option value="newest">Newest First</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-search"></i>
                Search
            </button>
        </form>
    </div>
</section>

<!-- Packages Grid -->
<section class="packages-section" style="padding-top: var(--space-10);">
    <div class="container">
        <div class="packages-grid">
            @if (Model != null)
            {
                foreach (var package in Model)
                {
                    <div class="package-card">
                        <div class="package-image">
                            <img src="@package.ImageUrl" alt="@package.Name">
                            @if (package.IsFeatured)
                            {
                                <span class="package-badge">Featured</span>
                            }
                            <button class="package-wishlist">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                        <div class="package-content">
                            <div class="package-location">
                                <i class="fas fa-map-marker-alt"></i>
                                @package.Destination
                            </div>
                            <h3 class="package-title">
                                <a href="/TravelPackage/Details/@package.Id">@package.Name</a>
                            </h3>
                            <div class="package-meta">
                                <div class="package-meta-item">
                                    <i class="far fa-clock"></i>
                                    @package.Duration Days
                                </div>
                                <div class="package-meta-item">
                                    <i class="far fa-star"></i>
                                    @package.Rating
                                </div>
                            </div>
                            <p class="package-description">@package.Description</p>
                            <div class="package-footer">
                                <div class="package-price">
                                    <span class="package-price-label">Starting from</span>
                                    <span class="package-price-value">$@package.Price <span>/ person</span></span>
                                </div>
                                <a href="/TravelPackage/Details/@package.Id" class="btn btn-primary btn-sm">
