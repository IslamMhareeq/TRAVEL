@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Travel Agency</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            width: 100%;
            padding: 20px;
            max-width: 700px;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            padding: 2rem;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            text-align: center;
        }

            .card-header h3 {
                margin: 0;
                font-weight: 700;
                font-size: 1.8rem;
                color: #ffffff;
            }

        .card-body {
            padding: 2rem;
            background-color: #ffffff;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e0e0;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                background-color: #ffffff;
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
                outline: none;
            }

            .form-control::placeholder {
                color: #999;
                font-size: 0.85rem;
            }

        .invalid-feedback {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
            font-weight: 500;
        }

        .form-check-input {
            width: 1.25em;
            height: 1.25em;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .form-check-input:checked {
                background-color: #28a745;
                border-color: #28a745;
                box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            }

        .form-check-label {
            cursor: pointer;
            margin-left: 0.5rem;
            color: #555;
            font-size: 0.95rem;
        }

            .form-check-label a {
                color: #667eea;
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s ease;
            }

                .form-check-label a:hover {
                    color: #764ba2;
                    text-decoration: underline;
                }

        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
            border-radius: 8px;
            font-weight: 700;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
            color: #ffffff;
            font-size: 1rem;
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
                color: #ffffff;
                background: linear-gradient(135deg, #218838 0%, #1aa179 100%);
            }

            .btn-success:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 1rem;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .d-none {
            display: none !important;
        }

        hr {
            border: none;
            border-top: 1px solid #e0e0e0;
            margin: 2rem 0;
        }

        .text-center {
            text-align: center;
        }

            .text-center p {
                color: #666;
                font-size: 0.95rem;
            }

            .text-center a {
                color: #667eea;
                text-decoration: none;
                font-weight: 600;
            }

                .text-center a:hover {
                    color: #764ba2;
                    text-decoration: underline;
                }

        .password-strength {
            margin-top: 0.5rem;
        }

        .password-strength-bar {
            height: 4px;
            border-radius: 2px;
            margin-bottom: 0.5rem;
            background-color: #e0e0e0;
            overflow: hidden;
        }

        .password-strength-bar-fill {
            height: 100%;
            width: 0%;
            transition: width 0.3s ease, background-color 0.3s ease;
            border-radius: 2px;
        }

        .password-strength-text {
            font-size: 0.85rem;
            font-weight: 600;
        }

        .password-strength-weak {
            color: #dc3545;
        }

        .password-strength-fair {
            color: #ffc107;
        }

        .password-strength-good {
            color: #17a2b8;
        }

        .password-strength-strong {
            color: #28a745;
        }

        .toggle-password {
            cursor: pointer;
            color: #667eea;
            transition: all 0.3s ease;
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }

            .toggle-password:hover {
                color: #764ba2;
            }

        .input-group {
            position: relative;
        }

        .form-text {
            color: #999;
            font-size: 0.85rem;
        }

        .row {
            margin: 0 -0.75rem;
        }

            .row > [class*="col-"] {
                padding: 0 0.75rem;
            }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="card">
            <div class="card-header">
                <h3>✈️ Create Your Account</h3>
            </div>

            <div class="card-body">
                <form id="registerForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">First Name <span style="color: #dc3545;">*</span></label>
                            <input type="text" class="form-control" id="firstName" name="firstName"
                                   placeholder="John" required minlength="2" maxlength="50">
                            <div class="invalid-feedback" id="firstNameError"></div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label">Last Name <span style="color: #dc3545;">*</span></label>
                            <input type="text" class="form-control" id="lastName" name="lastName"
                                   placeholder="Doe" required minlength="2" maxlength="50">
                            <div class="invalid-feedback" id="lastNameError"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address <span style="color: #dc3545;">*</span></label>
                        <input type="email" class="form-control" id="email" name="email"
                               placeholder="john@example.com" required>
                        <div class="invalid-feedback" id="emailError"></div>
                        <small class="form-text">We'll never share your email with anyone.</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="password" class="form-label">Password <span style="color: #dc3545;">*</span></label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Min 6 characters" required minlength="6">
                                <span class="toggle-password" onclick="registerApp.togglePassword('password')">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                            <div class="password-strength">
                                <div class="password-strength-bar">
                                    <div class="password-strength-bar-fill" id="passwordStrengthBar"></div>
                                </div>
                                <small class="password-strength-text" id="passwordStrengthText"></small>
                            </div>
                            <div class="invalid-feedback" id="passwordError"></div>
                            <small class="form-text">At least 6 characters, mix uppercase, lowercase, numbers, symbols.</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password <span style="color: #dc3545;">*</span></label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                       placeholder="Confirm password" required minlength="6">
                                <span class="toggle-password" onclick="registerApp.togglePassword('confirmPassword')">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                            <div class="invalid-feedback" id="confirmPasswordError"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number <span style="color: #999;">(Optional)</span></label>
                        <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                               placeholder="+1 (123) 456-7890">
                        <small class="form-text">For booking confirmations and support.</small>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Street Address <span style="color: #999;">(Optional)</span></label>
                        <input type="text" class="form-control" id="address" name="address"
                               placeholder="123 Main Street" maxlength="100">
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="city" class="form-label">City <span style="color: #999;">(Optional)</span></label>
                            <input type="text" class="form-control" id="city" name="city"
                                   placeholder="New York" maxlength="50">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="country" class="form-label">Country <span style="color: #999;">(Optional)</span></label>
                            <input type="text" class="form-control" id="country" name="country"
                                   placeholder="USA" maxlength="50">
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="postalCode" class="form-label">Postal Code <span style="color: #999;">(Optional)</span></label>
                            <input type="text" class="form-control" id="postalCode" name="postalCode"
                                   placeholder="10001" maxlength="20">
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="agreeTerms" name="agreeTerms" required>
                        <label class="form-check-label" for="agreeTerms">
                            I agree to the <a href="/account/terms" target="_blank">Terms &amp; Conditions</a> and
                            <a href="/account/privacy" target="_blank">Privacy Policy</a> <span style="color: #dc3545;">*</span>
                        </label>
                        <div class="invalid-feedback" id="agreeTermsError"></div>
                    </div>

                    <div id="errorAlert" class="alert alert-danger d-none" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <span id="errorMessage"></span>
                    </div>

                    <div id="successAlert" class="alert alert-success d-none" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <span id="successMessage"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 py-2" id="submitBtn">
                        <span id="registerBtn">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </span>
                        <span id="registerLoader" class="d-none">
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            Creating account...
                        </span>
                    </button>
                </form>

                <hr>

                <p class="text-center">
                    Already have an account?
                    <a href="/account/login">Login here</a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/register.js"></script>
</body>
</html>
