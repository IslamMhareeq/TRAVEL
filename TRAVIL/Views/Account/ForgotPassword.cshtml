@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - TRAVIL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-success: #3fb950;
            --color-error: #f85149;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --radius-md: 12px;
            --radius-lg: 16px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 480px;
        }

        .card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: 40px;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--color-silver);
            text-decoration: none;
            font-size: 0.875rem;
            margin-bottom: 24px;
            transition: color var(--transition-fast);
        }

            .back-link:hover {
                color: var(--color-gold);
            }

        .logo {
            text-align: center;
            margin-bottom: 32px;
        }

            .logo a {
                display: inline-flex;
                align-items: center;
                gap: 12px;
                text-decoration: none;
            }

        .logo-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .header {
            text-align: center;
            margin-bottom: 32px;
        }

            .header h1 {
                font-family: var(--font-display);
                font-size: 1.75rem;
                font-weight: 500;
                margin-bottom: 8px;
            }

            .header p {
                color: var(--color-silver);
                font-size: 0.9375rem;
            }

        .steps {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-bottom: 32px;
        }

        .step {
            width: 40px;
            height: 4px;
            background: var(--color-slate);
            border-radius: 2px;
            transition: background var(--transition-normal);
        }

            .step.active {
                background: var(--color-gold);
            }

            .step.completed {
                background: var(--color-success);
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--color-mist);
            margin-bottom: 8px;
        }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--color-silver);
            }

        .form-control {
            width: 100%;
            padding: 14px 16px 14px 48px;
            background: var(--color-midnight);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-white);
            font-family: var(--font-body);
            font-size: 1rem;
            transition: all var(--transition-fast);
        }

            .form-control:focus {
                outline: none;
                border-color: var(--color-gold);
                box-shadow: 0 0 0 3px rgba(212, 168, 83, 0.15);
            }

            .form-control::placeholder {
                color: var(--color-steel);
            }

        .code-inputs {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin: 24px 0;
        }

        .code-input {
            width: 56px;
            height: 64px;
            background: var(--color-midnight);
            border: 2px solid var(--color-slate);
            border-radius: var(--radius-md);
            color: var(--color-gold);
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 600;
            text-align: center;
            transition: all var(--transition-fast);
        }

            .code-input:focus {
                outline: none;
                border-color: var(--color-gold);
                box-shadow: 0 0 0 3px rgba(212, 168, 83, 0.15);
            }

            .code-input.filled {
                border-color: var(--color-gold);
            }

            .code-input.error {
                border-color: var(--color-error);
                animation: shake 0.5s;
            }

        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-5px);
            }

            75% {
                transform: translateX(5px);
            }
        }

        .btn {
            width: 100%;
            padding: 14px 24px;
            border-radius: var(--radius-md);
            font-family: var(--font-body);
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all var(--transition-fast);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover:not(:disabled) {
                transform: translateY(-2px);
                box-shadow: 0 4px 20px rgba(212, 168, 83, 0.3);
            }

            .btn-primary:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .btn-secondary {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-mist);
            margin-top: 12px;
        }

            .btn-secondary:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .message {
            padding: 16px;
            border-radius: var(--radius-md);
            margin-bottom: 20px;
            display: none;
            align-items: center;
            gap: 12px;
            font-size: 0.9375rem;
        }

            .message.show {
                display: flex;
            }

            .message.error {
                background: rgba(248, 81, 73, 0.1);
                border: 1px solid rgba(248, 81, 73, 0.3);
                color: var(--color-error);
            }

            .message.success {
                background: rgba(63, 185, 80, 0.1);
                border: 1px solid rgba(63, 185, 80, 0.3);
                color: var(--color-success);
            }

        .resend-section {
            text-align: center;
            margin-top: 24px;
            color: var(--color-silver);
            font-size: 0.875rem;
        }

        .resend-link {
            color: var(--color-gold);
            text-decoration: none;
            cursor: pointer;
        }

            .resend-link:hover {
                text-decoration: underline;
            }

            .resend-link.disabled {
                color: var(--color-steel);
                cursor: not-allowed;
                pointer-events: none;
            }

        .email-display {
            text-align: center;
            padding: 16px;
            background: var(--color-midnight);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            margin-bottom: 24px;
        }

            .email-display i {
                color: var(--color-gold);
                margin-right: 8px;
            }

        .success-icon {
            width: 80px;
            height: 80px;
            background: rgba(63, 185, 80, 0.1);
            border: 2px solid var(--color-success);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            font-size: 2rem;
            color: var(--color-success);
        }

        .password-strength {
            margin-top: 8px;
            height: 4px;
            background: var(--color-slate);
            border-radius: 2px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0;
            transition: all var(--transition-normal);
            border-radius: 2px;
        }

        .strength-weak {
            width: 33%;
            background: var(--color-error);
        }

        .strength-medium {
            width: 66%;
            background: var(--color-gold);
        }

        .strength-strong {
            width: 100%;
            background: var(--color-success);
        }

        .password-hint {
            font-size: 0.8125rem;
            color: var(--color-silver);
            margin-top: 8px;
        }

        .footer {
            text-align: center;
            margin-top: 24px;
            color: var(--color-silver);
            font-size: 0.875rem;
        }

            .footer a {
                color: var(--color-gold);
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .spinner {
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top-color: currentColor;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .toast {
            position: fixed;
            bottom: 24px;
            right: 24px;
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            transform: translateY(100px);
            opacity: 0;
            transition: all var(--transition-normal);
            z-index: 9999;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-error);
            }

        @@media (max-width: 480px) {
            .card {
                padding: 24px;
            }

            .code-input {
                width: 48px;
                height: 56px;
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <a href="/account/login" class="back-link"><i class="fas fa-arrow-left"></i> Back to Login</a>
            <div class="logo"><a href="/"><div class="logo-icon"><i class="fas fa-paper-plane"></i></div><span class="logo-text">TRAVIL</span></a></div>
            <div class="steps">
                <div class="step active" id="step1Indicator"></div>
                <div class="step" id="step2Indicator"></div>
                <div class="step" id="step3Indicator"></div>
            </div>

            <!-- Step 1: Email -->
            <div id="step1">
                <div class="header"><h1>Forgot Password?</h1><p>Enter your email and we'll send you a verification code</p></div>
                <div class="message error" id="step1Error"><i class="fas fa-exclamation-circle"></i><span id="step1ErrorText"></span></div>
                <form id="emailForm" onsubmit="submitEmail(event)">
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <div class="input-icon"><i class="fas fa-envelope"></i><input type="email" class="form-control" id="email" placeholder="your@@email.com" required /></div>
                    </div>
                    <button type="submit" class="btn btn-primary" id="step1Btn"><span id="step1BtnText">Send Verification Code</span><i class="fas fa-arrow-right" id="step1BtnIcon"></i></button>
                </form>
                <div class="footer">Remember your password? <a href="/account/login">Sign in</a></div>
            </div>

            <!-- Step 2: Verification Code -->
            <div id="step2" style="display: none;">
                <div class="header"><h1>Enter Verification Code</h1><p>We've sent a 6-digit code to your email</p></div>
                <div class="email-display" id="emailDisplay"><i class="fas fa-envelope"></i><span id="maskedEmail"></span></div>
                <div class="message error" id="step2Error"><i class="fas fa-exclamation-circle"></i><span id="step2ErrorText"></span></div>
                <form id="codeForm" onsubmit="submitCode(event)">
                    <div class="code-inputs">
                        <input type="text" class="code-input" maxlength="1" id="code1" autocomplete="off" />
                        <input type="text" class="code-input" maxlength="1" id="code2" autocomplete="off" />
                        <input type="text" class="code-input" maxlength="1" id="code3" autocomplete="off" />
                        <input type="text" class="code-input" maxlength="1" id="code4" autocomplete="off" />
                        <input type="text" class="code-input" maxlength="1" id="code5" autocomplete="off" />
                        <input type="text" class="code-input" maxlength="1" id="code6" autocomplete="off" />
                    </div>
                    <button type="submit" class="btn btn-primary" id="step2Btn"><span id="step2BtnText">Verify Code</span><i class="fas fa-check" id="step2BtnIcon"></i></button>
                    <button type="button" class="btn btn-secondary" onclick="goToStep(1)"><i class="fas fa-arrow-left"></i> Change Email</button>
                </form>
                <div class="resend-section">Didn't receive the code? <span class="resend-link" id="resendLink" onclick="resendCode()">Resend Code</span><span id="resendTimer"></span></div>
            </div>

            <!-- Step 3: New Password -->
            <div id="step3" style="display: none;">
                <div class="header"><h1>Create New Password</h1><p>Your new password must be at least 6 characters</p></div>
                <div class="message error" id="step3Error"><i class="fas fa-exclamation-circle"></i><span id="step3ErrorText"></span></div>
                <form id="passwordForm" onsubmit="submitPassword(event)">
                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <div class="input-icon"><i class="fas fa-lock"></i><input type="password" class="form-control" id="newPassword" placeholder="Enter new password" required minlength="6" oninput="checkPasswordStrength()" /></div>
                        <div class="password-strength"><div class="password-strength-bar" id="strengthBar"></div></div>
                        <div class="password-hint" id="strengthText">Password must be at least 6 characters</div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Confirm Password</label>
                        <div class="input-icon"><i class="fas fa-lock"></i><input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password" required minlength="6" /></div>
                    </div>
                    <button type="submit" class="btn btn-primary" id="step3Btn"><span id="step3BtnText">Reset Password</span><i class="fas fa-check" id="step3BtnIcon"></i></button>
                </form>
            </div>

            <!-- Step 4: Success -->
            <div id="step4" style="display: none;">
                <div class="success-icon"><i class="fas fa-check"></i></div>
                <div class="header"><h1>Password Reset!</h1><p>Your password has been successfully reset. You can now login with your new password.</p></div>
                <a href="/account/login" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i><span>Go to Login</span></a>
            </div>
        </div>
    </div>
    <div class="toast" id="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Success!</span></div>

    <script>
        var userEmail = '';
        var resetToken = '';
        var resendCountdown = 0;
        var resendInterval = null;

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            var icon = toast.querySelector('i');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            icon.className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function showError(step, message) {
            var errorEl = document.getElementById('step' + step + 'Error');
            var textEl = document.getElementById('step' + step + 'ErrorText');
            textEl.textContent = message;
            errorEl.classList.add('show');
        }

        function hideError(step) { document.getElementById('step' + step + 'Error').classList.remove('show'); }

        function setLoading(step, loading) {
            var btn = document.getElementById('step' + step + 'Btn');
            var icon = document.getElementById('step' + step + 'BtnIcon');
            btn.disabled = loading;
            if (loading) { icon.className = 'spinner'; }
            else { icon.className = step === 1 ? 'fas fa-arrow-right' : 'fas fa-check'; }
        }

        function goToStep(step) {
            document.getElementById('step1').style.display = 'none';
            document.getElementById('step2').style.display = 'none';
            document.getElementById('step3').style.display = 'none';
            document.getElementById('step4').style.display = 'none';
            for (var i = 1; i <= 3; i++) {
                var indicator = document.getElementById('step' + i + 'Indicator');
                indicator.classList.remove('active', 'completed');
                if (i < step) indicator.classList.add('completed');
                else if (i === step) indicator.classList.add('active');
            }
            document.getElementById('step' + step).style.display = 'block';
        }

        async function submitEmail(e) {
            e.preventDefault();
            hideError(1);
            var email = document.getElementById('email').value.trim();
            if (!email) { showError(1, 'Please enter your email address'); return; }
            setLoading(1, true);
            try {
                var response = await fetch('/api/account/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: email })
                });
                var data = await response.json();
                setLoading(1, false);
                if (response.ok && data.success) {
                    userEmail = email;
                    document.getElementById('maskedEmail').textContent = data.email || email;
                    goToStep(2);
                    startResendTimer();
                    showToast('Verification code sent!');
                    setTimeout(function() { document.getElementById('code1').focus(); }, 100);
                } else { showError(1, data.message || 'Failed to send verification code'); }
            } catch (error) { console.error('Error:', error); setLoading(1, false); showError(1, 'An error occurred. Please try again.'); }
        }

        document.addEventListener('DOMContentLoaded', function() {
            var codeInputs = document.querySelectorAll('.code-input');
            codeInputs.forEach(function(input, index) {
                input.addEventListener('input', function(e) {
                    var value = e.target.value;
                    e.target.value = value.replace(/[^0-9]/g, '');
                    if (e.target.value) { e.target.classList.add('filled'); if (index < 5) { codeInputs[index + 1].focus(); } }
                    else { e.target.classList.remove('filled'); }
                    if (getCode().length === 6) { submitCode(new Event('submit')); }
                });
                input.addEventListener('keydown', function(e) { if (e.key === 'Backspace' && !e.target.value && index > 0) { codeInputs[index - 1].focus(); } });
                input.addEventListener('paste', function(e) {
                    e.preventDefault();
                    var pastedData = (e.clipboardData || window.clipboardData).getData('text');
                    var digits = pastedData.replace(/[^0-9]/g, '').split('').slice(0, 6);
                    digits.forEach(function(digit, i) { if (codeInputs[i]) { codeInputs[i].value = digit; codeInputs[i].classList.add('filled'); } });
                    if (digits.length > 0) { var focusIndex = Math.min(digits.length, 5); codeInputs[focusIndex].focus(); }
                    if (digits.length === 6) { submitCode(new Event('submit')); }
                });
            });
        });

        function getCode() { var code = ''; for (var i = 1; i <= 6; i++) { code += document.getElementById('code' + i).value; } return code; }
        function clearCodeInputs() { for (var i = 1; i <= 6; i++) { var input = document.getElementById('code' + i); input.value = ''; input.classList.remove('filled', 'error'); } document.getElementById('code1').focus(); }
        function shakeCodeInputs() { var inputs = document.querySelectorAll('.code-input'); inputs.forEach(function(input) { input.classList.add('error'); setTimeout(function() { input.classList.remove('error'); }, 500); }); }

        async function submitCode(e) {
            e.preventDefault();
            hideError(2);
            var code = getCode();
            if (code.length !== 6) { showError(2, 'Please enter the 6-digit code'); shakeCodeInputs(); return; }
            setLoading(2, true);
            try {
                var response = await fetch('/api/account/verify-code', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail, code: code })
                });
                var data = await response.json();
                setLoading(2, false);
                if (response.ok && data.success) {
                    resetToken = data.resetToken;
                    goToStep(3);
                    showToast('Code verified!');
                    setTimeout(function() { document.getElementById('newPassword').focus(); }, 100);
                } else { showError(2, data.message || 'Invalid verification code'); shakeCodeInputs(); clearCodeInputs(); }
            } catch (error) { console.error('Error:', error); setLoading(2, false); showError(2, 'An error occurred. Please try again.'); }
        }

        function startResendTimer() {
            resendCountdown = 60;
            updateResendUI();
            if (resendInterval) clearInterval(resendInterval);
            resendInterval = setInterval(function() { resendCountdown--; updateResendUI(); if (resendCountdown <= 0) { clearInterval(resendInterval); } }, 1000);
        }

        function updateResendUI() {
            var link = document.getElementById('resendLink');
            var timer = document.getElementById('resendTimer');
            if (resendCountdown > 0) { link.classList.add('disabled'); timer.textContent = ' (' + resendCountdown + 's)'; }
            else { link.classList.remove('disabled'); timer.textContent = ''; }
        }

        async function resendCode() {
            if (resendCountdown > 0) return;
            try {
                var response = await fetch('/api/account/resend-code', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail })
                });
                var data = await response.json();
                if (response.ok && data.success) { showToast('New code sent!'); clearCodeInputs(); startResendTimer(); }
                else { showToast(data.message || 'Failed to resend code', 'error'); }
            } catch (error) { console.error('Error:', error); showToast('An error occurred', 'error'); }
        }

        function checkPasswordStrength() {
            var password = document.getElementById('newPassword').value;
            var bar = document.getElementById('strengthBar');
            var text = document.getElementById('strengthText');
            if (password.length === 0) { bar.className = 'password-strength-bar'; text.textContent = 'Password must be at least 6 characters'; return; }
            var strength = 0;
            if (password.length >= 6) strength++;
            if (password.length >= 8) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;
            if (strength <= 2) { bar.className = 'password-strength-bar strength-weak'; text.textContent = 'Weak password'; }
            else if (strength <= 3) { bar.className = 'password-strength-bar strength-medium'; text.textContent = 'Medium password'; }
            else { bar.className = 'password-strength-bar strength-strong'; text.textContent = 'Strong password'; }
        }

        async function submitPassword(e) {
            e.preventDefault();
            hideError(3);
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            if (newPassword.length < 6) { showError(3, 'Password must be at least 6 characters'); return; }
            if (newPassword !== confirmPassword) { showError(3, 'Passwords do not match'); return; }
            setLoading(3, true);
            try {
                var response = await fetch('/api/account/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail, resetToken: resetToken, newPassword: newPassword, confirmPassword: confirmPassword })
                });
                var data = await response.json();
                setLoading(3, false);
                if (response.ok && data.success) { goToStep(4); showToast('Password reset successfully!'); }
                else { showError(3, data.message || 'Failed to reset password'); }
            } catch (error) { console.error('Error:', error); setLoading(3, false); showError(3, 'An error occurred. Please try again.'); }
        }
    </script>
</body>
</html>
