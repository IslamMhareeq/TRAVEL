@{
    ViewData["Title"] = "My Wishlist";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wishlist - TRAVEL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-bg: #0d1117;
            --color-surface: #161b22;
            --color-surface-2: #21262d;
            --color-border: #30363d;
            --color-text: #c9d1d9;
            --color-text-muted: #8b949e;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-success: #3fb950;
            --color-danger: #f85149;
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-bg);
            color: var(--color-text);
            min-height: 100vh;
        }

        /* Dashboard Layout */
        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background: var(--color-surface);
            border-right: 1px solid var(--color-border);
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 100;
            transition: transform 0.3s ease;
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
            color: var(--color-text);
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 600;
        }

            .sidebar-logo i {
                color: var(--color-gold);
                font-size: 1.5rem;
            }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            display: flex;
            flex-direction: column;
            gap: var(--space-2);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-text-muted);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all 0.2s;
        }

            .nav-item:hover {
                background: var(--color-surface-2);
                color: var(--color-text);
            }

            .nav-item.active {
                background: rgba(212, 168, 83, 0.1);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .sidebar-footer {
            padding: var(--space-4);
            border-top: 1px solid var(--color-border);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-bg);
        }

        .user-details {
            flex: 1;
            min-width: 0;
        }

        .user-name {
            font-weight: 500;
            font-size: 0.875rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-email {
            font-size: 0.75rem;
            color: var(--color-text-muted);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 260px;
            min-height: 100vh;
        }

        .header {
            padding: var(--space-5) var(--space-6);
            border-bottom: 1px solid var(--color-border);
            background: var(--color-surface);
        }

            .header h2 {
                font-family: var(--font-display);
                font-size: 1.75rem;
                font-weight: 500;
                display: flex;
                align-items: center;
            }

        .subtitle {
            color: var(--color-text-muted);
            margin-top: var(--space-2);
        }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--color-text);
            font-size: 1.25rem;
            cursor: pointer;
            margin-right: var(--space-3);
        }

        #content {
            padding: var(--space-6);
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-4);
            margin-bottom: var(--space-6);
        }

        .stat-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            background: rgba(212, 168, 83, 0.1);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-gold);
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--color-text-muted);
        }

        /* Wishlist Grid */
        .wishlist-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: var(--space-5);
        }

        .wishlist-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            overflow: hidden;
            transition: all 0.3s;
        }

            .wishlist-card:hover {
                transform: translateY(-4px);
                border-color: var(--color-gold);
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            }

        .wishlist-image-container {
            position: relative;
            height: 200px;
        }

        .wishlist-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .wishlist-badge {
            position: absolute;
            top: var(--space-3);
            left: var(--space-3);
            background: var(--color-success);
            color: white;
            padding: var(--space-1) var(--space-3);
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .wishlist-remove {
            position: absolute;
            top: var(--space-3);
            right: var(--space-3);
            width: 36px;
            height: 36px;
            background: rgba(0,0,0,0.6);
            border: none;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

            .wishlist-remove:hover {
                background: var(--color-danger);
            }

        .wishlist-content {
            padding: var(--space-5);
        }

        .wishlist-location {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-gold);
            font-size: 0.8125rem;
            margin-bottom: var(--space-2);
        }

        .wishlist-title {
            font-family: var(--font-display);
            font-size: 1.25rem;
            font-weight: 500;
            margin-bottom: var(--space-3);
        }

        .wishlist-meta {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-3);
            margin-bottom: var(--space-4);
        }

        .wishlist-meta-item {
            font-size: 0.8125rem;
            color: var(--color-text-muted);
            display: flex;
            align-items: center;
            gap: var(--space-1);
        }

        .wishlist-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: var(--space-3);
            border-top: 1px solid var(--color-border);
        }

        .wishlist-price {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--color-gold);
        }

        .wishlist-price-old {
            font-size: 0.875rem;
            color: var(--color-text-muted);
            text-decoration: line-through;
            margin-right: var(--space-2);
        }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-2) var(--space-4);
            border-radius: var(--radius-md);
            font-family: var(--font-body);
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-bg);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 168, 83, 0.3);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-border);
            color: var(--color-text);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px var(--space-5);
            color: var(--color-text-muted);
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: var(--space-5);
                opacity: 0.5;
            }

            .empty-state h3 {
                font-size: 1.25rem;
                margin-bottom: var(--space-3);
                color: var(--color-text);
            }

        /* Loading */
        .loading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 60px;
            gap: var(--space-4);
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 3px solid var(--color-border);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: var(--space-5);
            right: var(--space-5);
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            padding: var(--space-3) var(--space-4);
            display: flex;
            align-items: center;
            gap: var(--space-2);
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s;
            z-index: 1000;
        }

            .toast.show {
                opacity: 1;
                transform: translateY(0);
            }

            .toast.success i {
                color: var(--color-success);
            }

            .toast.error i {
                color: var(--color-danger);
            }

        /* Responsive */
        @@media (max-width: 1024px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: block;
            }

            .header {
                padding: var(--space-4);
            }

            .wishlist-grid {
                grid-template-columns: 1fr;
            }

            #content {
                padding: var(--space-4);
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo" onclick="navigateTo('/', event)">
                    <i class="fas fa-plane"></i> TRAVEL
                </a>
            </div>

            <nav class="sidebar-nav">
                <a href="/account/dashboard" class="nav-item" onclick="navigateTo('/account/dashboard', event)">
                    <i class="fas fa-th-large"></i><span>Dashboard</span>
                </a>
                <a href="/account/bookings" class="nav-item" onclick="navigateTo('/account/bookings', event)">
                    <i class="fas fa-calendar-check"></i><span>My Bookings</span>
                </a>
                <a href="/account/wishlist" class="nav-item active">
                    <i class="fas fa-heart"></i><span>Wishlist</span>
                </a>
                <a href="/packages" class="nav-item" onclick="navigateTo('/packages', event)">
                    <i class="fas fa-suitcase"></i><span>Browse Packages</span>
                </a>
                <a href="/account/profile" class="nav-item" onclick="navigateTo('/account/profile', event)">
                    <i class="fas fa-user"></i><span>Profile</span>
                </a>
                <a href="#" class="nav-item" onclick="logout(event)">
                    <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar" id="userAvatar">U</div>
                    <div class="user-details">
                        <div class="user-name" id="userName">User</div>
                        <div class="user-email" id="userEmail">user@example.com</div>
                    </div>
                </div>
            </div>
        </aside>

        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="main-content">
            <div class="header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h2><i class="fas fa-heart" style="color: var(--color-danger); margin-right: 10px;"></i>My Wishlist</h2>
                    <p class="subtitle">Packages you've saved for later</p>
                </div>
            </div>

            <div id="content">
                <!-- Stats -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon"><i class="fas fa-heart"></i></div>
                        <div>
                            <div class="stat-value" id="wishlistCount">0</div>
                            <div class="stat-label">Saved Packages</div>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon"><i class="fas fa-calendar-check"></i></div>
                        <div>
                            <div class="stat-value" id="bookingsCount">0</div>
                            <div class="stat-label">Total Bookings</div>
                        </div>
                    </div>
                </div>

                <!-- Wishlist Grid -->
                <div id="loader" class="loading">
                    <div class="spinner"></div>
                    <p>Loading wishlist...</p>
                </div>
                <div id="emptyState" class="empty-state" style="display: none;">
                    <i class="fas fa-heart-broken"></i>
                    <h3>Your wishlist is empty</h3>
                    <p>Start exploring and save packages you love!</p>
                    <a href="/packages" class="btn btn-primary" style="margin-top: 20px;" onclick="navigateTo('/packages', event)">
                        <i class="fas fa-search"></i> Browse Packages
                    </a>
                </div>
                <div class="wishlist-grid" id="wishlistGrid"></div>
            </div>
        </main>
    </div>

    <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage"></span>
    </div>

    <script>
        function navigateTo(url, event) {
            if (event) event.preventDefault();
            window.location.href = url;
        }

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.href = '/account/login';
        }

        function showToast(message, type) {
            type = type || 'success';
            var toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast ' + type;
            toast.querySelector('i').className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            toast.classList.add('show');
            setTimeout(function() { toast.classList.remove('show'); }, 3000);
        }

        function formatDate(dateStr) {
            if (!dateStr) return 'N/A';
            var date = new Date(dateStr);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        }

        function calculateDuration(startDate, endDate) {
            if (!startDate || !endDate) return 1;
            var start = new Date(startDate);
            var end = new Date(endDate);
            var days = Math.ceil((end - start) / (1000 * 60 * 60 * 24)) + 1;
            return days > 0 ? days : 1;
        }

        // Mobile menu
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('sidebarOverlay').classList.toggle('active');
        });

        document.getElementById('sidebarOverlay').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('active');
            this.classList.remove('active');
        });

        // Load stats - FIXED ENDPOINT: /api/booking/my-bookings (NOT /api/bookings/my)
        async function loadStats() {
            var token = localStorage.getItem('token');
            if (!token) return;

            try {
                // CORRECT ENDPOINT
                var bookingsRes = await fetch('/api/booking/my-bookings', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                if (bookingsRes.ok) {
                    var data = await bookingsRes.json();
                    document.getElementById('bookingsCount').textContent = (data.data || []).length;
                }
            } catch (error) {
                console.log('Could not load booking stats:', error);
            }
        }

        async function removeFromWishlist(packageId) {
            var token = localStorage.getItem('token');
            if (!token) {
                showToast('Please login first', 'error');
                return;
            }

            try {
                var response = await fetch('/api/wishlist/' + packageId, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    showToast('Removed from wishlist');
                    loadWishlist();
                } else {
                    var error = await response.json();
                    showToast(error.message || 'Failed to remove', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
            }
        }

        async function loadWishlist() {
            var token = localStorage.getItem('token');
            var loader = document.getElementById('loader');
            var emptyState = document.getElementById('emptyState');
            var grid = document.getElementById('wishlistGrid');

            if (!token) {
                console.log('No token found, redirecting to login');
                navigateTo('/account/login');
                return;
            }

            console.log('Loading wishlist...');

            try {
                var response = await fetch('/api/wishlist', {
                    method: 'GET',
                    headers: {
                        'Authorization': 'Bearer ' + token,
                        'Content-Type': 'application/json'
                    }
                });

                console.log('Response status:', response.status);
                loader.style.display = 'none';

                if (response.status === 401) {
                    console.log('Token expired or invalid');
                    showToast('Session expired. Please login again.', 'error');
                    setTimeout(function() { navigateTo('/account/login'); }, 1500);
                    return;
                }

                if (response.ok) {
                    var result = await response.json();
                    console.log('Wishlist data:', result);

                    // Update count
                    var count = result.count || (result.data ? result.data.length : 0);
                    document.getElementById('wishlistCount').textContent = count;

                    // Check if we have data
                    if (!result.data || result.data.length === 0) {
                        console.log('No items in wishlist');
                        emptyState.style.display = 'block';
                        grid.innerHTML = '';
                        return;
                    }

                    var html = '';
                    for (var i = 0; i < result.data.length; i++) {
                        var item = result.data[i];

                        // FIX: Access the nested 'package' object
                        var pkg = item.package;

                        if (!pkg) {
                            console.log('No package data for item:', item);
                            continue;
                        }

                        // FIX: Get image URL properly from package
                        var imageUrl = pkg.imageUrl || 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=400&q=80';
                        var duration = calculateDuration(pkg.startDate, pkg.endDate);
                        var hasDiscount = pkg.discountedPrice && pkg.discountedPrice < pkg.price;
                        var price = hasDiscount ? pkg.discountedPrice : pkg.price;

                        html += '<div class="wishlist-card">';
                        html += '<div class="wishlist-image-container">';
                        html += '<img src="' + imageUrl + '" alt="' + (pkg.destination || 'Package') + '" class="wishlist-image" onerror="this.src=\'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=400&q=80\'">';
                        if (hasDiscount) {
                            html += '<span class="wishlist-badge">On Sale</span>';
                        }
                        html += '<button class="wishlist-remove" onclick="removeFromWishlist(' + pkg.packageId + ')" title="Remove from wishlist"><i class="fas fa-trash"></i></button>';
                        html += '</div>';
                        html += '<div class="wishlist-content">';
                        html += '<div class="wishlist-location"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Unknown') + '</div>';
                        html += '<div class="wishlist-title">' + (pkg.destination || 'Package') + '</div>';
                        html += '<div class="wishlist-meta">';
                        html += '<div class="wishlist-meta-item"><i class="far fa-calendar"></i> ' + formatDate(pkg.startDate) + ' - ' + formatDate(pkg.endDate) + '</div>';
                        html += '<div class="wishlist-meta-item"><i class="far fa-clock"></i> ' + duration + ' days</div>';
                        html += '</div>';
                        html += '<div class="wishlist-footer">';
                        html += '<div class="wishlist-price">';
                        if (hasDiscount) {
                            html += '<span class="wishlist-price-old">$' + (pkg.price || 0).toLocaleString() + '</span>';
                        }
                        html += '$' + (price || 0).toLocaleString();
                        html += '</div>';
                        html += '<a href="/packages/' + pkg.packageId + '" class="btn btn-outline">View Details</a>';
                        html += '</div>';
                        html += '</div>';
                        html += '</div>';
                    }

                    if (html === '') {
                        emptyState.style.display = 'block';
                    } else {
                        grid.innerHTML = html;
                    }
                } else {
                    console.log('Error response');
                    emptyState.style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading wishlist:', error);
                loader.style.display = 'none';
                emptyState.style.display = 'block';
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');

            console.log('Page loaded, checking auth...');

            if (!token || !user) {
                console.log('Not logged in, redirecting...');
                navigateTo('/account/login');
                return;
            }

            try {
                var userData = JSON.parse(user);
                document.getElementById('userName').textContent = (userData.firstName || '') + ' ' + (userData.lastName || '');
                document.getElementById('userEmail').textContent = userData.email || '';
                document.getElementById('userAvatar').textContent = (userData.firstName || 'U').charAt(0).toUpperCase();
            } catch (e) {
                console.error('Error parsing user data:', e);
            }

            loadWishlist();
            loadStats();
        });
    </script>
</body>
</html>
