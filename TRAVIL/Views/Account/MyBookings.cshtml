@{
    ViewData["Title"] = "My Bookings";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings - TRAVIL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --color-bg: #0a0a0f;
            --color-surface: #12121a;
            --color-surface-2: #1a1a24;
            --color-border: #2a2a3a;
            --color-gold: #d4a853;
            --color-gold-hover: #e4b863;
            --color-white: #ffffff;
            --color-silver: #a0a0b0;
            --color-success: #3fb950;
            --color-warning: #d29922;
            --color-danger: #f85149;
            --color-info: #58a6ff;
            --font-main: 'Plus Jakarta Sans', sans-serif;
            --radius-sm: 6px;
            --radius-md: 10px;
            --radius-lg: 16px;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --sidebar-width: 260px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-main);
            background: var(--color-bg);
            color: var(--color-white);
            min-height: 100vh;
        }

        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-surface);
            border-right: 1px solid var(--color-border);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            z-index: 100;
            transition: transform 0.3s ease;
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-border);
        }

        .sidebar-logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-gold);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            display: flex;
            flex-direction: column;
            gap: var(--space-2);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-silver);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all 0.2s ease;
        }

            .nav-item:hover, .nav-item.active {
                background: var(--color-surface-2);
                color: var(--color-white);
            }

            .nav-item.active {
                background: linear-gradient(135deg, rgba(212, 168, 83, 0.2), rgba(212, 168, 83, 0.1));
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }

        .sidebar-footer {
            padding: var(--space-4);
            border-top: 1px solid var(--color-border);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--color-gold), #b8934a);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--color-bg);
        }

        .user-details {
            flex: 1;
        }

        .user-name {
            font-weight: 600;
            font-size: 0.9rem;
        }

        .user-email {
            font-size: 0.8rem;
            color: var(--color-silver);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: var(--space-6);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: var(--space-6);
            flex-wrap: wrap;
            gap: var(--space-4);
        }

            .header h2 {
                font-size: 1.75rem;
                font-weight: 700;
            }

        .subtitle {
            color: var(--color-silver);
            margin-top: var(--space-1);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-4);
            border-radius: var(--radius-md);
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            border: none;
            transition: all 0.2s ease;
            font-size: 0.9rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), #b8934a);
            color: var(--color-bg);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--color-gold-hover), var(--color-gold));
                transform: translateY(-2px);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-border);
            color: var(--color-white);
        }

            .btn-outline:hover {
                background: var(--color-surface-2);
                border-color: var(--color-gold);
            }

        .btn-sm {
            padding: var(--space-2) var(--space-3);
            font-size: 0.85rem;
        }

        .btn-danger {
            background: var(--color-danger);
            color: white;
        }

        /* Filter Tabs */
        .filter-tabs {
            display: flex;
            gap: var(--space-2);
            margin-bottom: var(--space-5);
            flex-wrap: wrap;
        }

        .filter-tab {
            padding: var(--space-2) var(--space-4);
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-md);
            color: var(--color-silver);
            cursor: pointer;
            transition: all 0.2s;
        }

            .filter-tab:hover, .filter-tab.active {
                background: var(--color-surface-2);
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        /* Bookings Grid */
        .bookings-grid {
            display: grid;
            gap: var(--space-4);
        }

        .booking-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: var(--radius-lg);
            overflow: hidden;
            display: grid;
            grid-template-columns: 200px 1fr auto;
            transition: all 0.3s;
        }

            .booking-card:hover {
                border-color: var(--color-gold);
                transform: translateY(-2px);
            }

        .booking-image {
            width: 100%;
            height: 100%;
            min-height: 150px;
            object-fit: cover;
        }

        .booking-details {
            padding: var(--space-5);
            display: flex;
            flex-direction: column;
            gap: var(--space-3);
        }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .booking-destination {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .booking-reference {
            font-size: 0.85rem;
            color: var(--color-silver);
            background: var(--color-surface-2);
            padding: 4px 10px;
            border-radius: var(--radius-sm);
        }

        .booking-meta {
            display: flex;
            gap: var(--space-5);
            flex-wrap: wrap;
        }

        .booking-meta-item {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-silver);
            font-size: 0.9rem;
        }

            .booking-meta-item i {
                color: var(--color-gold);
            }

        .booking-status {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

            .booking-status.confirmed {
                background: rgba(63, 185, 80, 0.2);
                color: var(--color-success);
            }

            .booking-status.pending {
                background: rgba(210, 153, 34, 0.2);
                color: var(--color-warning);
            }

            .booking-status.cancelled {
                background: rgba(248, 81, 73, 0.2);
                color: var(--color-danger);
            }

            .booking-status.completed {
                background: rgba(88, 166, 255, 0.2);
                color: var(--color-info);
            }

        .booking-actions {
            padding: var(--space-5);
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: var(--space-3);
            border-left: 1px solid var(--color-border);
        }

        .booking-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-gold);
            text-align: center;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: var(--space-6) * 2;
            color: var(--color-silver);
        }

            .empty-state i {
                font-size: 4rem;
                margin-bottom: var(--space-5);
                opacity: 0.5;
            }

            .empty-state h3 {
                font-size: 1.5rem;
                color: var(--color-white);
                margin-bottom: var(--space-3);
            }

            .empty-state p {
                margin-bottom: var(--space-5);
            }

        /* Loading */
        .loading {
            display: flex;
            justify-content: center;
            padding: var(--space-6) * 2;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid var(--color-border);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Toast */
        .toast {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: var(--color-surface-2);
            border: 1px solid var(--color-border);
            padding: var(--space-4) var(--space-5);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            gap: var(--space-3);
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s ease;
            z-index: 1000;
        }

            .toast.show {
                transform: translateY(0);
                opacity: 1;
            }

            .toast.success {
                border-color: var(--color-success);
            }

            .toast.error {
                border-color: var(--color-danger);
            }

        /* Mobile */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--color-white);
            font-size: 1.5rem;
            cursor: pointer;
            margin-right: var(--space-3);
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        @@media (max-width: 1024px) {
            .booking-card {
                grid-template-columns: 150px 1fr;
            }

            .booking-actions {
                grid-column: span 2;
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
                border-left: none;
                border-top: 1px solid var(--color-border);
            }
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
                padding: var(--space-4);
            }

            .mobile-menu-btn {
                display: block;
            }

            .booking-card {
                grid-template-columns: 1fr;
            }

            .booking-image {
                height: 150px;
            }

            .booking-actions {
                border-left: none;
                border-top: 1px solid var(--color-border);
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo" onclick="navigateTo('/', event)">
                    <i class="fas fa-plane"></i> TRAVIL
                </a>
            </div>

            <nav class="sidebar-nav">
                <a href="/account/dashboard" class="nav-item" onclick="navigateTo('/account/dashboard', event)">
                    <i class="fas fa-th-large"></i><span>Dashboard</span>
                </a>
                <a href="/account/bookings" class="nav-item active">
                    <i class="fas fa-calendar-check"></i><span>My Bookings</span>
                </a>
                <a href="/account/wishlist" class="nav-item" onclick="navigateTo('/account/wishlist', event)">
                    <i class="fas fa-heart"></i><span>Wishlist</span>
                </a>
                <a href="/packages" class="nav-item" onclick="navigateTo('/packages', event)">
                    <i class="fas fa-suitcase"></i><span>Browse Packages</span>
                </a>
                <a href="/account/profile" class="nav-item" onclick="navigateTo('/account/profile', event)">
                    <i class="fas fa-user"></i><span>Profile</span>
                </a>
                <a href="#" class="nav-item" onclick="logout(event)">
                    <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar" id="userAvatar">U</div>
                    <div class="user-details">
                        <div class="user-name" id="userName">User</div>
                        <div class="user-email" id="userEmail">user@example.com</div>
                    </div>
                </div>
            </div>
        </aside>

        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h2>My Bookings</h2>
                    <p class="subtitle">View and manage your travel bookings</p>
                </div>
                <a href="/packages" class="btn btn-primary" onclick="navigateTo('/packages', event)">
                    <i class="fas fa-plus"></i> Book New Trip
                </a>
            </div>

            <!-- Filter Tabs -->
            <div class="filter-tabs">
                <button class="filter-tab active" data-filter="all">All Bookings</button>
                <button class="filter-tab" data-filter="confirmed">Confirmed</button>
                <button class="filter-tab" data-filter="pending">Pending</button>
                <button class="filter-tab" data-filter="cancelled">Cancelled</button>
                <button class="filter-tab" data-filter="completed">Completed</button>
            </div>

            <!-- Bookings Container -->
            <div id="bookingsContainer">
                <div class="loading" id="loader">
                    <div class="spinner"></div>
                </div>

                <div class="empty-state" id="emptyState" style="display: none;">
                    <i class="fas fa-calendar-times"></i>
                    <h3>No Bookings Yet</h3>
                    <p>You haven't made any bookings yet. Start exploring our amazing travel packages!</p>
                    <a href="/packages" class="btn btn-primary" onclick="navigateTo('/packages', event)">
                        <i class="fas fa-search"></i> Browse Packages
                    </a>
                </div>

                <div class="bookings-grid" id="bookingsGrid"></div>
            </div>
        </main>
    </div>

    <div id="toast" class="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Message</span>
    </div>

    <script>
        let allBookings = [];
        let currentFilter = 'all';

        function navigateTo(url, event) {
            if (event) event.preventDefault();
            window.location.href = url;
        }

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            navigateTo('/account/login');
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.className = `toast ${type} show`;
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
        }

        function getStatusClass(status) {
            const s = (status || '').toLowerCase();
            if (s === 'confirmed') return 'confirmed';
            if (s === 'pending') return 'pending';
            if (s === 'cancelled') return 'cancelled';
            if (s === 'completed') return 'completed';
            return 'pending';
        }

        function getStatusIcon(status) {
            const s = (status || '').toLowerCase();
            if (s === 'confirmed') return 'fa-check-circle';
            if (s === 'pending') return 'fa-clock';
            if (s === 'cancelled') return 'fa-times-circle';
            if (s === 'completed') return 'fa-flag-checkered';
            return 'fa-clock';
        }

        // Mobile menu
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('sidebarOverlay').classList.toggle('active');
        });

        document.getElementById('sidebarOverlay').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('active');
            this.classList.remove('active');
        });

        // Filter tabs
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentFilter = this.dataset.filter;
                renderBookings();
            });
        });

        function renderBookings() {
            const grid = document.getElementById('bookingsGrid');
            const emptyState = document.getElementById('emptyState');

            let filtered = allBookings;
            if (currentFilter !== 'all') {
                filtered = allBookings.filter(b => (b.status || '').toLowerCase() === currentFilter);
            }

            if (filtered.length === 0) {
                grid.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }

            emptyState.style.display = 'none';
            grid.innerHTML = filtered.map(booking => {
                const pkg = booking.travelPackage || {};
                const imageUrl = pkg.imageUrl || 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=400&q=80';

                return `
                    <div class="booking-card">
                        <img src="${imageUrl}" alt="${pkg.destination || 'Package'}" class="booking-image"
                             onerror="this.src='https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=400&q=80'">
                        <div class="booking-details">
                            <div class="booking-header">
                                <div class="booking-destination">${pkg.destination || 'Unknown Destination'}</div>
                                <div class="booking-reference">${booking.bookingReference || 'N/A'}</div>
                            </div>
                            <div class="booking-meta">
                                <div class="booking-meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>${pkg.country || 'N/A'}</span>
                                </div>
                                <div class="booking-meta-item">
                                    <i class="fas fa-calendar"></i>
                                    <span>${formatDate(pkg.startDate)} - ${formatDate(pkg.endDate)}</span>
                                </div>
                                <div class="booking-meta-item">
                                    <i class="fas fa-users"></i>
                                    <span>${booking.numberOfGuests || 1} Guest(s)</span>
                                </div>
                                <div class="booking-meta-item">
                                    <i class="fas fa-door-open"></i>
                                    <span>${booking.numberOfRooms || 1} Room(s)</span>
                                </div>
                            </div>
                            <span class="booking-status ${getStatusClass(booking.status)}">
                                <i class="fas ${getStatusIcon(booking.status)}"></i>
                                ${booking.status || 'Pending'}
                            </span>
                        </div>
                        <div class="booking-actions">
                            <div class="booking-price">$${(booking.totalPrice || 0).toLocaleString()}</div>
                            <a href="/booking/details/${booking.bookingId}" class="btn btn-outline btn-sm" onclick="navigateTo('/booking/details/${booking.bookingId}', event)">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            ${booking.status === 'Pending' ? `
                                <button class="btn btn-danger btn-sm" onclick="cancelBooking(${booking.bookingId})">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                            ` : ''}
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function cancelBooking(bookingId) {
            if (!confirm('Are you sure you want to cancel this booking?')) return;

            const token = localStorage.getItem('token');
            try {
                const response = await fetch(`/api/booking/${bookingId}/cancel`, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ reason: 'Cancelled by user' })
                });

                if (response.ok) {
                    showToast('Booking cancelled successfully');
                    loadBookings();
                } else {
                    const error = await response.json();
                    showToast(error.message || 'Failed to cancel booking', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
            }
        }

        async function loadBookings() {
            const token = localStorage.getItem('token');
            const loader = document.getElementById('loader');
            const emptyState = document.getElementById('emptyState');
            const grid = document.getElementById('bookingsGrid');

            try {
                const response = await fetch('/api/booking/my-bookings', {
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                loader.style.display = 'none';

                if (response.ok) {
                    const result = await response.json();
                    allBookings = result.data || [];
                    renderBookings();
                } else {
                    emptyState.style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading bookings:', error);
                loader.style.display = 'none';
                emptyState.style.display = 'block';
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', async function() {
            const token = localStorage.getItem('token');
            const user = localStorage.getItem('user');

            if (!token || !user) {
                navigateTo('/account/login');
                return;
            }

            try {
                const userData = JSON.parse(user);
                document.getElementById('userName').textContent = `${userData.firstName || ''} ${userData.lastName || ''}`.trim();
                document.getElementById('userEmail').textContent = userData.email || '';
                document.getElementById('userAvatar').textContent = (userData.firstName || 'U').charAt(0).toUpperCase();

                await loadBookings();
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>
</body>
</html>
