@{
    ViewData["Title"] = "My Bookings";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Bookings - TRAVIL</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    
    <style>
        :root {
            --color-midnight: #0d1117; --color-navy: #161b22; --color-slate: #21262d;
            --color-charcoal: #30363d; --color-steel: #484f58;
            --color-gold: #d4a853; --color-gold-light: #e8c875; --color-gold-dark: #b8923f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-white: #ffffff; --color-silver: #8b949e; --color-mist: #c9d1d9;
            --color-success: #3fb950; --color-warning: #d29922; --color-error: #f85149; --color-info: #58a6ff;
            --font-display: 'Cormorant Garamond', Georgia, serif;
            --font-body: 'Outfit', -apple-system, BlinkMacSystemFont, sans-serif;
            --radius-md: 10px; --radius-lg: 16px; --radius-full: 9999px;
            --shadow-gold: 0 8px 32px rgba(212, 168, 83, 0.25);
            --transition-fast: 150ms ease; --transition-normal: 300ms ease;
            --space-1: 4px; --space-2: 8px; --space-3: 12px; --space-4: 16px;
            --space-5: 24px; --space-6: 32px; --space-7: 48px;
            --sidebar-width: 280px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: var(--font-body); background: var(--color-midnight); color: var(--color-mist); line-height: 1.6; }

        .page-transition {
            position: fixed; inset: 0; background: var(--color-midnight); z-index: 10000;
            display: flex; align-items: center; justify-content: center;
            opacity: 0; visibility: hidden; transition: opacity 0.4s ease, visibility 0.4s ease;
        }
        .page-transition.active { opacity: 1; visibility: visible; }
        .page-transition .loader {
            width: 48px; height: 48px; border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold); border-radius: 50%; animation: spin 0.8s linear infinite;
        }

        .dashboard-layout { display: flex; min-height: 100vh; }

        .sidebar {
            width: var(--sidebar-width); background: var(--color-navy); border-right: 1px solid var(--color-slate);
            position: fixed; top: 0; left: 0; bottom: 0; z-index: 100;
            display: flex; flex-direction: column; transition: transform 0.3s ease;
        }

        .sidebar-header {
            padding: var(--space-5); display: flex; align-items: center; gap: var(--space-3);
            border-bottom: 1px solid var(--color-slate);
        }

        .sidebar-header .logo {
            width: 42px; height: 42px;
            background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%);
            border-radius: var(--radius-md); display: flex; align-items: center; justify-content: center;
            font-size: 1.125rem; color: var(--color-midnight);
        }

        .sidebar-header h1 { font-family: var(--font-display); font-size: 1.5rem; font-weight: 500; color: var(--color-white); letter-spacing: 0.1em; }

        .nav-section { padding: var(--space-4); }
        .nav-section-title { font-size: 0.6875rem; font-weight: 600; color: var(--color-steel); text-transform: uppercase; letter-spacing: 0.1em; padding: var(--space-2) var(--space-3); margin-bottom: var(--space-2); }

        .nav-item {
            display: flex; align-items: center; gap: var(--space-3);
            padding: var(--space-3) var(--space-4); border-radius: var(--radius-md);
            color: var(--color-silver); text-decoration: none; font-size: 0.9375rem;
            font-weight: 500; transition: all var(--transition-fast); margin-bottom: var(--space-1);
            border-left: 3px solid transparent;
        }
        .nav-item:hover { background: var(--color-slate); color: var(--color-white); }
        .nav-item.active { background: var(--color-gold-muted); color: var(--color-gold); border-left-color: var(--color-gold); }
        .nav-item i { width: 20px; text-align: center; }

        .sidebar-overlay { display: none; position: fixed; inset: 0; background: rgba(0, 0, 0, 0.5); z-index: 99; }
        .sidebar-overlay.active { display: block; }

        .main-content { flex: 1; margin-left: var(--sidebar-width); padding: var(--space-5); min-height: 100vh; }

        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-6); flex-wrap: wrap; gap: var(--space-4); }
        .header h2 { font-family: var(--font-display); font-size: 1.75rem; font-weight: 500; color: var(--color-white); margin-bottom: var(--space-1); }
        .header .subtitle { font-size: 0.875rem; color: var(--color-silver); }

        .mobile-menu-btn {
            display: none; background: var(--color-slate); border: none; color: var(--color-white);
            padding: var(--space-3); border-radius: var(--radius-md); cursor: pointer; font-size: 1.125rem;
        }

        .btn {
            display: inline-flex; align-items: center; justify-content: center; gap: var(--space-2);
            padding: var(--space-3) var(--space-5); border: none; border-radius: var(--radius-md);
            font-family: var(--font-body); font-size: 0.875rem; font-weight: 600;
            cursor: pointer; transition: all var(--transition-normal); text-decoration: none;
        }
        .btn-primary { background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-gold-dark) 100%); color: var(--color-midnight); }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: var(--shadow-gold); }
        .btn-outline { background: transparent; border: 1px solid var(--color-charcoal); color: var(--color-mist); }
        .btn-outline:hover { border-color: var(--color-gold); color: var(--color-gold); }
        .btn-sm { padding: var(--space-2) var(--space-4); font-size: 0.8125rem; }

        /* Tabs */
        .tabs { display: flex; gap: var(--space-2); margin-bottom: var(--space-5); border-bottom: 1px solid var(--color-slate); padding-bottom: var(--space-3); }
        .tab {
            padding: var(--space-3) var(--space-5); background: none; border: none;
            color: var(--color-silver); font-size: 0.9375rem; font-weight: 500;
            cursor: pointer; border-radius: var(--radius-md); transition: all var(--transition-fast);
        }
        .tab:hover { color: var(--color-white); background: var(--color-slate); }
        .tab.active { color: var(--color-gold); background: var(--color-gold-muted); }

        /* Booking Card */
        .bookings-grid { display: flex; flex-direction: column; gap: var(--space-4); }

        .booking-card {
            display: flex; gap: var(--space-5); padding: var(--space-5);
            background: var(--color-navy); border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg); transition: all var(--transition-fast);
        }
        .booking-card:hover { border-color: var(--color-gold-muted); }

        .booking-image { width: 200px; height: 150px; border-radius: var(--radius-md); object-fit: cover; flex-shrink: 0; }

        .booking-details { flex: 1; }
        .booking-destination { font-size: 1.25rem; font-weight: 600; color: var(--color-white); margin-bottom: var(--space-2); }
        .booking-location { display: flex; align-items: center; gap: var(--space-2); font-size: 0.875rem; color: var(--color-silver); margin-bottom: var(--space-3); }
        .booking-location i { color: var(--color-gold); }

        .booking-meta { display: flex; flex-wrap: wrap; gap: var(--space-4); margin-bottom: var(--space-4); }
        .booking-meta-item { display: flex; align-items: center; gap: var(--space-2); font-size: 0.875rem; color: var(--color-silver); }
        .booking-meta-item i { color: var(--color-gold); width: 16px; }

        .booking-footer { display: flex; justify-content: space-between; align-items: center; padding-top: var(--space-4); border-top: 1px solid var(--color-slate); }
        .booking-price { font-size: 1.25rem; font-weight: 700; color: var(--color-gold); }
        .booking-price span { font-size: 0.875rem; font-weight: 400; color: var(--color-silver); }

        .status-badge {
            display: inline-flex; align-items: center; gap: var(--space-2);
            padding: var(--space-2) var(--space-4); border-radius: var(--radius-full);
            font-size: 0.8125rem; font-weight: 600; text-transform: uppercase;
        }
        .status-badge.confirmed { background: rgba(63, 185, 80, 0.15); color: var(--color-success); }
        .status-badge.pending { background: rgba(210, 153, 34, 0.15); color: var(--color-warning); }
        .status-badge.upcoming { background: rgba(88, 166, 255, 0.15); color: var(--color-info); }
        .status-badge.completed { background: var(--color-gold-muted); color: var(--color-gold); }
        .status-badge.cancelled { background: rgba(248, 81, 73, 0.15); color: var(--color-error); }

        .empty-state { text-align: center; padding: var(--space-7); color: var(--color-silver); }
        .empty-state i { font-size: 4rem; margin-bottom: var(--space-4); opacity: 0.3; }
        .empty-state h3 { font-family: var(--font-display); font-size: 1.5rem; color: var(--color-white); margin-bottom: var(--space-3); }

        .toast {
            position: fixed; bottom: 24px; right: 24px; background: var(--color-charcoal);
            border: 1px solid var(--color-slate); border-radius: var(--radius-lg);
            padding: 16px 24px; display: flex; align-items: center; gap: 12px;
            color: var(--color-white); font-size: 0.9375rem; z-index: 10000;
            opacity: 0; transform: translateY(20px); transition: all 0.3s ease;
        }
        .toast.show { opacity: 1; transform: translateY(0); }
        .toast.success i { color: var(--color-success); }

        @@media (max-width: 1024px) {
            .sidebar { transform: translateX(-100%); }
            .sidebar.open { transform: translateX(0); }
            .main-content { margin-left: 0; }
            .mobile-menu-btn { display: flex; }
        }

        @@media (max-width: 768px) {
            .booking-card { flex-direction: column; }
            .booking-image { width: 100%; height: 200px; }
        }

        @@keyframes spin { to { transform: rotate(360deg); } }
    </style>
</head>
<body>
    <div class="page-transition" id="pageTransition"><div class="loader"></div></div>

    <div class="dashboard-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" onclick="navigateTo('/', event)" style="display: flex; align-items: center; gap: 12px; text-decoration: none;">
                    <div class="logo"><i class="fas fa-compass"></i></div>
                    <h1>TRAVIL</h1>
                </a>
            </div>

            <nav class="nav-section">
                <div class="nav-section-title">Main Menu</div>
                <a href="/account/dashboard" class="nav-item" onclick="navigateTo('/account/dashboard', event)">
                    <i class="fas fa-th-large"></i><span>Dashboard</span>
                </a>
                <a href="/account/bookings" class="nav-item active" onclick="navigateTo('/account/bookings', event)">
                    <i class="fas fa-suitcase"></i><span>My Bookings</span>
                </a>
                <a href="/account/wishlist" class="nav-item" onclick="navigateTo('/account/wishlist', event)">
                    <i class="fas fa-heart"></i><span>Wishlist</span>
                </a>
            </nav>

            <nav class="nav-section">
                <div class="nav-section-title">Account</div>
                <a href="/account/profile" class="nav-item" onclick="navigateTo('/account/profile', event)">
                    <i class="fas fa-user"></i><span>Profile</span>
                </a>
                <a href="#" class="nav-item" onclick="logout(event)">
                    <i class="fas fa-sign-out-alt"></i><span>Sign Out</span>
                </a>
            </nav>
        </aside>

        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <main class="main-content">
            <div class="header">
                <div>
                    <button class="mobile-menu-btn" id="mobileMenuBtn"><i class="fas fa-bars"></i></button>
                    <h2>My Bookings</h2>
                    <p class="subtitle">View and manage your travel reservations</p>
                </div>
                <a href="/packages" class="btn btn-primary" onclick="navigateTo('/packages', event)">
                    <i class="fas fa-plus"></i> Book New Trip
                </a>
            </div>

            <div class="tabs">
                <button class="tab active" onclick="filterBookings('all')">All Bookings</button>
                <button class="tab" onclick="filterBookings('upcoming')">Upcoming</button>
                <button class="tab" onclick="filterBookings('completed')">Completed</button>
                <button class="tab" onclick="filterBookings('cancelled')">Cancelled</button>
            </div>

            <div class="bookings-grid" id="bookingsGrid">
                <div class="booking-card">
                    <img src="https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=400&q=80" alt="Bali" class="booking-image">
                    <div class="booking-details">
                        <h3 class="booking-destination">Bali Paradise Escape</h3>
                        <div class="booking-location"><i class="fas fa-map-marker-alt"></i> Bali, Indonesia</div>
                        <div class="booking-meta">
                            <div class="booking-meta-item"><i class="far fa-calendar"></i> Jan 15 - Jan 22, 2025</div>
                            <div class="booking-meta-item"><i class="fas fa-users"></i> 2 Guests</div>
                            <div class="booking-meta-item"><i class="fas fa-receipt"></i> TRV-A8K2M9</div>
                        </div>
                        <div class="booking-footer">
                            <div class="booking-price">$2,598 <span>total</span></div>
                            <div style="display: flex; gap: 12px; align-items: center;">
                                <span class="status-badge upcoming"><i class="fas fa-clock"></i> Upcoming</span>
                                <a href="/booking/1" class="btn btn-outline btn-sm" onclick="navigateTo('/booking/1', event)">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="booking-card">
                    <img src="https://images.unsplash.com/photo-1499856871958-5b9627545d1a?w=400&q=80" alt="Paris" class="booking-image">
                    <div class="booking-details">
                        <h3 class="booking-destination">Romantic Paris Getaway</h3>
                        <div class="booking-location"><i class="fas fa-map-marker-alt"></i> Paris, France</div>
                        <div class="booking-meta">
                            <div class="booking-meta-item"><i class="far fa-calendar"></i> Feb 10 - Feb 15, 2025</div>
                            <div class="booking-meta-item"><i class="fas fa-users"></i> 2 Guests</div>
                            <div class="booking-meta-item"><i class="fas fa-receipt"></i> TRV-B3P7Q2</div>
                        </div>
                        <div class="booking-footer">
                            <div class="booking-price">$3,198 <span>total</span></div>
                            <div style="display: flex; gap: 12px; align-items: center;">
                                <span class="status-badge confirmed"><i class="fas fa-check"></i> Confirmed</span>
                                <a href="/booking/2" class="btn btn-outline btn-sm" onclick="navigateTo('/booking/2', event)">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="booking-card">
                    <img src="https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=400&q=80" alt="Kyoto" class="booking-image">
                    <div class="booking-details">
                        <h3 class="booking-destination">Ancient Kyoto Discovery</h3>
                        <div class="booking-location"><i class="fas fa-map-marker-alt"></i> Kyoto, Japan</div>
                        <div class="booking-meta">
                            <div class="booking-meta-item"><i class="far fa-calendar"></i> Mar 5 - Mar 13, 2025</div>
                            <div class="booking-meta-item"><i class="fas fa-users"></i> 2 Guests</div>
                            <div class="booking-meta-item"><i class="fas fa-receipt"></i> TRV-C5R9T4</div>
                        </div>
                        <div class="booking-footer">
                            <div class="booking-price">$4,398 <span>total</span></div>
                            <div style="display: flex; gap: 12px; align-items: center;">
                                <span class="status-badge pending"><i class="fas fa-hourglass-half"></i> Pending</span>
                                <a href="/booking/3" class="btn btn-outline btn-sm" onclick="navigateTo('/booking/3', event)">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <div id="toast" class="toast"><i class="fas fa-check-circle"></i><span id="toastMessage">Message</span></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const token = localStorage.getItem('token');
            if (!token) { navigateTo('/account/login'); return; }
        });

        function filterBookings(type) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            showToast(`Showing ${type} bookings`);
        }

        function navigateTo(url, event) {
            if (event) event.preventDefault();
            document.getElementById('pageTransition').classList.add('active');
            setTimeout(() => { window.location.href = url; }, 400);
        }

        function logout(event) {
            if (event) event.preventDefault();
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            navigateTo('/account/login');
        }

        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        if (mobileMenuBtn) mobileMenuBtn.addEventListener('click', () => { sidebar.classList.toggle('open'); sidebarOverlay.classList.toggle('active'); });
        if (sidebarOverlay) sidebarOverlay.addEventListener('click', () => { sidebar.classList.remove('open'); sidebarOverlay.classList.remove('active'); });

        function showToast(message) {
            const toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        window.addEventListener('pageshow', () => document.getElementById('pageTransition').classList.remove('active'));
    </script>
</body>
</html>
