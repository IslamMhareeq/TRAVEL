@{
    ViewData["Title"] = "Dashboard";
    ViewData["BodyClass"] = "dashboard-page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="dashboard-sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="/" class="sidebar-brand">
                <div class="logo">
                    <i class="fas fa-compass"></i>
                </div>
                <span>TRAVIL</span>
            </a>
        </div>
        
        <nav class="sidebar-nav">
            <div class="nav-section">
                <span class="nav-section-title">Main</span>
                <a href="/Account/Dashboard" class="nav-item active">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/Account/Bookings" class="nav-item">
                    <i class="fas fa-suitcase"></i>
                    <span>My Bookings</span>
                    <span class="nav-badge">3</span>
                </a>
                <a href="/Account/Wishlist" class="nav-item">
                    <i class="fas fa-heart"></i>
                    <span>Wishlist</span>
                </a>
                <a href="/TravelPackage" class="nav-item">
                    <i class="fas fa-search"></i>
                    <span>Explore</span>
                </a>
            </div>
            
            <div class="nav-section">
                <span class="nav-section-title">Account</span>
                <a href="/Account/Profile" class="nav-item">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="/Account/Settings" class="nav-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="/Account/Notifications" class="nav-item">
                    <i class="fas fa-bell"></i>
                    <span>Notifications</span>
                    <span class="nav-badge">5</span>
                </a>
            </div>
        </nav>
        
        <div class="sidebar-footer">
            <div class="user-info">
                <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&q=80" alt="User" class="user-avatar">
                <div class="user-details">
                    <span class="user-name">John Doe</span>
                    <span class="user-email">john@example.com</span>
                </div>
            </div>
            <a href="/Account/Logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </aside>
    
    <!-- Main Content -->
    <main class="dashboard-main">
        <!-- Header -->
        <header class="dashboard-header">
            <button class="mobile-menu-btn" id="mobileMenuBtn">
                <i class="fas fa-bars"></i>
            </button>
            
            <div class="header-search">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search destinations, packages...">
            </div>
            
            <div class="header-actions">
                <button class="header-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-dot"></span>
                </button>
                <button class="header-btn">
                    <i class="fas fa-cog"></i>
                </button>
            </div>
        </header>
        
        <!-- Page Content -->
        <div class="dashboard-content">
            <div class="page-header">
                <div class="page-title">
                    <h1>Welcome back, John!</h1>
                    <p>Here's what's happening with your travel plans.</p>
                </div>
                <a href="/TravelPackage" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Book New Trip
                </a>
            </div>
            
            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon blue">
                        <i class="fas fa-suitcase"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value">5</span>
                        <span class="stat-label">Total Trips</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon green">
                        <i class="fas fa-plane-departure"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value">2</span>
                        <span class="stat-label">Upcoming</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon gold">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value">1,250</span>
                        <span class="stat-label">Reward Points</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon purple">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value">8</span>
                        <span class="stat-label">Wishlist</span>
                    </div>
                </div>
            </div>
            
            <!-- Upcoming Trips -->
            <section class="dashboard-section">
                <div class="section-header">
                    <h2>Upcoming Trips</h2>
                    <a href="/Account/Bookings" class="section-link">View All</a>
                </div>
                
                <div class="bookings-list">
                    <div class="booking-item">
                        <div class="booking-image">
                            <img src="https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=300&q=80" alt="Bali">
                        </div>
                        <div class="booking-info">
                            <h3 class="booking-destination">Bali Paradise Escape</h3>
                            <p class="booking-location">
                                <i class="fas fa-map-marker-alt"></i>
                                Bali, Indonesia
                            </p>
                            <div class="booking-dates">
                                <i class="far fa-calendar"></i>
                                Jan 15 - Jan 22, 2025
                            </div>
                        </div>
                        <div class="booking-status">
                            <span class="status-badge confirmed">Confirmed</span>
                        </div>
                        <div class="booking-actions">
                            <a href="/Booking/Details/1" class="btn btn-outline btn-sm">View Details</a>
                        </div>
                    </div>
                    
                    <div class="booking-item">
                        <div class="booking-image">
                            <img src="https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=300&q=80" alt="Kyoto">
                        </div>
                        <div class="booking-info">
                            <h3 class="booking-destination">Ancient Kyoto Discovery</h3>
                            <p class="booking-location">
                                <i class="fas fa-map-marker-alt"></i>
                                Kyoto, Japan
                            </p>
                            <div class="booking-dates">
                                <i class="far fa-calendar"></i>
                                Mar 5 - Mar 13, 2025
                            </div>
                        </div>
                        <div class="booking-status">
                            <span class="status-badge pending">Pending Payment</span>
                        </div>
                        <div class="booking-actions">
                            <a href="/Booking/Pay/2" class="btn btn-primary btn-sm">Complete Payment</a>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Recommended for You -->
            <section class="dashboard-section">
                <div class="section-header">
                    <h2>Recommended for You</h2>
                    <a href="/TravelPackage" class="section-link">Explore More</a>
                </div>
                
                <div class="packages-grid compact">
                    <div class="package-card compact">
                        <div class="package-image">
                            <img src="https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=400&q=80" alt="Maldives">
                            <span class="package-badge">20% Off</span>
                        </div>
                        <div class="package-content">
                            <div class="package-location">
                                <i class="fas fa-map-marker-alt"></i>
                                Maldives
                            </div>
                            <h3 class="package-title">Luxury Overwater Villa</h3>
                            <div class="package-footer">
                                <span class="package-price-value">$2,499</span>
                                <a href="/TravelPackage/Details/4" class="btn btn-outline btn-sm">View</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="package-card compact">
                        <div class="package-image">
                            <img src="https://images.unsplash.com/photo-1516483638261-f4dbaf036963?w=400&q=80" alt="Italy">
                        </div>
                        <div class="package-content">
                            <div class="package-location">
                                <i class="fas fa-map-marker-alt"></i>
                                Italy
                            </div>
                            <h3 class="package-title">Tuscan Wine Country</h3>
                            <div class="package-footer">
                                <span class="package-price-value">$1,899</span>
                                <a href="/TravelPackage/Details/5" class="btn btn-outline btn-sm">View</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="package-card compact">
                        <div class="package-image">
                            <img src="https://images.unsplash.com/photo-1530521954074-e64f6810b32d?w=400&q=80" alt="Greece">
                        </div>
                        <div class="package-content">
                            <div class="package-location">
                                <i class="fas fa-map-marker-alt"></i>
                                Greece
                            </div>
                            <h3 class="package-title">Santorini Sunsets</h3>
                            <div class="package-footer">
                                <span class="package-price-value">$1,699</span>
                                <a href="/TravelPackage/Details/6" class="btn btn-outline btn-sm">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</div>

<!-- Sidebar Overlay for Mobile -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

@section Scripts {
    <script>
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        
        mobileMenuBtn.addEventListener('click', () => {
            sidebar.classList.toggle('open');
            sidebarOverlay.classList.toggle('active');
        });
        
        sidebarOverlay.addEventListener('click', () => {
            sidebar.classList.remove('open');
            sidebarOverlay.classList.remove('active');
        });
    </script>
}
