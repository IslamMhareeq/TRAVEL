@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - TRAVEL</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --color-success: #3fb950;
            --color-success-muted: rgba(63, 185, 80, 0.15);
            --color-warning: #d29922;
            --color-warning-muted: rgba(210, 153, 34, 0.15);
            --color-error: #f85149;
            --color-error-muted: rgba(248, 81, 73, 0.15);
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
            --sidebar-width: 280px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
            min-height: 100vh;
        }

        .dashboard-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--color-navy);
            border-right: 1px solid var(--color-slate);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            z-index: 100;
            transition: transform var(--transition-normal);
        }

        .sidebar-header {
            padding: var(--space-5);
            border-bottom: 1px solid var(--color-slate);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

            .sidebar-logo .logo-icon {
                width: 44px;
                height: 44px;
                background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
                border-radius: var(--radius-md);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                color: var(--color-midnight);
            }

            .sidebar-logo .logo-text {
                font-family: var(--font-display);
                font-size: 1.5rem;
                font-weight: 500;
                color: var(--color-white);
                letter-spacing: 0.1em;
            }

        .sidebar-nav {
            flex: 1;
            padding: var(--space-4);
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: var(--space-5);
        }

        .nav-section-title {
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--color-steel);
            padding: var(--space-2) var(--space-3);
            margin-bottom: var(--space-2);
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            color: var(--color-silver);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all var(--transition-fast);
            margin-bottom: var(--space-1);
        }

            .nav-item:hover {
                background: var(--color-slate);
                color: var(--color-white);
            }

            .nav-item.active {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

            .nav-item i {
                width: 20px;
                text-align: center;
                font-size: 0.9375rem;
            }

        .sidebar-footer {
            padding: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3);
            background: var(--color-slate);
            border-radius: var(--radius-md);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: var(--font-display);
            font-size: 1.125rem;
            font-weight: 500;
            color: var(--color-midnight);
        }

        .user-info {
            flex: 1;
            overflow: hidden;
        }

        .user-name {
            font-size: 0.875rem;
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-email {
            font-size: 0.75rem;
            color: var(--color-silver);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: var(--space-6);
            min-height: 100vh;
        }

        .page-header {
            margin-bottom: var(--space-5);
        }

            .page-header h1 {
                font-family: var(--font-display);
                font-size: 2rem;
                font-weight: 500;
                margin-bottom: var(--space-1);
            }

            .page-header p {
                color: var(--color-silver);
            }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-4);
            margin-bottom: var(--space-6);
        }

        .stat-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-5);
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

            .stat-icon.bookings {
                background: var(--color-gold-muted);
                color: var(--color-gold);
            }

            .stat-icon.upcoming {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .stat-icon.wishlist {
                background: var(--color-error-muted);
                color: var(--color-error);
            }

            .stat-icon.spent {
                background: var(--color-warning-muted);
                color: var(--color-warning);
            }

        .stat-value {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 600;
        }

        .stat-label {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        /* Content Grid */
        .content-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: var(--space-5);
        }

        .card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
        }

        .card-header {
            padding: var(--space-4) var(--space-5);
            border-bottom: 1px solid var(--color-slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .card-header h3 {
                font-family: var(--font-display);
                font-size: 1.125rem;
                font-weight: 500;
            }

            .card-header a {
                color: var(--color-gold);
                text-decoration: none;
                font-size: 0.875rem;
            }

        .card-body {
            padding: var(--space-5);
        }

        /* Booking Item */
        .booking-item {
            display: flex;
            gap: var(--space-4);
            padding: var(--space-4);
            background: var(--color-slate);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-3);
        }

            .booking-item:last-child {
                margin-bottom: 0;
            }

        .booking-image {
            width: 80px;
            height: 80px;
            border-radius: var(--radius-sm);
            object-fit: cover;
        }

        .booking-info {
            flex: 1;
        }

        .booking-destination {
            font-family: var(--font-display);
            font-size: 1.0625rem;
            font-weight: 500;
            margin-bottom: var(--space-1);
        }

        .booking-meta {
            display: flex;
            gap: var(--space-4);
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        .booking-status {
            margin-top: var(--space-2);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: var(--space-1);
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 500;
        }

            .status-badge.confirmed {
                background: var(--color-success-muted);
                color: var(--color-success);
            }

            .status-badge.pending {
                background: var(--color-warning-muted);
                color: var(--color-warning);
            }

            .status-badge.cancelled {
                background: var(--color-error-muted);
                color: var(--color-error);
            }

        /* Quick Actions */
        .quick-action {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-4);
            background: var(--color-slate);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-3);
            text-decoration: none;
            color: var(--color-mist);
            transition: all var(--transition-fast);
        }

            .quick-action:last-child {
                margin-bottom: 0;
            }

            .quick-action:hover {
                background: var(--color-charcoal);
                transform: translateX(4px);
            }

        .quick-action-icon {
            width: 40px;
            height: 40px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--color-gold-muted);
            color: var(--color-gold);
        }

        .quick-action span {
            flex: 1;
            font-weight: 500;
        }

        .quick-action i.fa-chevron-right {
            color: var(--color-steel);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: var(--space-7);
            color: var(--color-silver);
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: var(--space-4);
                opacity: 0.5;
            }

            .empty-state h4 {
                font-family: var(--font-display);
                font-size: 1.25rem;
                color: var(--color-mist);
                margin-bottom: var(--space-2);
            }

        /* Mobile */
        .mobile-menu-btn {
            display: none;
            position: fixed;
            top: var(--space-4);
            left: var(--space-4);
            z-index: 200;
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-md);
            padding: var(--space-3);
            color: var(--color-white);
            cursor: pointer;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 99;
        }

        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-overlay.active {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: block;
            }

            .content-grid {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <button class="mobile-menu-btn" id="mobileMenuBtn"><i class="fas fa-bars"></i></button>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="dashboard-layout">
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo">
                    <div class="logo-icon"><i class="fas fa-paper-plane"></i></div>
                    <span class="logo-text">TRAVEL</span>
                </a>
            </div>
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Menu</div>
                    <a href="/account/dashboard" class="nav-item active"><i class="fas fa-th-large"></i><span>Dashboard</span></a>
                    <a href="/account/bookings" class="nav-item"><i class="fas fa-calendar-check"></i><span>My Bookings</span></a>
                    <a href="/account/wishlist" class="nav-item"><i class="fas fa-heart"></i><span>Wishlist</span></a>
                    <a href="/cart" class="nav-item"><i class="fas fa-shopping-cart"></i><span>Cart</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Account</div>
                    <a href="/account/profile" class="nav-item"><i class="fas fa-user"></i><span>Profile</span></a>
                    <a href="/account/settings" class="nav-item"><i class="fas fa-cog"></i><span>Settings</span></a>
                    <a href="/account/notifications" class="nav-item"><i class="fas fa-bell"></i><span>Notifications</span></a>
                </div>
                <div class="nav-section">
                    <div class="nav-section-title">Explore</div>
                    <a href="/packages" class="nav-item"><i class="fas fa-compass"></i><span>Browse Packages</span></a>
                    <a href="/" class="nav-item"><i class="fas fa-home"></i><span>Home</span></a>
                    <a href="#" class="nav-item" onclick="logout(event)"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
                </div>
            </nav>
            <div class="sidebar-footer">
                <div class="user-profile">
                    <div class="user-avatar" id="userAvatar">U</div>
                    <div class="user-info">
                        <div class="user-name" id="userName">User</div>
                        <div class="user-email" id="userEmail">user@email.com</div>
                    </div>
                </div>
            </div>
        </aside>

        <main class="main-content">
            <div class="page-header">
                <h1>Welcome back, <span id="welcomeName">User</span>!</h1>
                <p>Here's what's happening with your travel plans.</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon bookings"><i class="fas fa-suitcase"></i></div>
                    <div><div class="stat-value" id="totalBookings">0</div><div class="stat-label">Total Bookings</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon upcoming"><i class="fas fa-plane-departure"></i></div>
                    <div><div class="stat-value" id="upcomingTrips">0</div><div class="stat-label">Upcoming Trips</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon wishlist"><i class="fas fa-heart"></i></div>
                    <div><div class="stat-value" id="wishlistCount">0</div><div class="stat-label">In Wishlist</div></div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon spent"><i class="fas fa-dollar-sign"></i></div>
                    <div><div class="stat-value" id="totalSpent">$0</div><div class="stat-label">Total Spent</div></div>
                </div>
            </div>

            <div class="content-grid">
                <div class="card">
                    <div class="card-header">
                        <h3>Recent Bookings</h3>
                        <a href="/account/bookings">View All</a>
                    </div>
                    <div class="card-body" id="recentBookings">
                        <div class="empty-state">
                            <i class="fas fa-suitcase-rolling"></i>
                            <h4>No bookings yet</h4>
                            <p>Start exploring amazing destinations!</p>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="card-body">
                        <a href="/packages" class="quick-action">
                            <div class="quick-action-icon"><i class="fas fa-search"></i></div>
                            <span>Find Packages</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="/account/wishlist" class="quick-action">
                            <div class="quick-action-icon"><i class="fas fa-heart"></i></div>
                            <span>View Wishlist</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="/account/profile" class="quick-action">
                            <div class="quick-action-icon"><i class="fas fa-user-edit"></i></div>
                            <span>Edit Profile</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="/cart" class="quick-action">
                            <div class="quick-action-icon"><i class="fas fa-shopping-cart"></i></div>
                            <span>View Cart</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href = '/account/login'; }

        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('sidebarOverlay').classList.toggle('active');
        });
        document.getElementById('sidebarOverlay').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('active');
            this.classList.remove('active');
        });

        async function loadDashboard() {
            var token = localStorage.getItem('token');
            var user = JSON.parse(localStorage.getItem('user') || '{}');

            if (!token) { window.location.href = '/account/login'; return; }

            var firstName = user.firstName || user.name?.split(' ')[0] || 'User';
            document.getElementById('welcomeName').textContent = firstName;
            document.getElementById('userName').textContent = (user.firstName || '') + ' ' + (user.lastName || '');
            document.getElementById('userEmail').textContent = user.email || '';
            document.getElementById('userAvatar').textContent = firstName.charAt(0).toUpperCase();

            try {
                var response = await fetch('/api/account/dashboard', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                if (response.ok) {
                    var data = await response.json();
                    document.getElementById('totalBookings').textContent = data.totalBookings || 0;
                    document.getElementById('upcomingTrips').textContent = data.upcomingTrips || 0;
                    document.getElementById('wishlistCount').textContent = data.wishlistCount || 0;
                    document.getElementById('totalSpent').textContent = '$' + (data.totalSpent || 0).toLocaleString();

                    if (data.recentBookings && data.recentBookings.length > 0) {
                        renderBookings(data.recentBookings);
                    }
                }
            } catch (error) {
                console.error('Error:', error);
            }

            // Load bookings separately
            try {
                var bookingsRes = await fetch('/api/bookings/my', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                if (bookingsRes.ok) {
                    var result = await bookingsRes.json();
                    var bookings = result.data || result || [];
                    document.getElementById('totalBookings').textContent = bookings.length;
                    var upcoming = bookings.filter(function(b) { return b.status === 'Confirmed' || b.status === 1; });
                    document.getElementById('upcomingTrips').textContent = upcoming.length;
                    var total = bookings.reduce(function(sum, b) { return sum + (b.totalPrice || 0); }, 0);
                    document.getElementById('totalSpent').textContent = '$' + total.toLocaleString();
                    if (bookings.length > 0) { renderBookings(bookings.slice(0, 3)); }
                }
            } catch (error) { console.error('Bookings error:', error); }

            // Load wishlist count
            try {
                var wishRes = await fetch('/api/wishlist', {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                if (wishRes.ok) {
                    var wishData = await wishRes.json();
                    document.getElementById('wishlistCount').textContent = (wishData.data || wishData || []).length;
                }
            } catch (error) { console.error('Wishlist error:', error); }
        }

        function renderBookings(bookings) {
            var container = document.getElementById('recentBookings');
            if (!bookings || bookings.length === 0) return;

            var html = bookings.map(function(b) {
                var image = b.package?.imageUrl || b.imageUrl || 'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=200&q=80';
                var statusClass = b.status === 'Confirmed' || b.status === 1 ? 'confirmed' : (b.status === 'Cancelled' || b.status === 2 ? 'cancelled' : 'pending');
                var statusText = b.status === 'Confirmed' || b.status === 1 ? 'Confirmed' : (b.status === 'Cancelled' || b.status === 2 ? 'Cancelled' : 'Pending');
                return '<div class="booking-item">' +
                    '<img src="' + image + '" alt="' + (b.package?.destination || 'Destination') + '" class="booking-image" onerror="this.src=\'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=200&q=80\'">' +
                    '<div class="booking-info">' +
                        '<div class="booking-destination">' + (b.package?.destination || b.destination || 'Trip') + '</div>' +
                        '<div class="booking-meta"><span><i class="far fa-calendar"></i> ' + new Date(b.bookingDate || b.createdAt).toLocaleDateString() + '</span><span><i class="far fa-credit-card"></i> $' + (b.totalPrice || 0).toLocaleString() + '</span></div>' +
                        '<div class="booking-status"><span class="status-badge ' + statusClass + '">' + statusText + '</span></div>' +
                    '</div>' +
                '</div>';
            }).join('');
            container.innerHTML = html;
        }

        document.addEventListener('DOMContentLoaded', loadDashboard);
    </script>
</body>
</html>
