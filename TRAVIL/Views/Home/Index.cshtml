    <script>
        // Header scroll effect
        window.addEventListener('scroll', function() {
            var header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Check auth state
        function checkAuth() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            if (token && user) {
                document.getElementById('loginBtn').style.display = 'none';
                document.getElementById('registerBtn').style.display = 'none';
                document.getElementById('dashboardBtn').style.display = 'inline-flex';
            }
        }

        // Load packages
        async function loadPackages() {
            try {
                // First get ALL packages to count
                var allResponse = await fetch('/api/travelpackage');
                var allPackages = [];
                if (allResponse.ok) {
                    var allResult = await allResponse.json();
                    allPackages = allResult.data || allResult || [];

                    // Update dynamic package count
                    document.getElementById('totalPackages').textContent = allPackages.length;

                    // Count unique destinations/countries
                    var countries = new Set();
                    allPackages.forEach(function(pkg) {
                        if (pkg.country) countries.add(pkg.country);
                    });
                    document.getElementById('totalDestinations').textContent = countries.size + '+';
                }

                // Now try to get featured packages
                var response = await fetch('/api/packages/featured?count=6');
                if (response.ok) {
                    var result = await response.json();
                    var packages = result.data || result || [];
                    renderPackages(packages.length > 0 ? packages : allPackages.slice(0, 6));
                } else {
                    // Use the all packages we already fetched
                    renderPackages(allPackages.slice(0, 6));
                }
            } catch (error) {
                console.error('Error loading packages:', error);
                document.getElementById('totalPackages').textContent = '0';
                document.getElementById('totalDestinations').textContent = '0';
                document.getElementById('packagesGrid').innerHTML = '<p style="text-align: center; color: var(--color-silver);">Unable to load packages</p>';
            }
        }

        function renderPackages(packages) {
            var grid = document.getElementById('packagesGrid');
            if (!packages || packages.length === 0) {
                grid.innerHTML = '<p style="text-align: center; color: var(--color-silver);">No packages available</p>';
                return;
            }
            var html = packages.map(function(pkg) {
                var image = pkg.imageUrl || pkg.images?.[0]?.imageUrl || 'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80';
                var price = pkg.discountedPrice || pkg.price || 0;
                var rating = pkg.averageRating || 4.5;
                return '<div class="package-card">' +
                    '<div class="package-image">' +
                        '<img src="' + image + '" alt="' + (pkg.destination || 'Destination') + '" onerror="this.src=\'https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800&q=80\'">' +
                        (pkg.discountedPrice ? '<span class="package-badge">Sale</span>' : '') +
                        '<button class="package-wishlist"><i class="far fa-heart"></i></button>' +
                    '</div>' +
                    '<div class="package-content">' +
                        '<div class="package-destination"><i class="fas fa-map-marker-alt"></i> ' + (pkg.country || 'Worldwide') + '</div>' +
                        '<h3 class="package-title">' + (pkg.destination || 'Amazing Destination') + '</h3>' +
                        '<div class="package-meta">' +
                            '<span><i class="far fa-calendar"></i> ' + (pkg.duration || '7 Days') + '</span>' +
                            '<span><i class="far fa-user"></i> ' + (pkg.availableRooms || 10) + ' spots</span>' +
                        '</div>' +
                        '<div class="package-footer">' +
                            '<div class="package-price"><span class="amount">$' + price.toLocaleString() + '</span><span class="period">/person</span></div>' +
                            '<div class="package-rating"><i class="fas fa-star"></i><span>' + rating.toFixed(1) + '</span></div>' +
                        '</div>' +
                    '</div>' +
                '</div>';
            }).join('');
            grid.innerHTML = html;

            // Add click handlers
            document.querySelectorAll('.package-card').forEach(function(card, index) {
                card.style.cursor = 'pointer';
                card.addEventListener('click', function(e) {
                    if (!e.target.closest('.package-wishlist')) {
                        window.location.href = '/packages/' + (packages[index].packageId || packages[index].id);
                    }
                });
            });
        }

        // Load testimonials from database
        async function loadTestimonials() {
            try {
                // CORRECT endpoint: /api/review/site (singular "review")
                var response = await fetch('/api/review/site');
                if (response.ok) {
                    var result = await response.json();
                    var reviews = (result.data || result || []).slice(0, 3);
                    renderTestimonials(reviews);
                } else {
                    renderTestimonials([]);
                }
            } catch (error) {
                console.error('Error loading testimonials:', error);
                renderTestimonials([]);
            }
        }

        function renderTestimonials(reviews) {
            var grid = document.getElementById('testimonialsGrid');
            if (!reviews || reviews.length === 0) {
                // Show default testimonials if no reviews in database
                reviews = [
                    { rating: 5, comment: 'TRAVIL made our honeymoon absolutely perfect. Every detail was taken care of!', userName: 'Sarah M.', createdAt: '2024-01-15' },
                    { rating: 5, comment: 'Best travel agency I have ever used. Professional service and amazing destinations.', userName: 'James K.', createdAt: '2024-01-10' },
                    { rating: 5, comment: 'The attention to detail and customer service is unmatched. Highly recommended!', userName: 'Emily R.', createdAt: '2024-01-05' }
                ];
            }
            var html = reviews.map(function(review) {
                // Render stars based on actual rating (1-5)
                var rating = review.rating || 5;
                var stars = '';
                for (var i = 0; i < 5; i++) {
                    if (i < rating) {
                        stars += '<i class="fas fa-star"></i>';
                    } else {
                        stars += '<i class="far fa-star" style="opacity: 0.3;"></i>';
                    }
                }
                // Handle both API response formats: userName or user object
                var name = review.userName || (review.user ? (review.user.firstName + ' ' + (review.user.lastName || '')) : 'Happy Traveler');
                name = name.trim() || 'Happy Traveler';

                // Get initials for avatar
                var initials = name.split(' ').map(function(n) { return n.charAt(0); }).join('').toUpperCase().substring(0, 2);

                return '<div class="testimonial-card">' +
                    '<div class="testimonial-rating">' + stars + '</div>' +
                    '<p class="testimonial-text">"' + (review.comment || 'Amazing experience!') + '"</p>' +
                    '<div class="testimonial-author">' +
                        '<div class="testimonial-avatar" style="width: 48px; height: 48px; border-radius: 50%; background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark)); display: flex; align-items: center; justify-content: center; font-weight: 600; color: var(--color-midnight);">' + initials + '</div>' +
                        '<div>' +
                            '<div class="testimonial-name">' + name + '</div>' +
                            '<div class="testimonial-location">Verified Traveler</div>' +
                        '</div>' +
                    '</div>' +
                '</div>';
            }).join('');
            grid.innerHTML = html;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            checkAuth();
            loadPackages();
            loadTestimonials();
            loadStats();
        });

        // Load dynamic stats for homepage
        async function loadStats() {
            try {
                // Get package count
                var response = await fetch('/api/travelpackage');
                if (response.ok) {
                    var result = await response.json();
                    var packages = result.data || result || [];

                    // Update total packages count
                    var totalPackages = packages.length;
                    document.getElementById('totalPackages').textContent = totalPackages > 0 ? totalPackages : '25+';

                    // Count unique destinations/countries
                    var countries = new Set();
                    packages.forEach(function(pkg) {
                        if (pkg.country) countries.add(pkg.country);
                    });
                    document.getElementById('totalDestinations').textContent = countries.size > 0 ? countries.size + '+' : '50+';
                }
            } catch (error) {
                console.log('Stats loading error, using defaults');
                document.getElementById('totalPackages').textContent = '25+';
                document.getElementById('totalDestinations').textContent = '50+';
            }
        }
    </script>
