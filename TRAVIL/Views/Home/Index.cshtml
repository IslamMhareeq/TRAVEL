@{
    ViewData["Title"] = "Home";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TRAVIL - Premium Travel Experiences</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-charcoal: #21262d;
            --color-slate: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-white: #f0f6fc;
            --color-gold: #d4a853;
            --color-gold-muted: rgba(212, 168, 83, 0.3);
            --font-display: 'Playfair Display', serif;
            --font-body: 'Inter', sans-serif;
            --radius-md: 8px;
            --radius-lg: 12px;
            --radius-full: 9999px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
            --space-8: 64px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: var(--space-4) var(--space-6);
            background: rgba(13, 17, 23, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-slate);
        }

            .navbar .container {
                max-width: 1400px;
                margin: 0 auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

        .logo {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--color-gold), #b8943f);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .nav-brand span {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .nav-links {
            display: flex;
            gap: var(--space-6);
        }

            .nav-links a {
                color: var(--color-silver);
                text-decoration: none;
                font-size: 0.9375rem;
                font-weight: 500;
                transition: color 0.2s;
            }

                .nav-links a:hover, .nav-links a.active {
                    color: var(--color-gold);
                }

        .nav-auth {
            display: flex;
            gap: var(--space-3);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            font-size: 0.9375rem;
            font-weight: 500;
            text-decoration: none;
            border-radius: var(--radius-md);
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-ghost {
            background: transparent;
            color: var(--color-silver);
        }

            .btn-ghost:hover {
                color: var(--color-gold);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), #b8943f);
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 20px rgba(212, 168, 83, 0.3);
            }

        .btn-outline {
            background: transparent;
            border: 1px solid var(--color-slate);
            color: var(--color-white);
        }

            .btn-outline:hover {
                border-color: var(--color-gold);
                color: var(--color-gold);
            }

        .btn-sm {
            padding: var(--space-2) var(--space-4);
            font-size: 0.875rem;
        }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--color-white);
            font-size: 1.5rem;
            cursor: pointer;
        }

        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(rgba(13,17,23,0.7), rgba(13,17,23,0.9)), url('https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=1920&q=80') center/cover;
            text-align: center;
            padding: 120px var(--space-6) var(--space-8);
        }

        .hero-content {
            max-width: 900px;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            padding: var(--space-2) var(--space-4);
            background: var(--color-gold-muted);
            border: 1px solid var(--color-gold);
            border-radius: var(--radius-full);
            font-size: 0.8125rem;
            color: var(--color-gold);
            margin-bottom: var(--space-5);
        }

        .hero h1 {
            font-family: var(--font-display);
            font-size: 4rem;
            font-weight: 500;
            line-height: 1.1;
            margin-bottom: var(--space-5);
        }

        .hero p {
            font-size: 1.25rem;
            color: var(--color-silver);
            max-width: 600px;
            margin: 0 auto var(--space-6);
        }

        .hero-actions {
            display: flex;
            gap: var(--space-4);
            justify-content: center;
            flex-wrap: wrap;
        }

        .hero-stats {
            display: flex;
            gap: var(--space-8);
            justify-content: center;
            margin-top: var(--space-7);
            padding-top: var(--space-6);
            border-top: 1px solid var(--color-slate);
        }

        .hero-stat {
            text-align: center;
        }

        .hero-stat-value {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            color: var(--color-gold);
        }

        .hero-stat-label {
            font-size: 0.875rem;
            color: var(--color-silver);
        }

        .section {
            padding: var(--space-8) var(--space-6);
        }

            .section .container {
                max-width: 1400px;
                margin: 0 auto;
            }

        .section-header {
            text-align: center;
            margin-bottom: var(--space-7);
        }

            .section-header h2 {
                font-family: var(--font-display);
                font-size: 2.5rem;
                font-weight: 500;
                margin-bottom: var(--space-3);
            }

            .section-header p {
                color: var(--color-silver);
                font-size: 1.125rem;
            }

        .destinations-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-5);
        }

        .destination-card {
            position: relative;
            height: 320px;
            border-radius: var(--radius-lg);
            overflow: hidden;
            cursor: pointer;
        }

            .destination-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s;
            }

            .destination-card:hover img {
                transform: scale(1.1);
            }

            .destination-card::after {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
            }

        .destination-card-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: var(--space-5);
            z-index: 1;
        }

        .destination-card h3 {
            font-family: var(--font-display);
            font-size: 1.5rem;
            margin-bottom: 4px;
        }

        .destination-card p {
            color: var(--color-silver);
            font-size: 0.875rem;
        }

        .destination-card .price {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            padding: var(--space-2) var(--space-4);
            background: var(--color-gold);
            border-radius: var(--radius-full);
            font-weight: 700;
            color: var(--color-midnight);
            font-size: 0.875rem;
            z-index: 2;
        }

        .packages-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: var(--space-5);
        }

        .package-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
            transition: all 0.3s;
        }

            .package-card:hover {
                transform: translateY(-8px);
                border-color: var(--color-gold);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            }

        .package-card-image {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

            .package-card-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s;
            }

        .package-card:hover .package-card-image img {
            transform: scale(1.05);
        }

        .package-card-badge {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            padding: 4px 12px;
            background: var(--color-gold);
            color: var(--color-midnight);
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: var(--radius-full);
        }

        .package-card-content {
            padding: var(--space-5);
        }

        .package-card-location {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-gold);
            font-size: 0.8125rem;
            margin-bottom: var(--space-2);
        }

        .package-card-content h3 {
            font-family: var(--font-display);
            font-size: 1.375rem;
            margin-bottom: var(--space-3);
        }

        .package-card-meta {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-4);
        }

            .package-card-meta span {
                display: flex;
                align-items: center;
                gap: var(--space-2);
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        .package-card-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

        .package-card-price {
            font-family: var(--font-display);
            font-size: 1.375rem;
            font-weight: 600;
            color: var(--color-gold);
        }

            .package-card-price span {
                font-size: 0.875rem;
                color: var(--color-silver);
                font-weight: 400;
            }

            .package-card-price .old-price {
                text-decoration: line-through;
                color: var(--color-steel);
                font-size: 0.9rem;
                margin-right: var(--space-2);
            }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--space-5);
        }

        .feature-card {
            text-align: center;
            padding: var(--space-6);
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            transition: all 0.3s;
        }

            .feature-card:hover {
                border-color: var(--color-gold);
                transform: translateY(-4px);
            }

            .feature-card i {
                font-size: 2.5rem;
                color: var(--color-gold);
                margin-bottom: var(--space-4);
            }

            .feature-card h3 {
                font-size: 1.125rem;
                margin-bottom: var(--space-3);
            }

            .feature-card p {
                font-size: 0.875rem;
                color: var(--color-silver);
            }

        .footer {
            background: var(--color-navy);
            border-top: 1px solid var(--color-slate);
            padding: var(--space-8) var(--space-6) var(--space-6);
        }

            .footer .container {
                max-width: 1400px;
                margin: 0 auto;
            }

        .footer-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: var(--space-6);
            margin-bottom: var(--space-6);
        }

        .footer-brand .logo {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: var(--color-gold);
            margin-bottom: var(--space-4);
        }

        .footer-brand p {
            color: var(--color-silver);
            font-size: 0.9375rem;
            line-height: 1.7;
        }

        .footer-links h4 {
            font-size: 1rem;
            margin-bottom: var(--space-4);
            color: var(--color-white);
        }

        .footer-links a {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-silver);
            text-decoration: none;
            font-size: 0.9375rem;
            margin-bottom: var(--space-3);
            transition: color 0.2s;
        }

            .footer-links a:hover {
                color: var(--color-gold);
            }

        .footer-bottom {
            text-align: center;
            padding-top: var(--space-6);
            border-top: 1px solid var(--color-slate);
            color: var(--color-steel);
            font-size: 0.875rem;
        }

        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: var(--space-8);
            grid-column: 1 / -1;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .empty-state {
            text-align: center;
            padding: var(--space-8);
            color: var(--color-silver);
            grid-column: 1 / -1;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: var(--space-4);
                color: var(--color-steel);
            }

        @@media (max-width: 1024px) {
            .destinations-grid, .packages-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .features-grid, .footer-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .nav-links, .nav-auth {
                display: none;
            }

            .mobile-menu-btn {
                display: block;
            }

            .hero h1 {
                font-size: 2.5rem;
            }

            .hero-stats {
                flex-direction: column;
                gap: var(--space-4);
            }

            .destinations-grid, .packages-grid, .features-grid, .footer-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
