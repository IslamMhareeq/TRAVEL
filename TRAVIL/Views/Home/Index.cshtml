    <script>
        function updateNav() {
            var token = localStorage.getItem('token');
            var user = localStorage.getItem('user');
            if (token && user) {
                try {
                    var userData = JSON.parse(user);
                    var isAdmin = userData.role === 0 || userData.role === '0' || userData.role === 'Admin';
                    document.getElementById('navLinks').innerHTML = '<a href="/" class="active">Home</a><a href="/packages">Packages</a><a href="/destinations">Destinations</a><a href="/my-trips">My Trips</a><a href="#about">About</a>';
                    document.getElementById('navAuth').innerHTML = '<a href="' + (isAdmin ? '/admin/dashboard' : '/account/dashboard') + '" class="btn btn-ghost"><i class="fas fa-user"></i> Dashboard</a><a href="#" class="btn btn-outline" onclick="logout(event)">Logout</a>';
                } catch(e) {}
            }
        }
        function logout(e) { e.preventDefault(); localStorage.removeItem('token'); localStorage.removeItem('user'); location.reload(); }
        function getImg(i) { var imgs=['https://images.unsplash.com/photo-1537996194471-e657df975ab4?w=800','https://images.unsplash.com/photo-1499856871958-5b9627545d1a?w=800','https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?w=800','https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=800']; return imgs[i%imgs.length]; }
        async function load() {
            try {
                var r = await fetch('/api/travelpackage');
                if (r.ok) {
                    var d = await r.json(), pkgs = d.data || d || [];
                    document.getElementById('totalPackages').textContent = pkgs.length + '+';
                    var countries = {};
                    pkgs.forEach(function(p) { if (p.country) countries[p.country] = true; });
                    document.getElementById('totalDestinations').textContent = Object.keys(countries).length + '+';
                    if (pkgs.length > 0) {
                        var html = '';
                        pkgs.slice(0, 6).forEach(function(p, i) {
                            var dur = p.startDate && p.endDate ? Math.ceil((new Date(p.endDate) - new Date(p.startDate)) / 86400000) : 7;
                            var disc = p.discountedPrice && p.discountedPrice < p.price;
                            var price = disc ? p.discountedPrice : p.price;
                            html += '<div class="package-card"><div class="package-card-image"><img src="'+(p.imageUrl||getImg(i))+'" onerror="this.src=\''+getImg(i)+'\'">';
                            if (disc) html += '<span class="package-card-badge">Sale</span>';
                            html += '</div><div class="package-card-content"><div class="package-card-location"><i class="fas fa-map-marker-alt"></i> '+(p.country||'Unknown')+'</div><h3>'+(p.destination||'Package')+'</h3><div class="package-card-meta"><span><i class="far fa-clock"></i> '+dur+' Days</span><span><i class="fas fa-bed"></i> '+(p.availableRooms||0)+' Rooms</span></div><div class="package-card-footer"><div class="package-card-price">';
                            if (disc) html += '<span class="old-price">$'+Math.round(p.price)+'</span>';
                            html += '$'+Math.round(price)+' <span>/ person</span></div><a href="/packages/'+p.packageId+'" class="btn btn-primary btn-sm">View</a></div></div></div>';
                        });
                        document.getElementById('packagesGrid').innerHTML = html;
                        var ctrs = {};
                        pkgs.forEach(function(p, i) {
                            if (p.country && !ctrs[p.country]) ctrs[p.country] = { country: p.country, destination: p.destination, img: p.imageUrl||getImg(i), price: p.discountedPrice||p.price, count: 1 };
                            else if (p.country) { ctrs[p.country].count++; if ((p.discountedPrice||p.price) < ctrs[p.country].price) ctrs[p.country].price = p.discountedPrice||p.price; }
                        });
                        var dh = '';
                        Object.values(ctrs).slice(0,4).forEach(function(d, i) {
                            dh += '<div class="destination-card" onclick="location.href=\'/destinations\'"><img src="'+d.img+'" onerror="this.src=\''+getImg(i)+'\'"><span class="price">From $'+Math.round(d.price)+'</span><div class="destination-card-content"><h3>'+d.destination+', '+d.country+'</h3><p>'+d.count+' Package'+(d.count>1?'s':'')+'</p></div></div>';
                        });
                        document.getElementById('destinationsGrid').innerHTML = dh || '<div class="empty-state"><i class="fas fa-globe"></i><p>Coming soon</p></div>';
                    }
                }
            } catch(e) { console.error(e); }
        }
        document.addEventListener('DOMContentLoaded', function() { updateNav(); load(); });
    </script>
