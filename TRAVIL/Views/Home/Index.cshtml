@{
    ViewData["Title"] = "Home";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRAVIL - Luxury Travel Experiences</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --color-midnight: #0d1117;
            --color-navy: #161b22;
            --color-slate: #21262d;
            --color-charcoal: #30363d;
            --color-steel: #484f58;
            --color-silver: #8b949e;
            --color-mist: #c9d1d9;
            --color-white: #ffffff;
            --color-gold: #d4a853;
            --color-gold-dark: #b8943f;
            --color-gold-muted: rgba(212, 168, 83, 0.15);
            --font-display: 'Cormorant Garamond', serif;
            --font-body: 'Outfit', sans-serif;
            --space-1: 4px;
            --space-2: 8px;
            --space-3: 12px;
            --space-4: 16px;
            --space-5: 24px;
            --space-6: 32px;
            --space-7: 48px;
            --space-8: 64px;
            --radius-sm: 6px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-full: 9999px;
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-body);
            background: var(--color-midnight);
            color: var(--color-white);
            line-height: 1.6;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: var(--space-4) var(--space-6);
            background: rgba(13, 17, 23, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid transparent;
            transition: all var(--transition-normal);
        }

            .header.scrolled {
                background: var(--color-navy);
                border-bottom-color: var(--color-slate);
            }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            text-decoration: none;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-midnight);
        }

        .logo-text {
            font-family: var(--font-display);
            font-size: 1.75rem;
            font-weight: 500;
            color: var(--color-white);
            letter-spacing: 0.1em;
        }

        .nav {
            display: flex;
            align-items: center;
            gap: var(--space-6);
        }

        .nav-link {
            color: var(--color-mist);
            text-decoration: none;
            font-size: 0.9375rem;
            font-weight: 400;
            transition: color var(--transition-fast);
        }

            .nav-link:hover {
                color: var(--color-gold);
            }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-2);
            padding: var(--space-3) var(--space-5);
            font-family: var(--font-body);
            font-size: 0.9375rem;
            font-weight: 500;
            text-decoration: none;
            border-radius: var(--radius-md);
            border: none;
            cursor: pointer;
            transition: all var(--transition-fast);
        }

        .btn-ghost {
            background: transparent;
            color: var(--color-mist);
        }

            .btn-ghost:hover {
                color: var(--color-gold);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-gold), var(--color-gold-dark));
            color: var(--color-midnight);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 20px rgba(212, 168, 83, 0.3);
            }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--color-white);
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Hero */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: var(--space-8) var(--space-6);
            background: linear-gradient(180deg, var(--color-midnight) 0%, var(--color-navy) 100%);
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('https://images.unsplash.com/photo-1506929562872-bb421503ef21?w=1920&q=80') center/cover;
                opacity: 0.15;
            }

        .hero-content {
            position: relative;
            text-align: center;
            max-width: 900px;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: var(--space-2);
            background: var(--color-gold-muted);
            color: var(--color-gold);
            padding: var(--space-2) var(--space-4);
            border-radius: var(--radius-full);
            font-size: 0.8125rem;
            font-weight: 500;
            margin-bottom: var(--space-5);
        }

        .hero h1 {
            font-family: var(--font-display);
            font-size: clamp(3rem, 8vw, 5rem);
            font-weight: 500;
            line-height: 1.1;
            margin-bottom: var(--space-5);
        }

            .hero h1 span {
                color: var(--color-gold);
            }

        .hero p {
            font-size: 1.25rem;
            color: var(--color-silver);
            max-width: 600px;
            margin: 0 auto var(--space-6);
        }

        .hero-actions {
            display: flex;
            gap: var(--space-4);
            justify-content: center;
            flex-wrap: wrap;
        }

        .hero-stats {
            display: flex;
            gap: var(--space-8);
            justify-content: center;
            margin-top: var(--space-8);
            padding-top: var(--space-6);
            border-top: 1px solid var(--color-slate);
        }

        .stat {
            text-align: center;
        }

        .stat-value {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            color: var(--color-gold);
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--color-silver);
        }

        /* Featured Section */
        .section {
            padding: var(--space-8) var(--space-6);
        }

        .section-header {
            text-align: center;
            margin-bottom: var(--space-7);
        }

            .section-header h2 {
                font-family: var(--font-display);
                font-size: 2.5rem;
                font-weight: 500;
                margin-bottom: var(--space-3);
            }

            .section-header p {
                color: var(--color-silver);
                max-width: 600px;
                margin: 0 auto;
            }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Package Cards */
        .packages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: var(--space-5);
        }

        .package-card {
            background: var(--color-navy);
            border: 1px solid var(--color-slate);
            border-radius: var(--radius-lg);
            overflow: hidden;
            transition: all var(--transition-normal);
        }

            .package-card:hover {
                transform: translateY(-8px);
                border-color: var(--color-gold);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            }

        .package-image {
            position: relative;
            height: 220px;
            overflow: hidden;
        }

            .package-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform var(--transition-normal);
            }

        .package-card:hover .package-image img {
            transform: scale(1.05);
        }

        .package-badge {
            position: absolute;
            top: var(--space-4);
            left: var(--space-4);
            background: var(--color-gold);
            color: var(--color-midnight);
            padding: var(--space-1) var(--space-3);
            border-radius: var(--radius-full);
            font-size: 0.75rem;
            font-weight: 600;
        }

        .package-wishlist {
            position: absolute;
            top: var(--space-4);
            right: var(--space-4);
            width: 36px;
            height: 36px;
            background: rgba(0, 0, 0, 0.5);
            border: none;
            border-radius: var(--radius-full);
            color: var(--color-white);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

            .package-wishlist:hover {
                background: var(--color-gold);
                color: var(--color-midnight);
            }

        .package-content {
            padding: var(--space-5);
        }

        .package-destination {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            color: var(--color-gold);
            font-size: 0.8125rem;
            font-weight: 500;
            margin-bottom: var(--space-2);
        }

        .package-title {
            font-family: var(--font-display);
            font-size: 1.375rem;
            font-weight: 500;
            margin-bottom: var(--space-3);
        }

        .package-meta {
            display: flex;
            gap: var(--space-4);
            margin-bottom: var(--space-4);
        }

            .package-meta span {
                display: flex;
                align-items: center;
                gap: var(--space-2);
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        .package-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: var(--space-4);
            border-top: 1px solid var(--color-slate);
        }

        .package-price {
            font-family: var(--font-display);
        }

            .package-price .amount {
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--color-gold);
            }

            .package-price .period {
                font-size: 0.8125rem;
                color: var(--color-silver);
            }

        .package-rating {
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }

            .package-rating i {
                color: var(--color-gold);
                font-size: 0.875rem;
            }

            .package-rating span {
                font-size: 0.875rem;
                color: var(--color-mist);
            }

        /* Testimonials */
        .testimonials {
            background: var(--color-navy);
        }

        .testimonials-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: var(--space-5);
        }

        .testimonial-card {
            background: var(--color-slate);
            border-radius: var(--radius-lg);
            padding: var(--space-6);
        }

        .testimonial-rating {
            display: flex;
            gap: var(--space-1);
            margin-bottom: var(--space-4);
        }

            .testimonial-rating i {
                color: var(--color-gold);
            }

        .testimonial-text {
            font-size: 1rem;
            line-height: 1.8;
            color: var(--color-mist);
            margin-bottom: var(--space-5);
        }

        .testimonial-author {
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .testimonial-avatar {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-full);
            object-fit: cover;
        }

        .testimonial-name {
            font-weight: 500;
        }

        .testimonial-location {
            font-size: 0.8125rem;
            color: var(--color-silver);
        }

        /* Footer */
        .footer {
            background: var(--color-midnight);
            border-top: 1px solid var(--color-slate);
            padding: var(--space-8) var(--space-6);
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr repeat(3, 1fr);
            gap: var(--space-7);
        }

        .footer-brand p {
            color: var(--color-silver);
            margin-top: var(--space-4);
            max-width: 300px;
        }

        .footer-section h4 {
            font-family: var(--font-display);
            font-size: 1.125rem;
            font-weight: 500;
            margin-bottom: var(--space-4);
        }

        .footer-links {
            list-style: none;
        }

            .footer-links li {
                margin-bottom: var(--space-3);
            }

            .footer-links a {
                color: var(--color-silver);
                text-decoration: none;
                font-size: 0.9375rem;
                transition: color var(--transition-fast);
            }

                .footer-links a:hover {
                    color: var(--color-gold);
                }

        .footer-bottom {
            max-width: 1400px;
            margin: var(--space-6) auto 0;
            padding-top: var(--space-6);
            border-top: 1px solid var(--color-slate);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .footer-bottom p {
                color: var(--color-steel);
                font-size: 0.875rem;
            }

        .social-links {
            display: flex;
            gap: var(--space-4);
        }

            .social-links a {
                color: var(--color-silver);
                font-size: 1.25rem;
                transition: color var(--transition-fast);
            }

                .social-links a:hover {
                    color: var(--color-gold);
                }

        /* Loading */
        .loading {
            display: flex;
            justify-content: center;
            padding: var(--space-8);
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--color-slate);
            border-top-color: var(--color-gold);
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .nav {
                display: none;
            }

            .mobile-menu-btn {
                display: block;
            }

            .footer-content {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .hero-stats {
                flex-direction: column;
                gap: var(--space-5);
            }

            .packages-grid, .testimonials-grid {
                grid-template-columns: 1fr;
            }

            .footer-content {
                grid-template-columns: 1fr;
            }

            .footer-bottom {
                flex-direction: column;
                gap: var(--space-4);
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header" id="header">
        <div class="header-content">
            <a href="/" class="logo">
                <div class="logo-icon"><i class="fas fa-paper-plane"></i></div>
